@import "../Internal/_Theme"

// selector
selector--scroller-----normal        = '.unity-scroller--vertical'
selector--field--------normal        = '.unity-scroller--vertical .unity-base-slider'
selector--field-input--normal        = '.unity-scroller--vertical .unity-base-slider       .unity-base-slider__input'
selector--container----normal        = '.unity-scroller--vertical .unity-base-slider       .unity-base-slider__input #unity-drag-container'
selector--tracker------normal        = '.unity-scroller--vertical .unity-base-slider       .unity-base-slider__input #unity-drag-container        #unity-tracker'
selector--tracker------hover         = '.unity-scroller--vertical .unity-base-slider       .unity-base-slider__input #unity-drag-container:hover  #unity-tracker'
selector--tracker------active        = '.unity-scroller--vertical .unity-base-slider       .unity-base-slider__input #unity-drag-container:active #unity-tracker'
selector--dragger------normal        = '.unity-scroller--vertical .unity-base-slider       .unity-base-slider__input #unity-drag-container        #unity-dragger'
selector--dragger------hover         = '.unity-scroller--vertical .unity-base-slider       .unity-base-slider__input #unity-drag-container:hover  #unity-dragger:hover'
selector--dragger------active        = '.unity-scroller--vertical .unity-base-slider       .unity-base-slider__input #unity-drag-container:active #unity-dragger:active'
selector--dragger------focus         = '.unity-scroller--vertical .unity-base-slider:focus .unity-base-slider__input #unity-drag-container        #unity-dragger'
selector--dragger------focus--hover  = '.unity-scroller--vertical .unity-base-slider:focus .unity-base-slider__input #unity-drag-container:hover  #unity-dragger:hover'
selector--dragger------focus--active = '.unity-scroller--vertical .unity-base-slider:focus .unity-base-slider__input #unity-drag-container:active #unity-dragger:active'
selector--low-button---normal        = '.unity-scroller--vertical #unity-low-button'
selector--low-button---hover         = '.unity-scroller--vertical #unity-low-button:hover'
selector--low-button---active        = '.unity-scroller--vertical #unity-low-button:active'
selector--low-button---focus         = '.unity-scroller--vertical #unity-low-button:focus'
selector--low-button---focus--hover  = '.unity-scroller--vertical #unity-low-button:focus:hover'
selector--low-button---focus--active = '.unity-scroller--vertical #unity-low-button:focus:active'
selector--high-button--normal        = '.unity-scroller--vertical #unity-high-button'
selector--high-button--hover         = '.unity-scroller--vertical #unity-high-button:hover'
selector--high-button--active        = '.unity-scroller--vertical #unity-high-button:active'
selector--high-button--focus         = '.unity-scroller--vertical #unity-high-button:focus'
selector--high-button--focus--hover  = '.unity-scroller--vertical #unity-high-button:focus:hover'
selector--high-button--focus--active = '.unity-scroller--vertical #unity-high-button:focus:active'

// view
add-style(scroller-----normal       ) theme(                                )
add-style(field--------normal       ) theme(                                )
add-style(field-input--normal       ) theme(                                )
add-style(container----normal       ) theme(                                )
add-style(tracker------normal       ) theme(dark-element-------normal       )
add-style(tracker------hover        ) theme(dark-element-------hover        )
add-style(tracker------active       ) theme(dark-element-------active       )
add-style(dragger------normal       ) theme(button-------------normal       )
add-style(dragger------hover        ) theme(button-------------hover        )
add-style(dragger------active       ) theme(button-------------active       )
add-style(dragger------focus        ) theme(button-------------focus        )
add-style(dragger------focus--hover ) theme(button-------------focus--hover )
add-style(dragger------focus--active) theme(button-------------focus--active)
add-style(low-button---normal       ) theme(up-arrow-button----normal       )
add-style(low-button---hover        ) theme(up-arrow-button----hover        )
add-style(low-button---active       ) theme(up-arrow-button----active       )
add-style(low-button---focus        ) theme(up-arrow-button----focus        )
add-style(low-button---focus--hover ) theme(up-arrow-button----focus--hover )
add-style(low-button---focus--active) theme(up-arrow-button----focus--active)
add-style(high-button--normal       ) theme(down-arrow-button--normal       )
add-style(high-button--hover        ) theme(down-arrow-button--hover        )
add-style(high-button--active       ) theme(down-arrow-button--active       )
add-style(high-button--focus        ) theme(down-arrow-button--focus        )
add-style(high-button--focus--hover ) theme(down-arrow-button--focus--hover )
add-style(high-button--focus--active) theme(down-arrow-button--focus--active)
flush()

// layout
add-style(scroller-----normal       ) layout(null,     auto, auto, (0px 2px 2px 2px), (0px), (0px))
add-style(field--------normal       ) layout(null,     auto, auto, (0px 0px 2px 2px), (0px), (0px))
add-style(field-input--normal       ) layout(null,     auto, auto, (0px            ), (0px), (0px))
add-style(container----normal       ) layout(null,     auto, auto, (0px            ), (0px), (0px))
add-style(tracker------normal       ) layout(null,     24px, auto, (0px            ), (1px), (0px))
add-style(dragger------normal       ) layout(absolute, 24px, auto, (0px            ), (1px), (0px))
add-style(low-button---normal       ) layout(null,     24px, 24px, (0px            ), (1px), (0px))
add-style(high-button--normal       ) layout(null,     24px, 24px, (0px            ), (1px), (0px))
flush()

// flex
add-style(scroller-----normal       ) flex(0, 0, auto, auto) flex2(column, flex-start, center)
add-style(field--------normal       ) flex(1, 1, auto, auto) flex2(column, flex-start, center)
add-style(field-input--normal       ) flex(1, 1, auto, auto) flex2(column, flex-start, center)
add-style(container----normal       ) flex(1, 1, auto, auto) flex2(column, flex-start, center)
add-style(tracker------normal       ) flex(1, 1, auto, auto)
add-style(dragger------normal       ) flex(0, 1, auto, auto)
add-style(low-button---normal       ) flex(0, 0, auto, auto)
add-style(high-button--normal       ) flex(0, 0, auto, auto)
flush()
