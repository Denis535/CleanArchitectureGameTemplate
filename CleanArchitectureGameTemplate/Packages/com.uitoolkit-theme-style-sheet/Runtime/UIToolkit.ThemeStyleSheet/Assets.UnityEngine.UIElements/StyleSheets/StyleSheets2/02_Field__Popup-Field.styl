// selector
selector--text---------normal                 = '.unity-base-popup-field                      .unity-base-popup-field__input .unity-base-popup-field__text'
selector--arrow--------normal                 = '.unity-base-popup-field                      .unity-base-popup-field__input .unity-base-popup-field__arrow'

// view
add-style(text---normal) theme(                                  )
add-style(arrow--normal) theme(dropdown-field-input-arrow--normal)
flush()

// layout
add-style(text---normal) layout(null, auto, auto, (0px), (0px), (0px))
add-style(arrow--normal) layout(null, 12px, 12px, (2px), (0px), (0px))
flush()

// flex
add-style(text---normal) flex(1, 1, auto, auto)
add-style(arrow--normal) flex(0, 1, auto, auto)
flush()
