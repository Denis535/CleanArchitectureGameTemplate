@import "../_Utils"

// tab-header
theme--tab-header------------normal         = hsla(  0,   0%,  90%, 1.00) bg(hsla( 60, 1%, 25%, 1.00) img(null, null)) bd(hsla( 30, 10%, 30%, 1.00) 4px)
