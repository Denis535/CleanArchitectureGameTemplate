@import "../Internal/_Theme"

// selector
selector--scroll-view---------------------normal = '.unity-scroll-view'
selector--scroll-view---------------------hover  = '.unity-scroll-view:hover'
selector--light2-scroll-view--------------normal = '.unity-scroll-view.light2'
selector--light2-scroll-view--------------hover  = '.unity-scroll-view.light2:hover'
selector--light-scroll-view---------------normal = '.unity-scroll-view.light'
selector--light-scroll-view---------------hover  = '.unity-scroll-view.light:hover'
selector--gray-scroll-view----------------normal = '.unity-scroll-view.gray'
selector--gray-scroll-view----------------hover  = '.unity-scroll-view.gray:hover'
selector--dark-scroll-view----------------normal = '.unity-scroll-view.dark'
selector--dark-scroll-view----------------hover  = '.unity-scroll-view.dark:hover'
selector--dark2-scroll-view---------------normal = '.unity-scroll-view.dark2'
selector--dark2-scroll-view---------------hover  = '.unity-scroll-view.dark2:hover'
selector--viewport-and-vertical-scroller--normal = '.unity-scroll-view         #unity-content-and-vertical-scroll-container'
selector--viewport------------------------normal = '.unity-scroll-view         #unity-content-viewport'
selector--small-viewport------------------normal = '.unity-scroll-view.small   #unity-content-viewport'
selector--medium-viewport-----------------normal = '.unity-scroll-view.medium  #unity-content-viewport'
selector--large-viewport------------------normal = '.unity-scroll-view.large   #unity-content-viewport'
selector--reverse-viewport----------------normal = '.unity-scroll-view.reverse #unity-content-viewport'
selector--content-------------------------normal = '.unity-scroll-view         #unity-content-container'

// view
add-style(scroll-view---------------------normal) theme(scope---------normal)
add-style(scroll-view---------------------hover ) theme(scope---------hover )
add-style(light2-scroll-view--------------normal) theme(light2-scope--normal)
add-style(light2-scroll-view--------------hover ) theme(light2-scope--hover )
add-style(light-scroll-view---------------normal) theme(light-scope---normal)
add-style(light-scroll-view---------------hover ) theme(light-scope---hover )
add-style(gray-scroll-view----------------normal) theme(gray-scope----normal)
add-style(gray-scroll-view----------------hover ) theme(gray-scope----hover )
add-style(dark-scroll-view----------------normal) theme(dark-scope----normal)
add-style(dark-scroll-view----------------hover ) theme(dark-scope----hover )
add-style(dark2-scroll-view---------------normal) theme(dark2-scope---normal)
add-style(dark2-scroll-view---------------hover ) theme(dark2-scope---hover )
add-style(viewport-and-vertical-scroller--normal) theme(                    ) 
add-style(viewport------------------------normal) theme(                    ) property(overflow, hidden)
add-style(content-------------------------normal) theme(                    )
flush()

// layout
add-style(scroll-view---------------------normal) layout(null, auto, auto, (4px                ), (1px), (0px))
add-style(viewport-and-vertical-scroller--normal) layout(null, auto, auto, (0px                ), (0px), (0px))
add-style(viewport------------------------normal) layout(null, auto, auto, (0px                ), (0px), (0px))
add-style(small-viewport------------------normal) layout(null, auto, auto, (6px  6px  5px  5px ), (0px), (0px))
add-style(medium-viewport-----------------normal) layout(null, auto, auto, (12px 12px 10px 10px), (0px), (0px))
add-style(large-viewport------------------normal) layout(null, auto, auto, (24px 24px 20px 20px), (0px), (0px))
add-style(content-------------------------normal) layout(null, auto, auto, (0px                ), (0px), (0px))
flush()

// flex
add-style(scroll-view---------------------normal) flex(0, 1, auto, auto) flex2(column,         flex-start, stretch)
add-style(viewport-and-vertical-scroller--normal) flex(1, 1, auto, auto) flex2(row,            flex-start, stretch)
add-style(viewport------------------------normal) flex(1, 1, auto, auto) flex2(column,         flex-start, stretch)
add-style(reverse-viewport----------------normal) flex(1, 1, auto, auto) flex2(column-reverse, flex-start, stretch)
add-style(content-------------------------normal) flex(1, 1, auto, auto) flex2(column,         flex-start, stretch)
flush()
