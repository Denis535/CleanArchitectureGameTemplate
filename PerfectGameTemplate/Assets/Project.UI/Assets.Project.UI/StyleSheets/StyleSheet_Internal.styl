// create-view
create-view(foreground, background, border)
    return {
        foreground: foreground,
        background: background,
        border:     border
    }
create-foreground(color, font, text)
    color = get-theme-color(color)
    return {
        color: color,
        font:  font,
        text:  text
    }
create-background(color, image)
    color = get-theme-background-color(color)
    image.color = get-theme-background-image-color(image.color) if image != null
    return {
        color: color,
        image: image
    }
create-border(color, radius)
    color = get-theme-border-color(color)
    radius = get-theme-border-radius(radius)
    return {
        color:  color,
        radius: radius
    }
fnt(url = null, size = null, style = null)
    return {
        url:   url,
        size:  size,
        style: style
    }
txt(align = null, outline = null, shadow = null)
    return {
        align:   align,
        outline: outline,
        shadow:  shadow
    }
img(url = null, color = null, scale-mode = null, slice-left = null, slice-right = null, slice-top = null, slice-bottom = null, slice-scale = null)
    return {
        url:          url,
        color:        color,
        scale-mode:   scale-mode,
        slice-left:   slice-left,
        slice-right:  slice-right,
        slice-top:    slice-top,
        slice-bottom: slice-bottom,
        slice-scale:  slice-scale
    }
// create-layout
create-layout(position, size, box)
    return {
        position: position,
        size:     size,
        box:      box
    }
create-position(position, left = null, right = null, top = null, bottom = null)
    return {
        position: position[0],
        left:     left   or position[1],
        right:    right  or position[2],
        top:      top    or position[3],
        bottom:   bottom or position[4]
    }
create-size(width, height)
    return {
        width:  width,
        height: height
    }
create-box(margin, border, padding)
    return {
        margin:  margin,
        border:  border,
        padding: padding
    }

// add-view-skin
add-view-skin(skin, font = null, text = null, image = null, alpha = 1, alpha2 = (alpha+3)/4)
    if (skin != null)
        view = get-view(skin)
        view.background.color = alpha(view.background.color, alpha(view.background.color) * alpha ) if view.background.color != null
        view.border.color     = alpha(view.border.color,     alpha(view.border.color)     * alpha2) if view.border.color     != null
        add-view view
    add-view create-view(create-foreground(null, font, text), create-background(null, image), create-border(null, null))
// add-layout-skin
add-layout-skin(skin, position = null, width = null, height = null, margin = null, border = null, padding = null)
    if (skin != null)
        layout = get-layout(skin)
        add-layout layout
    add-layout create-layout(create-position(position), create-size(width, height), create-box(margin, border, padding))

// get-theme
get-theme-color(key)
    if key != null
        return get(theme, 'color',                  key) or key
    null
// get-theme
get-theme-background-color(key)
    if key != null
        return get(theme, 'background-color',       key) or get(theme, 'color', key) or key
    null
// get-theme
get-theme-background-image-color(key)
    if key != null
        return get(theme, 'background-image-color', key) or get(theme, 'color', key) or key
    null
// get-theme
get-theme-border-color(key)
    if key != null
        return get(theme, 'border-color',           key) or get(theme, 'color', key) or key
    null
// get-theme
get-theme-border-radius(key)
    if key != null
        return get(theme, 'border-radius',          key) or key
    null

// get-view
get-view(key)
    if key != null
        result = get(views, key) or error('Views has no view: ' + get-string(key))
        return clone(result)
    null
// get-layout
get-layout(key)
    if key != null
        result = get(layouts, key) or error('Layouts has no layout: ' + get-string(key))
        return clone(result)
    null