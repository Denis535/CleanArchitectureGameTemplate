@import "../StyleSheet__Theme"

// field
skin--field              = null
skin--field-label        = null
skin--field-input        = null
skin--checkmark          = create-view-skin(null, (component--dark component--dark      ), (component--dark component))
skin--checkmark--checked = create-view-skin(null, (component--dark checkmark-icon--light), (component--dark component))

// field
misc--field              = null
misc--field-label        = null
misc--field-input        = null
misc--checkmark          = create-layout-skin(null, 16px 16px, 0px, 1px, 0px), create-flex(0, 1, auto, auto)

// toggle-field
.unity-toggle
    add-skin field
    add-misc field
    &__label
        add-skin field-label
        add-misc field-label
    &__input
        add-skin field-input
        add-misc field-input
    &__input #unity-checkmark
        add-skin checkmark
        add-misc checkmark

// toggle-field
.unity-toggle
    &__input:checked #unity-checkmark
        add-skin checkmark--checked
