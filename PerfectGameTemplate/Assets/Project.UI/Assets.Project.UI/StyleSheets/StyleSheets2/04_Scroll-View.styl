@import "../Internal/__Theme"

// scroll-view
view--scroll-view--light2            = create-view-skin(light, (view--light2     view--light2           ), (view--light2     view     ))
view--scroll-view--light             = create-view-skin(light, (view--light      view--light            ), (view--light      view     ))
view--scroll-view                    = create-view-skin(light, (view--gray       view--gray             ), (view--gray       view     ))
view--scroll-view--dark              = create-view-skin(light, (view--dark       view--dark             ), (view--dark       view     ))
view--scroll-view--dark2             = create-view-skin(light, (view--dark2      view--dark2            ), (view--dark2      view     ))
view--viewport-and-vertical-scroller = create-view-skin(null,  (element          element                ), (element          element  ))
view--viewport                       = create-view-skin(null,  (element          element                ), (element          element  ))
view--content                        = create-view-skin(null,  (element          element                ), (element          element  ))
// horizontal-scroll
view--horizontal-scroller            = create-view-skin(null,  (element          element                ), (element          element  ))
view--horizontal-slider-field        = create-view-skin(null,  (element          element                ), (element          element  ))
view--horizontal-slider-field-input  = create-view-skin(null,  (element          element                ), (element          element  ))
view--horizontal-container           = create-view-skin(null,  (element          element                ), (element          element  ))
view--horizontal-tracker             = create-view-skin(null,  (element--dark    element--dark          ), (element--dark    element  ))
view--horizontal-dragger             = create-view-skin(null,  (element--light   element--light         ), (element--light   element  ))
view--horizontal-low-button          = create-view-skin(null,  (element--light   left-arrow-icon--light ), (element--light   element  ))
view--horizontal-high-button         = create-view-skin(null,  (element--light   right-arrow-icon--light), (element--light   element  ))
// vertical-scroll
view--vertical-scroller              = create-view-skin(null,  (element          element                ), (element          element  ))
view--vertical-slider-field          = create-view-skin(null,  (element          element                ), (element          element  ))
view--vertical-slider-field-input    = create-view-skin(null,  (element          element                ), (element          element  ))
view--vertical-container             = create-view-skin(null,  (element          element                ), (element          element  ))
view--vertical-tracker               = create-view-skin(null,  (element--dark    element--dark          ), (element--dark    element  ))
view--vertical-dragger               = create-view-skin(null,  (element--light   element--light         ), (element--light   element  ))
view--vertical-low-button            = create-view-skin(null,  (element--light   up-arrow-icon--light   ), (element--light   element  ))
view--vertical-high-button           = create-view-skin(null,  (element--light   down-arrow-icon--light ), (element--light   element  ))

// scroll-view
layout--scroll-view                    = create-layout-skin(null,     auto auto, margin: 4px,             border: 1px,  padding: 0px                ), create-flex(0, 1, auto, auto), create-flex2(column, flex-start, stretch)
layout--viewport-and-vertical-scroller = create-layout-skin(null,     auto auto, margin: 0px,             border: 0px,  padding: 0px                ), create-flex(1, 1, auto, auto), create-flex2(row,    flex-start, stretch)
layout--viewport                       = create-layout-skin(null,     auto auto, margin: 0px,             border: 0px,  padding: 0px                ), create-flex(1, 1, auto, auto), create-flex2(column, flex-start, stretch)
layout--viewport--reverse              =                                                                                                               create-flex(1, 1, auto, auto), create-flex2(column-reverse, flex-start, stretch)
layout--content                        = create-layout-skin(null,     auto auto, margin: 0px,             border: 0px,  padding: 0px                ), create-flex(0, 0, auto, auto), create-flex2(column, flex-start, stretch)
layout--content--small                 = create-layout-skin(null,     auto auto, margin: 0px,             border: 0px,  padding: 6px  6px  5px  5px ), create-flex(0, 0, auto, auto)
layout--content--medium                = create-layout-skin(null,     auto auto, margin: 0px,             border: 0px,  padding: 12px 12px 10px 10px), create-flex(0, 0, auto, auto)
layout--content--large                 = create-layout-skin(null,     auto auto, margin: 0px,             border: 0px,  padding: 24px 24px 20px 20px), create-flex(0, 0, auto, auto)
// horizontal-scroller
layout--horizontal-scroller            = create-layout-skin(null,     auto auto, margin: 0px,             border: 0px,  padding: 0px                ), create-flex(0, 0, auto, auto), create-flex2(row, flex-start, center)
layout--horizontal-slider-field        = create-layout-skin(null,     auto auto, margin: 0px,             border: 0px,  padding: 0px                ), create-flex(1, 1, auto, auto), create-flex2(row, flex-start, center)
layout--horizontal-slider-field-input  = create-layout-skin(null,     auto auto, margin: 0px,             border: 0px,  padding: 0px                ), create-flex(1, 1, auto, auto), create-flex2(row, flex-start, center)
layout--horizontal-container           = create-layout-skin(null,     auto auto, margin: 2px 2px 0px 0px, border: 0px,  padding: 0px                ), create-flex(1, 1, auto, auto), create-flex2(row, flex-start, center)
layout--horizontal-tracker             = create-layout-skin(null,     auto 24px, margin: 0px,             border: 1px,  padding: 0px                ), create-flex(1, 1, auto, auto)
layout--horizontal-dragger             = create-layout-skin(absolute, auto 24px, margin: 0px,             border: 1px,  padding: 0px                ), create-flex(0, 1, auto, auto)
layout--horizontal-low-button          = create-layout-skin(null,     24px 24px, margin: 0px,             border: 1px,  padding: 0px                ), create-flex(0, 0, auto, auto)
layout--horizontal-high-button         = create-layout-skin(null,     24px 24px, margin: 0px,             border: 1px,  padding: 0px                ), create-flex(0, 0, auto, auto)
// vertical-scroller            
layout--vertical-scroller              = create-layout-skin(null,     auto auto, margin: 0px,             border: 0px,  padding: 0px                ), create-flex(0, 0, auto, auto), create-flex2(column, flex-start, center)
layout--vertical-slider-field          = create-layout-skin(null,     auto auto, margin: 0px,             border: 0px,  padding: 0px                ), create-flex(1, 1, auto, auto), create-flex2(column, flex-start, center)
layout--vertical-slider-field-input    = create-layout-skin(null,     auto auto, margin: 0px,             border: 0px,  padding: 0px                ), create-flex(1, 1, auto, auto), create-flex2(column, flex-start, center)
layout--vertical-container             = create-layout-skin(null,     auto auto, margin: 0px 0px 2px 2px, border: 0px,  padding: 0px                ), create-flex(1, 1, auto, auto), create-flex2(column, flex-start, center)
layout--vertical-tracker               = create-layout-skin(null,     24px auto, margin: 0px,             border: 1px,  padding: 0px                ), create-flex(1, 1, auto, auto)
layout--vertical-dragger               = create-layout-skin(absolute, 24px auto, margin: 0px,             border: 1px,  padding: 0px                ), create-flex(0, 1, auto, auto)
layout--vertical-low-button            = create-layout-skin(null,     24px 24px, margin: 0px,             border: 1px,  padding: 0px                ), create-flex(0, 0, auto, auto)
layout--vertical-high-button           = create-layout-skin(null,     24px 24px, margin: 0px,             border: 1px,  padding: 0px                ), create-flex(0, 0, auto, auto)

// scroll-view
.unity-scroll-view
    add-skin1 scroll-view
    add-skin2 scroll-view
    #unity-content-and-vertical-scroll-container
        add-skin1 viewport-and-vertical-scroller
        add-skin2 viewport-and-vertical-scroller
    #unity-content-viewport
        overflow hidden
        add-skin1 viewport
        add-skin2 viewport
    #unity-content-container
        overflow scroll
        add-skin1 content
        add-skin2 content
// scroll-view/view
.unity-scroll-view.light2
    add-skin1 scroll-view--light2
.unity-scroll-view.light
    add-skin1 scroll-view--light
.unity-scroll-view.dark
    add-skin1 scroll-view--dark
.unity-scroll-view.dark2
    add-skin1 scroll-view--dark2
// scroll-view/layout
.unity-scroll-view.small
    #unity-content-container
        add-skin2 content--small
.unity-scroll-view.medium
    #unity-content-container
        add-skin2 content--medium
.unity-scroll-view.large
    #unity-content-container
        add-skin2 content--large
// scroll-view/flex
.unity-scroll-view.reverse
    #unity-content-viewport
        add-skin2 viewport--reverse

// scroller
.unity-scroller--horizontal
    add-skin1 horizontal-scroller
    add-skin2 horizontal-scroller
    // slider-field
    .unity-base-slider
        add-skin1 horizontal-slider-field
        add-skin2 horizontal-slider-field
        .unity-base-slider__input
            add-skin1 horizontal-slider-field-input
            add-skin2 horizontal-slider-field-input
        #unity-drag-container
            add-skin1 horizontal-container
            add-skin2 horizontal-container
        #unity-tracker
            add-skin1 horizontal-tracker
            add-skin2 horizontal-tracker
        #unity-dragger
            add-skin1 horizontal-dragger
            add-skin2 horizontal-dragger
    // button
    #unity-low-button
        add-skin1 horizontal-low-button
        add-skin2 horizontal-low-button
    // button
    #unity-high-button
        add-skin1 horizontal-high-button
        add-skin2 horizontal-high-button

