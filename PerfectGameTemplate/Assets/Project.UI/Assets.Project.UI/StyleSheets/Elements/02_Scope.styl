@import "../StyleSheet__Theme2"

// skin
skin--scope         = create-layout(null, auto, auto, 0px, 0px, 0px                )
skin--scope--small  = create-layout(null, auto, auto, 0px, 0px, 6px  6px  5px  5px )
skin--scope--medium = create-layout(null, auto, auto, 0px, 0px, 12px 12px 10px 10px)
skin--scope--large  = create-layout(null, auto, auto, 0px, 0px, 24px 24px 20px 20px)
// skin
skin--scope--column = create-flex(0, 1, auto, auto), create-flex2(column, flex-start, stretch)
skin--scope--row    = create-flex(0, 1, auto, auto), create-flex2(row,    flex-start, stretch)

// scope
scope(effect)
    add-skin1        effect, scope
    add-skin1-light  effect, scope--light
    add-skin1-dark   effect, scope--dark
    add-misc         effect, skin--scope
    &.small
        add-misc     effect, skin--scope--small
    &.medium
        add-misc     effect, skin--scope--medium
    &.large
        add-misc     effect, skin--scope--large
// scope
column-scope(effect)
    add-misc effect, skin--scope--column
row-scope(effect)
    add-misc effect, skin--scope--row

// scope
.scope
    scope(null)
.column-scope
    column-scope(null)
.row-scope
    row-scope(null)
