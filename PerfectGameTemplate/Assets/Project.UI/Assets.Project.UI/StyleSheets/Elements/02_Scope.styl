@import "../StyleSheet__Theme2"

// scope
scope(effect)
    add-skin1        effect, scope
    add-skin1-light  effect, scope--light
    add-skin1-dark   effect, scope--dark
    add-skin2        effect, scope
    add-skin2-small  effect, scope--small
    add-skin2-medium effect, scope--medium
    add-skin2-large  effect, scope--large
column-scope(effect)
    add-misc effect, create-flex(0, 1, auto, auto)
    add-misc effect, create-flex2(column, flex-start, stretch)
row-scope(effect)
    add-misc effect, create-flex(0, 1, auto, auto)
    add-misc effect, create-flex2(row, flex-start, stretch)

// scope
.scope
    scope(null)
.column-scope
    column-scope(null)
.row-scope
    row-scope(null)
