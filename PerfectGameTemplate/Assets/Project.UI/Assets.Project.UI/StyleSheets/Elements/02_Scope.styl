@import "../StyleSheet__Theme"

// scope
skin--scope         = create-view-skin(null,  (view        view       ), (view        view))
skin--scope--light  = create-view-skin(dark,  (view--light view--light), (view--light view))
skin--scope--dark   = create-view-skin(light, (view--dark  view--dark ), (view--dark  view))

// scope
misc--scope         = create-layout-skin(null, auto auto, 0px, 0px, 0px                )
misc--scope--small  = create-layout-skin(null, auto auto, 0px, 0px, 6px  6px  5px  5px )
misc--scope--medium = create-layout-skin(null, auto auto, 0px, 0px, 12px 12px 10px 10px)
misc--scope--large  = create-layout-skin(null, auto auto, 0px, 0px, 24px 24px 20px 20px)
// scope
misc--scope--column = create-flex(0, 1, auto, auto), create-flex2(column, flex-start, stretch)
misc--scope--row    = create-flex(0, 1, auto, auto), create-flex2(row,    flex-start, stretch)

// scope
scope(effect)
    add-skin        effect, scope
    add-skin-light  effect, scope--light
    add-skin-dark   effect, scope--dark
    add-misc        effect, scope
    &.small
        add-misc    effect, scope--small
    &.medium
        add-misc    effect, scope--medium
    &.large
        add-misc    effect, scope--large
// scope
column-scope(effect)
    add-misc effect, scope--column
row-scope(effect)
    add-misc effect, scope--row

// scope
.scope
    scope(null)
.column-scope
    column-scope(null)
.row-scope
    row-scope(null)
