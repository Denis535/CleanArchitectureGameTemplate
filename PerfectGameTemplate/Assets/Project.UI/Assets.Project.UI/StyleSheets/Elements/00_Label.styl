@import "../StyleSheet__Theme"

// label
label(effect)
    add-element(label, text: txt(upper-left), effect: effect)
    add-skin2(label)           if effect == null
    add-flex(0, 1, auto, auto) if effect == null

// label
.unity-label
    label(null)
    &:focus
        label(focus)
    &.invalid
        label(invalid)
