@import "../StyleSheet__Theme"

// toggle-field
toggle-field()
toggle-field-label()
toggle-field-input()
    add-skin(null)
    add-skin2(null)
toggle-field-input--checkmark(value)
    add-image(light-image,                     null, 16px 16px, null)
    add-image(light-image dark-checkmark-icon, null, 16px 16px, null) if value

// toggle-field
.unity-toggle
    toggle-field()
    &__label
        toggle-field-label()
    &__input
        toggle-field-input()
    &__input #unity-checkmark
        toggle-field-input--checkmark(false)
    &__input:checked #unity-checkmark
        toggle-field-input--checkmark(true)
