@import "../StyleSheet__Theme"

// button
button(effect)
    // cursor link
    add-element(button, font: fnt(null, null, bold), text: txt(middle-center), effect: effect)
    add-skin2(button)          if effect == null
    add-flex(0, 1, auto, auto) if effect == null

// button
.unity-button
    button(null)
    &:hover
        button(hover)
    &:active
        button(active)
    &:focus
        button(focus)
    &.invalid
        button(invalid)

// repeat-button
.unity-repeat-button
    button(null)
    &:hover
        button(hover)
    &:active
        button(active)
    &:focus
        button(focus)
    &.invalid
        button(invalid)
