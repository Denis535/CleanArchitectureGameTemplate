@import "../StyleSheet__Theme2"

// skin
skin--group         = create-layout(null, auto, auto, 4px, 1px, 0px                )
skin--group--small  = create-layout(null, auto, auto, 4px, 1px, 6px  6px  5px  5px )
skin--group--medium = create-layout(null, auto, auto, 4px, 1px, 12px 12px 10px 10px)
skin--group--large  = create-layout(null, auto, auto, 4px, 1px, 24px 24px 20px 20px)
// skin
skin--group--column = create-flex(0, 1, auto, auto), create-flex2(column, flex-start, stretch)
skin--group--row    = create-flex(0, 1, auto, auto), create-flex2(row,    flex-start, stretch)

// group
group(effect)
    add-skin1        effect, group
    add-skin1-light  effect, group--light
    add-skin1-dark   effect, group--dark
    add-misc         effect, skin--group
    &.small
        add-misc     effect, skin--group--small
    &.medium
        add-misc     effect, skin--group--medium
    &.large
        add-misc     effect, skin--group--large
// group
column-group(effect)
    add-misc effect, skin--group--column
row-group(effect)
    add-misc effect, skin--group--row

// group
.group
    group(null)
.column-group
    column-group(null)
.row-group
    row-group(null)
