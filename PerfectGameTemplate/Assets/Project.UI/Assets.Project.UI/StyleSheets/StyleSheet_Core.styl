views = {
    // element
    label:                             create-view( create-foreground(null,           fnt(), txt()), create-background(none,            null       ), create-border(none,            element        ) ),
    button:                            create-view( create-foreground(dark,           fnt(), txt()), create-background(light-element,   null       ), create-border(light-element,   element        ) ),
    field:                             create-view( create-foreground(null,           fnt(), txt()), create-background(none,            null       ), create-border(none,            element        ) ),
    field-label:                       create-view( create-foreground(dark,           fnt(), txt()), create-background(light-element,   null       ), create-border(light-element,   element        ) ),
