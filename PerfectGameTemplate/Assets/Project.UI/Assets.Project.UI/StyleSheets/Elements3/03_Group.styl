@import "../StyleSheet__Theme"

// group
group()
    add-view-skin(group)
    add-view-skin-light-gradient(light-group)
    add-view-skin-dark-gradient(dark-group)
    add-layout-skin(group)
    &.small
        add-layout-skin(small-group)
    &.medium
        add-layout-skin(medium-group)
    &.large
        add-layout-skin(large-group)
column-group()
    add-flex(0, 1, auto, auto)
    add-flex2(column, flex-start, stretch)
row-group()
    add-flex(0, 1, auto, auto)
    add-flex2(row, flex-start, stretch)

// group
.group
    group()
.column-group
    column-group()
.row-group
    row-group()
