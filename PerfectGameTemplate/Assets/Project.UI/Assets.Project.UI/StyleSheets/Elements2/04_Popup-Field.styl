@import "../StyleSheet__Theme"

// popup-field
popup-field()
popup-field-label()
popup-field-input()
// text
text(effect)
    add-skin effect, component, component, create-flex(1, 1, auto, auto)
// arrow
arrow(effect)
    add-skin effect, image light-dropdown-arrow-icon, image, create-size(12px, 12px), create-box(2px, null, null), create-flex(0, 1, auto, auto)

// popup-field
.unity-base-popup-field
    popup-field()
    &__label
        popup-field-label()
    &__input
        popup-field-input()
    &__input .unity-text-element
        text(null)
    &__input &__arrow
        arrow(null)
