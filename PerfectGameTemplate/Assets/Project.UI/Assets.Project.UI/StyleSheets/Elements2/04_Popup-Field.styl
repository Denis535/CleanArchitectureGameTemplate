@import "../StyleSheet__Theme"

// popup-field
popup-field()
popup-field-label()
popup-field-input()
// text
text(effect)
    add-component(effect, null)
    add-component-flex(1, 1, auto, auto)
// arrow
arrow(effect)
    add-image(effect, image light-dropdown-arrow-icon, null, 12px 12px, 2px null null)
    add-image-flex(0, 1, auto, auto)

// popup-field
.unity-base-popup-field
    popup-field()
    &__label
        popup-field-label()
    &__input
        popup-field-input()
    &__input .unity-text-element
        text(null)
    &__input &__arrow
        arrow(null)
