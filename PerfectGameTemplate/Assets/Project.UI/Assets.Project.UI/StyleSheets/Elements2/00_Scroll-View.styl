@import "../StyleSheet__Theme"

// scroll-view
scroll-view()
    add-skin(scroll-view)
    add-skin2(scroll-view)
    add-flex(0, 1, auto, auto)
    add-flex2(column, flex-start, stretch)
    &.light, &.light-0
        add-skin(light-scroll-view, alpha: 0.00)
    &.light-1
        add-skin(light-scroll-view, alpha: 0.10)
    &.light-2
        add-skin(light-scroll-view, alpha: 0.20)
    &.light-3
        add-skin(light-scroll-view, alpha: 0.30)
    &.light-4
        add-skin(light-scroll-view, alpha: 0.40)
    &.light-5
        add-skin(light-scroll-view, alpha: 0.50)
    &.light-6
        add-skin(light-scroll-view, alpha: 0.60)
    &.light-7
        add-skin(light-scroll-view, alpha: 0.70)
    &.light-8
        add-skin(light-scroll-view, alpha: 0.80)
    &.light-9
        add-skin(light-scroll-view, alpha: 0.90)
    &.light-10
        add-skin(light-scroll-view, alpha: 1.00)
    &.dark, &.dark-0
        add-skin(dark-scroll-view, alpha: 0.00)
    &.dark-1
        add-skin(dark-scroll-view, alpha: 0.10)
    &.dark-2
        add-skin(dark-scroll-view, alpha: 0.20)
    &.dark-3
        add-skin(dark-scroll-view, alpha: 0.30)
    &.dark-4
        add-skin(dark-scroll-view, alpha: 0.40)
    &.dark-5
        add-skin(dark-scroll-view, alpha: 0.50)
    &.dark-6
        add-skin(dark-scroll-view, alpha: 0.60)
    &.dark-7
        add-skin(dark-scroll-view, alpha: 0.70)
    &.dark-8
        add-skin(dark-scroll-view, alpha: 0.80)
    &.dark-9
        add-skin(dark-scroll-view, alpha: 0.90)
    &.dark-10
        add-skin(dark-scroll-view, alpha: 1.00)
scroll-view--content-viewport-and-vertical-scroller()
    add-skin(null)
    add-skin2(null)
    add-flex(1, 1, auto, auto)
    add-flex2(row, flex-start, stretch)
scroll-view--content-viewport()
    overflow hidden
    add-skin(null)
    add-skin2(null)
    add-flex(1, 1, auto, auto)
    add-flex2(column, flex-start, stretch)
scroll-view--content-container()
    overflow scroll
    add-skin(null)
    add-skin2(null, padding: (12px 12px 10px 10px))
    add-flex(0, 0, auto, auto)
    add-flex2(column, flex-start, stretch)

// scroller
horizontal-scroller()
    add-skin(null)
    add-skin2(null, padding: 2px)
    add-flex(0, 0, auto, auto)
    add-flex2(row, flex-start, center)
// slider-field
horizontal-slider-field()
    add-skin(null)
    add-skin2(default)
    add-flex(1, 1, auto, auto)
    add-flex2(row, flex-start, center)
// slider-field-input
horizontal-slider-field-input()
    add-skin(null)
    add-skin2(default)
    add-flex(1, 1, auto, auto)
    add-flex2(row, flex-start, center)
horizontal-slider-field-input--container()
    add-skin(default)
    add-skin2(default)
    add-flex(1, 1, auto, auto)
    add-flex2(row, flex-start, center)
horizontal-slider-field-input--tracker()
    add-skin(default)
    add-skin2(default, null, auto, 24px, 0px, 0px, 0px)
    add-flex(1, 1, auto, auto)
horizontal-slider-field-input--dragger()
    add-image(button, absolute, auto 24px, null)
    add-flex(0, 1, auto, auto)
    &:hover
        add-skin-with-hover-effect(button)
    &:active
        add-skin-with-active-effect(button)

// scroller
vertical-scroller()
    add-skin(null)
    add-skin2(null, padding: 2px)
    add-flex(0, 0, auto, auto)
    add-flex2(column, flex-start, center)
// slider-field
vertical-slider-field()
    add-skin(null)
    add-skin2(default)
    add-flex(1, 1, auto, auto)
    add-flex2(column, flex-start, center)
// slider-field-input
vertical-slider-field-input()
    add-skin(null)
    add-skin2(default)
    add-flex(1, 1, auto, auto)
    add-flex2(column, flex-start, center)
vertical-slider-field-input--container()
    add-skin(default)
    add-skin2(default)
    add-flex(1, 1, auto, auto)
    add-flex2(column, flex-start, center)
vertical-slider-field-input--tracker()
    add-skin(default)
    add-skin2(default, null, 24px, auto, 0px, 0px, 0px)
    add-flex(1, 1, auto, auto)
vertical-slider-field-input--dragger()
    add-image(button, absolute, 24px auto, null)
    add-flex(0, 1, auto, auto)
    &:hover
        add-skin-with-hover-effect(button)
    &:active
        add-skin-with-active-effect(button)

// button
horizontal-low-button()
    add-image(button dark-arrow-icon--left, null, (24px 24px) (24px 24px), null)
    &:hover
        add-image-with-hover-effect(button)
    &:active
        add-image-with-active-effect(button)
horizontal-high-button()
    add-image(button dark-arrow-icon--right, null, (24px 24px) (24px 24px), null)
    &:hover
        add-image-with-hover-effect(button)
    &:active
        add-image-with-active-effect(button)

// button
vertical-low-button()
    add-image(button dark-arrow-icon--up, null, (24px 24px) (24px 24px), null)
    &:hover
        add-image-with-hover-effect(button)
    &:active
        add-image-with-active-effect(button)
vertical-high-button()
    add-image(button dark-arrow-icon--down, null, (24px 24px) (24px 24px), null)
    &:hover
        add-image-with-hover-effect(button)
    &:active
        add-image-with-active-effect(button)

// scroll-view
.unity-scroll-view
    scroll-view()
    #unity-content-and-vertical-scroll-container
        scroll-view--content-viewport-and-vertical-scroller()
    #unity-content-viewport
        scroll-view--content-viewport()
    #unity-content-container
        scroll-view--content-container()
.unity-scroll-view.reverse
    #unity-content-viewport
        add-flex2(column-reverse, null, null)

// scroller
.unity-scroller--horizontal
    horizontal-scroller()
    #unity-low-button
        horizontal-low-button()
    #unity-high-button
        horizontal-high-button()
    // slider-field
    .unity-base-slider
        horizontal-slider-field()
        .unity-base-slider__input
            horizontal-slider-field-input()
        #unity-drag-container
            horizontal-slider-field-input--container()
        #unity-tracker
            horizontal-slider-field-input--tracker()
        #unity-dragger
            horizontal-slider-field-input--dragger()
    .unity-base-slider:focus
        #unity-dragger
            add-skin(focus-effect)

// scroller
.unity-scroller--vertical
    vertical-scroller()
    #unity-low-button
        vertical-low-button()
    #unity-high-button
        vertical-high-button()
    // slider-field
    .unity-base-slider
        vertical-slider-field()
        .unity-base-slider__input
            vertical-slider-field-input()
        #unity-drag-container
            vertical-slider-field-input--container()
        #unity-tracker
            vertical-slider-field-input--tracker()
        #unity-dragger
            vertical-slider-field-input--dragger()
    .unity-base-slider:focus
        #unity-dragger
            add-skin(focus-effect)
