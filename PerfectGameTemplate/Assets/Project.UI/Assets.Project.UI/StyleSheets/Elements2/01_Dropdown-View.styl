@import "../StyleSheet__Theme"

// dropdown-view
dropdown-view()
    add-skin(dropdown-view)
    add-skin2(dropdown-view)
    add-view()
    add-layout()
dropdown-view--item()
    add-skin(null)
    add-skin2(null)
    add-view()
    add-layout(null, null, null, null, null, (12px 12px 10px 10px))
    add-flex(0, 1, auto, auto)
    add-flex2(row, flex-start, center)
dropdown-view--item-checkmark(value)
    add-skin(null)
    add-skin(light-checkmark-icon) if value
    add-skin2(image)
    add-view()
    add-layout(null, 16px, 16px, (0px 12px 0px 0px), null, null)
    add-flex(0, 1, auto, auto)
dropdown-view--item-text()
    add-skin(null)
    add-skin2(null)
    add-view()
    add-layout(null, auto, auto, 0px, 0px, 0px)
    add-flex(1, 1, auto, auto)

// scroll-view
scroll-view()
    add-view(null, null, null, transparent, null, transparent, null)
    add-layout(null, auto, auto, 0px, 0px, 0px)
scroll-view--content-and-vertical-scroller-container()
    add-view()
    add-layout()
scroll-view--viewport()
    add-view()
    add-layout()
scroll-view--content()
    add-view()
    add-layout(null, null, null, 0px, 0px, 0px)

// dropdown-view
.unity-base-dropdown
    add-view-background(rgba(0, 0, 0, 0.25), null, null, null)
    add-layout-position(absolute, null, null, null, null)
    &__container-outer
        dropdown-view()
    .unity-scroll-view
        scroll-view()
    #unity-content-and-vertical-scroll-container
        scroll-view--content-and-vertical-scroller-container()
    #unity-content-viewport
        scroll-view--viewport()
    #unity-content-container
        scroll-view--content()
    &__item
        dropdown-view--item()
    &__item:hover
        add-skin(hover-effect)
    &__item &__checkmark
        dropdown-view--item-checkmark(false)
    &__item:checked &__checkmark
        dropdown-view--item-checkmark(true)
    &__item &__label
        dropdown-view--item-text()
