@import "../StyleSheet__Theme"

// dropdown-view
dropdown-view()
    add-skin(dropdown-view)
    add-skin2(dropdown-view)
dropdown-view--item()
    add-skin(null)
    add-skin2(null, padding: (12px 12px 10px 10px))
    add-flex(0, 1, auto, auto)
    add-flex2(row, flex-start, center)
    &:hover
        add-skin(hover-effect)
dropdown-view--item-checkmark(value)
    add-skin(null)
    add-skin(light-checkmark-icon) if value
    add-skin2(image, width: 16px, height: 16px, margin: (0px 12px 0px 0px))
    add-flex(0, 1, auto, auto)
dropdown-view--item-text()
    add-skin(null)
    add-skin2(null, width: auto, height: auto, margin: 0px, border: 0px, padding: 0px)
    add-flex(1, 1, auto, auto)

// scroll-view
scroll-view()
    add-view(bg-color: transparent, bd-color: transparent)
    add-layout(width: auto, height: auto, margin: 0px, border: 0px, padding: 0px)
scroll-view--container()
    add-view()
    add-layout()
scroll-view--content-viewport()
    add-view()
    add-layout()
scroll-view--content-container()
    add-view()
    add-layout(margin: 0px, border: 0px, padding: 0px)

// dropdown-view
.unity-base-dropdown
    add-view(bg-color: rgba(0, 0, 0, 0.25))
    add-layout(position: absolute)
    &__container-outer
        dropdown-view()
    .unity-scroll-view
        scroll-view()
    #unity-content-and-vertical-scroll-container
        scroll-view--container()
    #unity-content-viewport
        scroll-view--content-viewport()
    #unity-content-container
        scroll-view--content-container()
    &__item
        dropdown-view--item()
    &__item &__checkmark
        dropdown-view--item-checkmark(false)
    &__item:checked &__checkmark
        dropdown-view--item-checkmark(true)
    &__item &__label
        dropdown-view--item-text()
