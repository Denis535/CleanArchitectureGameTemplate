@import "../StyleSheet__Theme"

// dropdown-view
dropdown-view()
    add-view-skin(dropdown-view)
    add-layout-skin(dropdown-view)

// scroll-view
scroll-view()
    add-view-skin(default)
    add-layout-skin(default)
viewport-and-vertical-scroller()
    add-component(null)
viewport()
    add-component(null)
content()
    add-component(null)

// item
item()
    add-component(null, box: null null medium)
    add-flex(0, 1, auto, auto)
    add-flex2(row, flex-start, center)
// checkmark
checkmark(value)
    add-image(null,                      null, 16px 16px, (0px 12px 0px 0px) null null) if !value
    add-image(null light-checkmark-icon, null, 16px 16px, (0px 12px 0px 0px) null null) if value
    add-flex(0, 1, auto, auto)
// text
text()
    add-component(null)
    add-flex(1, 1, auto, auto)

// dropdown-view
.unity-base-dropdown
    add-view(bg-color: rgba(0, 0, 0, 0.25))
    add-layout(position: absolute)
    &__container-outer
        dropdown-view()
    .unity-scroll-view
        scroll-view()
    #unity-content-and-vertical-scroll-container
        viewport-and-vertical-scroller()
    #unity-content-viewport
        viewport()
    #unity-content-container
        content()
    &__item
        item()
    &__item:hover
        add-view-skin(hover-effect)
    &__item &__checkmark
        checkmark(false)
    &__item:checked &__checkmark
        checkmark(true)
    &__item &__label
        text()
