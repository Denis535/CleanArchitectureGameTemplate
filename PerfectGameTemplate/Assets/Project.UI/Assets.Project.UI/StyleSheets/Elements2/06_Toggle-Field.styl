@import "../StyleSheet__Theme2"

// toggle-field
toggle-field()
toggle-field-label()
toggle-field-input()
// checkmark
checkmark(effect, value)
    add-skin1 effect, component--light,                     if !value
    add-skin1 effect, component--light checkmark-icon--dark if value
    add-skin2 effect, component, create-size(16px, 16px)
    add-misc  effect, create-flex(0, 1, auto, auto)

// toggle-field
.unity-toggle
    toggle-field()
    &__label
        toggle-field-label()
    &__input
        toggle-field-input()
    &__input #unity-checkmark
        checkmark(null, false)
    &__input:checked #unity-checkmark
        checkmark(null, true)
