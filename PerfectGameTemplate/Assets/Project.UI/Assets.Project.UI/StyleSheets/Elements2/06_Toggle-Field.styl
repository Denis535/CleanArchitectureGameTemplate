@import "../StyleSheet__Theme"

// toggle-field
toggle-field()
toggle-field-label()
toggle-field-input()
// checkmark
checkmark(effect, value)
    add-skin effect, light-image,                     image, create-size(16px, 16px), create-flex(0, 1, auto, auto) if !value
    add-skin effect, light-image dark-checkmark-icon, image, create-size(16px, 16px), create-flex(0, 1, auto, auto) if value

// toggle-field
.unity-toggle
    toggle-field()
    &__label
        toggle-field-label()
    &__input
        toggle-field-input()
    &__input #unity-checkmark
        checkmark(null, false)
    &__input:checked #unity-checkmark
        checkmark(null, true)
