@import "../StyleSheet__Theme2"

// field
field(effect)
    add-skin1 effect, field-element
    add-skin2 effect, field-element
    add-misc  effect, create-flex(0, 1, auto, auto)
    add-misc  effect, create-flex2(row, flex-start, stretch)
field-label(effect)
    add-skin1 effect, field-label-element, create-font(null, null, bold), create-text(middle-left, null, null)
    add-skin2 effect, field-label-element
    add-misc  effect, create-flex(0, 1, auto, auto)
field-input(effect)
    // cursor text
    add-skin1 effect, field-input-element, create-font(null, null, null), create-text(middle-left, null, null)
    add-skin2 effect, field-input-element
    add-misc  effect, create-flex(1, 1, auto, auto)
    add-misc  effect, create-flex2(row, flex-end, center)

// field
.unity-base-field
    field(null)
    &__label
        field-label(null)
    &__label:hover
        field-label(hover)
    &__input
        field-input(null)
    // &__input:hover
    //     field-input(hover)

// field
.unity-base-field:focus
    .unity-base-field__label
        field-label(focus)
    .unity-base-field__input
        field-input(focus-without-foreground)

// field
.unity-base-field.invalid
    .unity-base-field__label
        field-label(invalid)
    .unity-base-field__input
        field-input(invalid-without-foreground)
