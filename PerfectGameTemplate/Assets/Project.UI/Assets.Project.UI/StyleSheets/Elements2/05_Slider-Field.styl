@import "../StyleSheet__Theme"

// slider-field
slider-field()
slider-field-label()
slider-field-input()
// container
container(effect)
    add-component(effect, null)
    add-component-flex(1, 1, auto, auto)
    add-component-flex2(row, flex-start, center)
// tracker
tracker(effect)
    add-skin effect, light-image, image, create-position(null), create-size(auto, 8px), create-flex(1, 1, auto, auto)
// dragger
dragger(effect)
    add-skin effect, light-image, image, create-position(absolute), create-size(8px, 24px), create-flex(0, 1, auto, auto)

// slider-field
.unity-base-slider
    slider-field()
    &__label
        slider-field-label()
    &__input
        slider-field-input()
    &__input #unity-drag-container
        container(null)
    &__input #unity-tracker
        tracker(null)
    &__input #unity-dragger
        dragger(null)
