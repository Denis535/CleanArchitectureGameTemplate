@import "../StyleSheet__Theme"

// slider-field
slider-field()
slider-field-label()
slider-field-input()
// container
container(effect)
    add-component(effect, null)
    add-component-flex(1, 1, auto, auto)
    add-component-flex2(row, flex-start, center)
// tracker
tracker(effect)
    add-image(effect, light-image, null, auto 8px, null)
    add-image-flex(1, 1, auto, auto)
// dragger
dragger(effect)
    add-image(effect, light-image, absolute, 8px 24px, null)
    add-image-flex(0, 1, auto, auto)

// slider-field
.unity-base-slider
    slider-field()
    &__label
        slider-field-label()
    &__input
        slider-field-input()
    &__input #unity-drag-container
        container(null)
    &__input #unity-tracker
        tracker(null)
    &__input #unity-dragger
        dragger(null)
