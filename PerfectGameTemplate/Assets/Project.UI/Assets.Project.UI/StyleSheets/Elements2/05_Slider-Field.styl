@import "../StyleSheet__Theme"

// field
skin--field       = null
skin--field-label = null
skin--field-input = null
skin--container   = create-view-skin(null, (element          element         ), (element          element  ))
skin--tracker     = create-view-skin(null, (component--light component--light), (component--light component))
skin--dragger     = create-view-skin(null, (component--light component--light), (component--light component))

// field
misc--field       = null
misc--field-label = null
misc--field-input = null
misc--container   = create-layout-skin(null,     auto auto, 0px, 0px, 0px), create-flex(1, 1, auto, auto), create-flex2(row, flex-start, center)
misc--tracker     = create-layout-skin(null,     auto 8px,  0px, 1px, 0px), create-flex(1, 1, auto, auto)
misc--dragger     = create-layout-skin(absolute, 8px  24px, 0px, 1px, 0px), create-flex(0, 1, auto, auto)

// slider-field
slider-field(effect)
    add-skin effect, field
    add-misc effect, field
slider-field-label(effect)
    add-skin effect, field-label
    add-misc effect, field-label
slider-field-input(effect)
    add-skin effect, field-input
    add-misc effect, field-input
// container
container(effect)
    add-skin effect, container
    add-misc effect, container
// tracker
tracker(effect)
    add-skin effect, tracker
    add-misc effect, tracker
// dragger
dragger(effect)
    add-skin effect, dragger
    add-misc effect, dragger

// slider-field
.unity-base-slider
    slider-field(null)
    &__label
        slider-field-label(null)
    &__input
        slider-field-input(null)
    &__input #unity-drag-container
        container(null)
    &__input #unity-tracker
        tracker(null)
    &__input #unity-dragger
        dragger(null)
