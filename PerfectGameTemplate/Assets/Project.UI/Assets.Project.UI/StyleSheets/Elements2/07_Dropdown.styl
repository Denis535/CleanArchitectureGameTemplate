@import "../StyleSheet__Theme2"

// dropdown
skin1--dropdown                       = create-view-skin(null,  (dropdown-element             dropdown-element     ), (dropdown-element             element  ))
skin1--dropdown-item                  = create-view-skin(light, (dropdown-item-element        dropdown-item-element), (dropdown-item-element        element  ))
skin1--dropdown-item--hover           = create-view-skin(light, (dropdown-item-element--hover dropdown-item-element), (dropdown-item-element--hover element  ))
skin1--checkmark                      = create-view-skin(null,  (component                    component            ), (component                    component))
skin1--checkmark--checked             = create-view-skin(null,  (component                    checkmark-icon--light), (component                    component))
skin1--text                           = create-view-skin(null,  (element                      element              ), (element                      element  ))
// scroll-view
skin1--scroll-view                    = create-view-skin(null,  (element                      element              ), (element                      element  ))
skin1--viewport-and-vertical-scroller = create-view-skin(null,  (element                      element              ), (element                      element  ))
skin1--viewport                       = create-view-skin(null,  (element                      element              ), (element                      element  ))
skin1--content                        = create-view-skin(null,  (element                      element              ), (element                      element  ))

// dropdown
skin2--dropdown                       = create-layout-skin(null, auto auto, 0px,              1px, 0px                ), create-flex(0, 1, auto, auto)
skin2--dropdown-item                  = create-layout-skin(null, auto auto, 0px,              1px, 12px 12px 10px 10px), create-flex(0, 1, auto, auto), create-flex2(row, flex-start, stretch)
skin2--checkmark                      = create-layout-skin(null, 16px 16px, 0px 12px 0px 0px, 1px, 0px                ), create-flex(0, 1, auto, auto)
skin2--text                           = create-layout-skin(null, auto auto, 0px,              0px, 0px                ), create-flex(1, 1, auto, auto)
// scroll-view
skin2--scroll-view                    = create-layout-skin(null, auto auto, 0px,              0px, 0px                )
skin2--viewport-and-vertical-scroller = create-layout-skin(null, auto auto, 0px,              0px, 0px                )
skin2--viewport                       = create-layout-skin(null, auto auto, 0px,              0px, 0px                )
skin2--content                        = create-layout-skin(null, auto auto, 0px,              0px, 0px                )

// dropdown
dropdown(effect)
    add-skin1 effect, dropdown
    add-skin2 effect, dropdown

// scroll-view
scroll-view(effect)
    add-skin1 effect, scroll-view
    add-skin2 effect, scroll-view
viewport-and-vertical-scroller(effect)
    add-skin1 effect, viewport-and-vertical-scroller
    add-skin2 effect, viewport-and-vertical-scroller
viewport(effect)
    add-skin1 effect, viewport
    add-skin2 effect, viewport
content(effect)
    add-skin1 effect, content
    add-skin2 effect, content

// dropdown-item
dropdown-item(effect)
    add-skin1 effect, dropdown-item        if effect != 'hover'
    add-skin1 null,   dropdown-item--hover if effect == 'hover'
    add-skin2 effect, dropdown-item
// checkmark
checkmark(effect, value)
    add-skin1 effect, checkmark,         if !value
    add-skin1 effect, checkmark--checked if value
    add-skin2 effect, checkmark
// text
text(effect)
    add-skin1 effect, text
    add-skin2 effect, text

// dropdown
.unity-base-dropdown
    add-view(bg-color: rgba(0, 0, 0, 0.25))
    add-layout(position: absolute)
    &__container-outer
        dropdown(null)
    .unity-scroll-view
        scroll-view(null)
    #unity-content-and-vertical-scroll-container
        viewport-and-vertical-scroller(null)
    #unity-content-viewport
        viewport(null)
    #unity-content-container
        content(null)
    &__item
        dropdown-item(null)
    &__item:hover
        dropdown-item(hover)
    &__item &__checkmark
        checkmark(null, false)
    &__item:checked &__checkmark
        checkmark(null, true)
    &__item &__label
        text(null)
