@import "StyleSheet__Internal"

theme = create-theme()

// common
theme[color           ]['light'         ] = hsla(  0,   0%,  90%, 1.00)
theme[color           ]['dark'          ] = hsla(  0,   0%,  10%, 1.00)
theme[color           ]['focus-effect'  ] = hsla(200,  80%,  40%, 1.00)
theme[color           ]['invalid-effect'] = hsla( 20,  80%,  40%, 0.10)

// card
theme[background-color]['card'        ] = hsla(240,   5%,  25%, 0.75)
theme[background-color]['card-header' ] = hsla( 60,   5%,  65%, 0.75)
theme[background-color]['card-content'] = hsla(  0,   0%,   0%, 0.00)
theme[background-color]['card-footer' ] = hsla(240,  10%,  10%, 0.75)
theme[background-image]['card'        ] = create-background-image(null, null, null)
theme[background-image]['card-header' ] = create-background-image(null, null, null)
theme[background-image]['card-content'] = create-background-image(null, null, null)
theme[background-image]['card-footer' ] = create-background-image(null, null, null)
theme[border-color    ]['card'        ] = hsla( 35, 100%,  30%, 1.00)
theme[border-color    ]['card-header' ] = hsla( 35, 100%,  30%, 1.00)
theme[border-color    ]['card-content'] = hsla(  0,   0%,   0%, 0.00)
theme[border-color    ]['card-footer' ] = hsla( 35, 100%,  30%, 1.00)
theme[border-radius   ]['card'        ] = 6px
theme[border-radius   ]['card-header' ] = 6px 6px 0px 0px
theme[border-radius   ]['card-content'] = 6px
theme[border-radius   ]['card-footer' ] = 0px 0px 6px 6px

// card
theme[background-color]['dialog-card'                ] = hsla(240,   5%,  40%, 0.95)
theme[background-color]['dialog-card-header'         ] = hsla( 60,   5%,  65%, 0.75)
theme[background-color]['dialog-card-header--info'   ] = hsla(220,  70%,  65%, 0.75)
theme[background-color]['dialog-card-header--warning'] = hsla( 40,  70%,  65%, 0.75)
theme[background-color]['dialog-card-header--error'  ] = hsla( 10,  70%,  65%, 0.75)
theme[background-color]['dialog-card-content'        ] = hsla(  0,   0%,   0%, 0.00)
theme[background-color]['dialog-card-footer'         ] = hsla(240,  10%,  10%, 0.75)
theme[background-image]['dialog-card'                ] = create-background-image(null, null, null)
theme[background-image]['dialog-card-header'         ] = create-background-image(null, null, null)
theme[background-image]['dialog-card-header--info'   ] = create-background-image(null, null, null)
theme[background-image]['dialog-card-header--warning'] = create-background-image(null, null, null)
theme[background-image]['dialog-card-header--error'  ] = create-background-image(null, null, null)
theme[background-image]['dialog-card-content'        ] = create-background-image(null, null, null)
theme[background-image]['dialog-card-footer'         ] = create-background-image(null, null, null)
theme[border-color    ]['dialog-card'                ] = hsla( 35, 100%,  30%, 1.00)
theme[border-color    ]['dialog-card-header'         ] = hsla( 35, 100%,  30%, 1.00)
theme[border-color    ]['dialog-card-content'        ] = hsla(  0,   0%,   0%, 0.00)
theme[border-color    ]['dialog-card-footer'         ] = hsla( 35, 100%,  30%, 1.00)
theme[border-radius   ]['dialog-card'                ] = 6px
theme[border-radius   ]['dialog-card-header'         ] = 6px 6px 0px 0px
theme[border-radius   ]['dialog-card-content'        ] = 6px
theme[border-radius   ]['dialog-card-footer'         ] = 0px 0px 6px 6px

// view
theme[background-color]['view'       ] = hsla(  0,   0%,   0%, 0.00)
theme[background-color]['view--light'] = hsla( 30,   3%,  60%, 1.00)
theme[background-color]['view--dark' ] = hsla(200,   3%,  40%, 1.00)
theme[background-image]['view'       ] = create-background-image(null, null, null)
theme[background-image]['view--light'] = create-background-image(null, null, null)
theme[background-image]['view--dark' ] = create-background-image(null, null, null)
theme[border-color    ]['view'       ] = hsla(  0,   0%,   0%, 0.00)
theme[border-color    ]['view--light'] = hsla( 35, 100%,  30%, 1.00)
theme[border-color    ]['view--dark' ] = hsla( 35, 100%,  30%, 1.00)
theme[border-radius   ]['view'       ] = 4px

// box
theme[background-color]['box'       ] = hsla(  0,   0%,   0%, 0.00)
theme[background-color]['box--light'] = hsla( 30,  15%,  80%, 1.00)
theme[background-color]['box--dark' ] = hsla(200,  15%,  20%, 1.00)
theme[background-image]['box'       ] = create-background-image(null, null, null)
theme[background-image]['box--light'] = create-background-image(null, null, null)
theme[background-image]['box--dark' ] = create-background-image(null, null, null)
theme[border-color    ]['box'       ] = hsla(  0,   0%,   0%, 0.00)
theme[border-color    ]['box--light'] = hsla( 30, 100%,  30%, 1.00)
theme[border-color    ]['box--dark' ] = hsla( 30, 100%,  30%, 1.00)
theme[border-radius   ]['box'       ] = 4px

// element
--color            = hsla(  0,   0%,   0%, 0.00)
--color--light     = hsla( 30,   5%,  80%, 1.00)
--color--dark      = hsla(180,   5%,  20%, 1.00)
--highlight        = hsla(  0,   0%,   0%, 0.00)
--highlight--light = hsla( 40, 100%,  40%, 1.00)
--highlight--dark  = hsla( 40, 100%,  20%, 1.00)

// element
theme[background-color]['element'       ] = --color
theme[background-image]['element'       ] = create-background-image(null, null, null)
theme[border-color    ]['element'       ] = --highlight
theme[border-radius   ]['element'       ] = 4px

// element
theme[background-color]['element--light'] = alpha(--color--light, 0.90)
theme[background-image]['element--light'] = create-background-image(null, null, null)
theme[border-color    ]['element--light'] = alpha(--highlight--dark, 1.00)

// element
theme[background-color]['element--dark' ] = alpha(--color--dark,  0.90)
theme[background-image]['element--dark' ] = create-background-image(null, null, null)
theme[border-color    ]['element--dark' ] = alpha(--highlight--light, 1.00)

// dropdown-element
theme[background-color]['dropdown-element'] = alpha(--color--dark, 0.99)
theme[background-image]['dropdown-element'] = create-background-image(null, null, null)
theme[border-color    ]['dropdown-element'] = alpha(--highlight--light, 1.00)
theme[border-radius   ]['dropdown-element'] = 4px

// dropdown-element-item
theme[background-color]['dropdown-item-element'] = alpha(--color, 0.00)
theme[background-image]['dropdown-item-element'] = create-background-image(null, null, null)
theme[border-color    ]['dropdown-item-element'] = alpha(--highlight--light, 0.20)
theme[border-radius   ]['dropdown-item-element'] = 4px

// dropdown-element-item
theme[background-color]['dropdown-item-element--hover'] = alpha(--highlight--dark, 1.00)
theme[background-image]['dropdown-item-element--hover'] = create-background-image(null, null, null)
theme[border-color    ]['dropdown-item-element--hover'] = alpha(--highlight--light, 1.00)
theme[border-radius   ]['dropdown-item-element--hover'] = 4px

// component
theme[background-color]['component'       ] = hsla(  0,   0%,   0%, 0.00)
theme[background-color]['component--light'] = hsla( 30,  30%,  90%, 0.80)
theme[background-color]['component--dark' ] = hsla(200,  30%,  10%, 0.80)
theme[background-image]['component'       ] = create-background-image(null, null, null)
theme[background-image]['component--light'] = create-background-image(null, null, null)
theme[background-image]['component--dark' ] = create-background-image(null, null, null)
theme[border-color    ]['component'       ] = hsla(  0,   0%,   0%, 0.00)
theme[border-color    ]['component--light'] = hsla( 45, 100%,  30%, 1.00)
theme[border-color    ]['component--dark' ] = hsla( 45, 100%,  30%, 1.00)
theme[border-radius   ]['component'       ] = 2px

// icon
theme[background-image]['left-arrow-icon--dark'     ] = create-background-image('project://database/Assets/Project.UI/Assets.Project.UI/Images/Arrow_Left.png',    hsla(200,  30%,  10%, 1.00), null)
theme[background-image]['right-arrow-icon--dark'    ] = create-background-image('project://database/Assets/Project.UI/Assets.Project.UI/Images/Arrow_Right.png',   hsla(200,  30%,  10%, 1.00), null)
theme[background-image]['up-arrow-icon--dark'       ] = create-background-image('project://database/Assets/Project.UI/Assets.Project.UI/Images/Arrow_Up.png',      hsla(200,  30%,  10%, 1.00), null)
theme[background-image]['down-arrow-icon--dark'     ] = create-background-image('project://database/Assets/Project.UI/Assets.Project.UI/Images/Arrow_Down.png',    hsla(200,  30%,  10%, 1.00), null)
theme[background-image]['dropdown-arrow-icon--dark' ] = create-background-image('project://database/Assets/Project.UI/Assets.Project.UI/Images/DropdownArrow.png', hsla(200,  30%,  10%, 1.00), null)
theme[background-image]['checkmark-icon--dark'      ] = create-background-image('project://database/Assets/Project.UI/Assets.Project.UI/Images/Check.png',         hsla(200,  30%,  10%, 1.00), null)
// icon
theme[background-image]['left-arrow-icon--light'    ] = create-background-image('project://database/Assets/Project.UI/Assets.Project.UI/Images/Arrow_Left.png',    hsla( 30,  30%,  90%, 1.00), null)
theme[background-image]['right-arrow-icon--light'   ] = create-background-image('project://database/Assets/Project.UI/Assets.Project.UI/Images/Arrow_Right.png',   hsla( 30,  30%,  90%, 1.00), null)
theme[background-image]['up-arrow-icon--light'      ] = create-background-image('project://database/Assets/Project.UI/Assets.Project.UI/Images/Arrow_Up.png',      hsla( 30,  30%,  90%, 1.00), null)
theme[background-image]['down-arrow-icon--light'    ] = create-background-image('project://database/Assets/Project.UI/Assets.Project.UI/Images/Arrow_Down.png',    hsla( 30,  30%,  90%, 1.00), null)
theme[background-image]['dropdown-arrow-icon--light'] = create-background-image('project://database/Assets/Project.UI/Assets.Project.UI/Images/DropdownArrow.png', hsla( 30,  30%,  90%, 1.00), null)
theme[background-image]['checkmark-icon--light'     ] = create-background-image('project://database/Assets/Project.UI/Assets.Project.UI/Images/Check.png',         hsla( 30,  30%,  90%, 1.00), null)

// add-skin
add-skin(effect, name)
    if effect == null
        add-style get-skin(name)
// add-skin
add-skin-light(effect, name)
    if effect == null
        for i in 0..100
            alpha  = i / 100
            alpha2 = (alpha+3)/4
            &.light-{i}
                skin = get-skin(name)
                skin.background-color    = alpha(skin.background-color,    alpha(skin.background-color   ) * alpha )
                skin.border-color        = alpha(skin.border-color,        alpha(skin.border-color       ) * alpha2) if has(skin, 'border-color'       )
                skin.border-left-color   = alpha(skin.border-left-color,   alpha(skin.border-left-color  ) * alpha2) if has(skin, 'border-left-color'  )
                skin.border-right-color  = alpha(skin.border-right-color,  alpha(skin.border-right-color ) * alpha2) if has(skin, 'border-right-color' )
                skin.border-top-color    = alpha(skin.border-top-color,    alpha(skin.border-top-color   ) * alpha2) if has(skin, 'border-top-color'   )
                skin.border-bottom-color = alpha(skin.border-bottom-color, alpha(skin.border-bottom-color) * alpha2) if has(skin, 'border-bottom-color')
                add-style skin
// add-skin
add-skin-dark(effect, name)
    if effect == null
        for i in 0..100
            alpha  = i / 100
            alpha2 = (alpha+3)/4
            &.dark-{i}
                skin = get-skin(name)
                skin.background-color    = alpha(skin.background-color,    alpha(skin.background-color   ) * alpha )
                skin.border-color        = alpha(skin.border-color,        alpha(skin.border-color       ) * alpha2) if has(skin, 'border-color'       )
                skin.border-left-color   = alpha(skin.border-left-color,   alpha(skin.border-left-color  ) * alpha2) if has(skin, 'border-left-color'  )
                skin.border-right-color  = alpha(skin.border-right-color,  alpha(skin.border-right-color ) * alpha2) if has(skin, 'border-right-color' )
                skin.border-top-color    = alpha(skin.border-top-color,    alpha(skin.border-top-color   ) * alpha2) if has(skin, 'border-top-color'   )
                skin.border-bottom-color = alpha(skin.border-bottom-color, alpha(skin.border-bottom-color) * alpha2) if has(skin, 'border-bottom-color')
                add-style skin
// add-misc
add-misc(effect, name, objects...)
    if effect == null
        add-style get-misc(name), objects

// get-skin
get-skin(name)
    if name != null
        name = 'skin--' + get-string(name)
        if name is defined
            return clone(lookup(name))
        error('Skin is not found: ' + name)
    null
// get-misc
get-misc(name)
    if name != null
        name = 'misc--' + get-string(name)
        if name is defined
            return clone(lookup(name))
        error('Skin (misc) is not found: ' + name)
    null
