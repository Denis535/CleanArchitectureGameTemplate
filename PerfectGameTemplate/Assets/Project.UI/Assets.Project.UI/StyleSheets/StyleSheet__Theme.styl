// add-element
add-element-flex(grow, shrink, basis, align-self)
    add-flex(grow, shrink, basis, align-self)
add-element-flex2(direction, justify-content, align-items)
    add-flex2(direction, justify-content, align-items)

// add-element-gradient
add-element-gradient(effect, view, light-view, dark-view, layout, font = null, text = null)
    add-skins-gradient(effect, view, light-view, dark-view, layout, font, text)

// add-component
add-component(effect, view, position = null, size = null, box = null)
    position = position or null
    width    = size[0]  or auto
    height   = size[1]  or auto
    margin   = box[0]   or 0px
    border   = box[1]   or 0px
    padding  = box[2]   or 0px
    add-skins(effect, view, null, create-layout(position, width, height, margin, border, padding))
