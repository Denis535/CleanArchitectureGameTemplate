@import "../Internal/__Theme"

// field
view--field       = create-view-skin(null,  (element        element       ), (element        element))
view--field-label = create-view-skin(light, (element--light element--light), (element--light element)), create-font(null, null, bold), create-text(middle-left, null, null)
view--field-input = create-view-skin(light, (element--dark  element--dark),  (element--dark  element)), create-font(null, null, null), create-text(middle-left, null, null)

// field
layout--field       = create-layout-skin(null, auto auto, 4px,             0px, 0px                ), create-flex(0, 1, auto, auto), create-flex2(row, flex-start, stretch)
layout--field-label = create-layout-skin(null, auto auto, 0px 2px 0px 0px, 1px, 12px 12px 10px 10px), create-flex(0, 1, auto, auto)
layout--field-input = create-layout-skin(null, auto auto, 0px,             1px, 12px 12px 10px 10px), create-flex(1, 1, auto, auto), create-flex2(row, flex-end, stretch)

// field
.unity-base-field
    add-skin1 field
    add-skin2 field
    &__label
        add-skin1 field-label
        add-skin2 field-label
    &__input
        add-skin1 field-input
        add-skin2 field-input

