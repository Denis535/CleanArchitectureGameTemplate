@import "../StyleSheet__Theme"

// group
group(effect)
    add-element-gradient(effect, group, light-group, dark-group, group)
    &.small
        add-element(effect, null, small-group)
    &.medium
        add-element(effect, null, medium-group)
    &.large
        add-element(effect, null, large-group)
column-group()
    add-element-flex(0, 1, auto, auto)
    add-element-flex2(column, flex-start, stretch)
row-group()
    add-element-flex(0, 1, auto, auto)
    add-element-flex2(row, flex-start, stretch)

// group
.group
    group(null)
.column-group
    column-group()
.row-group
    row-group()
