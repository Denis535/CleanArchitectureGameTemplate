@import "../StyleSheet__Theme"

// card
card()
    add-element(card, card)
    add-element-flex(1, 1, auto, auto)
    add-element-flex2(column, flex-start, stretch)
card-header()
    add-element(card-header, card-header)
    add-element-flex(0, 0, auto, auto)
    add-element-flex2(row, center, center)
card-content()
    add-element(card-content, card-content)
    add-element-flex(1, 1, auto, auto)
    add-element-flex2(column, flex-start, stretch)
card-footer()
    add-element(card-footer, card-footer)
    add-element-flex(0, 0, auto, auto)
    add-element-flex2(row, space-around, center)

// dialog-card
dialog-card()
    add-element(dialog-card, card)
dialog-card-header()
    add-element(dialog-card-header, card-header)
dialog-card-header--info()
    add-element(dialog-card-header--info, card-header)
dialog-card-header--warning()
    add-element(dialog-card-header--warning, card-header)
dialog-card-header--error()
    add-element(dialog-card-header--error, card-header)
dialog-card-content()
    add-element(dialog-card-content, card-content)
    add-element-flex(null, null, null, null)
    add-element-flex2(null, center, center)
dialog-card-footer()
    add-element(dialog-card-footer, card-footer)

// card
.card
    card()
.header
    card-header()
.content
    card-content()
.footer
    card-footer()
    *
        add-layout(width: 25%)

// dialog-card
.dialog-card
    dialog-card()
    .header
        dialog-card-header()
    .content
        dialog-card-content()
    .footer
        dialog-card-footer()

// info-dialog-card
.info-dialog-card
    dialog-card()
    .header
        dialog-card-header--info()
    .content
        dialog-card-content()
    .footer
        dialog-card-footer()

// warning-dialog-card
.warning-dialog-card
    dialog-card()
    .header
        dialog-card-header--warning()
    .content
        dialog-card-content()
    .footer
        dialog-card-footer()

// error-dialog-card
.error-dialog-card
    dialog-card()
    .header
        dialog-card-header--error()
    .content
        dialog-card-content()
    .footer
        dialog-card-footer()
