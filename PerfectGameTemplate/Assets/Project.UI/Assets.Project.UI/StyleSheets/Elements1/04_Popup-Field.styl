@import "../StyleSheet__Theme2"

// popup-field
popup-field()
popup-field-label()
popup-field-input()
// text
text(effect)
    add-skin1      effect, element
    add-skin2      effect, element
    add-skin3-flex effect, 1, 1, auto, auto
// arrow
arrow(effect)
    add-skin1      effect, image icon--light--dropdown-arrow
    add-skin2      effect, image, create-size(12px, 12px), create-box(2px, null, null)
    add-skin3-flex effect, 0, 1, auto, auto

// popup-field
.unity-base-popup-field
    popup-field()
    &__label
        popup-field-label()
    &__input
        popup-field-input()
    &__input .unity-text-element
        text(null)
    &__input &__arrow
        arrow(null)
