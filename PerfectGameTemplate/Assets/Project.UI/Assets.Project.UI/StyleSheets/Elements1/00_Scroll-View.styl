@import "../StyleSheet__Theme"

// scroll-view
scroll-view(effect)
    add-element-gradient(effect, scroll-view, light-scroll-view, dark-scroll-view, scroll-view)
    add-element-flex(0, 1, auto, auto)
    add-element-flex2(column, flex-start, stretch)
viewport-and-vertical-scroller(effect)
    add-component(effect, null)
    add-component-flex(1, 1, auto, auto)
    add-component-flex2(row, flex-start, stretch)
viewport(effect)
    overflow hidden
    add-component(effect, null)
    add-component-flex(1, 1, auto, auto)
    add-component-flex2(column, flex-start, stretch)
content(effect)
    overflow scroll
    add-component(effect, null)
    add-component-flex(0, 0, auto, auto)
    add-component-flex2(column, flex-start, stretch)

// scroller
horizontal-scroller(effect)
    add-element(effect, null, null)
    add-element-flex(0, 0, auto, auto)
    add-element-flex2(row, flex-start, center)
// slider-field
horizontal-slider-field(effect)
    add-element(effect, default, default)
    add-element-flex(1, 1, auto, auto)
    add-element-flex2(row, flex-start, center)
horizontal-slider-field-input(effect)
    add-element(effect, default, default)
    add-element-flex(1, 1, auto, auto)
    add-element-flex2(row, flex-start, center)
horizontal-container(effect)
    add-component(effect, default)
    add-component-flex(1, 1, auto, auto)
    add-component-flex2(row, flex-start, center)
horizontal-tracker(effect)
    add-skin effect, dark-image, image, create-position(null), create-size(auto, 24px), create-flex(1, 1, auto, auto)
horizontal-dragger(effect)
    add-skin effect, button, image, create-position(absolute), create-size(auto, 24px), create-flex(0, 1, auto, auto)
// button
horizontal-low-button(effect)
    add-skin effect, button dark-arrow-icon--left, image, create-size(24px, 24px), create-box(2px, null, null), create-flex(0, 0, auto, auto)
horizontal-high-button(effect)
    add-skin effect, button dark-arrow-icon--right, image, create-size(24px, 24px), create-box(2px, null, null), create-flex(0, 0, auto, auto)

// scroller
vertical-scroller(effect)
    add-element(effect, null, null)
    add-element-flex(0, 0, auto, auto)
    add-element-flex2(column, flex-start, center)
// slider-field
vertical-slider-field(effect)
    add-element(effect, default, default)
    add-element-flex(1, 1, auto, auto)
    add-element-flex2(column, flex-start, center)
vertical-slider-field-input(effect)
    add-element(effect, default, default)
    add-element-flex(1, 1, auto, auto)
    add-element-flex2(column, flex-start, center)
vertical-container(effect)
    add-component(effect, default)
    add-component-flex(1, 1, auto, auto)
    add-component-flex2(column, flex-start, center)
vertical-tracker(effect)
    add-skin effect, dark-image, image, create-size(24px, auto), create-flex(1, 1, auto, auto)
vertical-dragger(effect)
    add-skin effect, button, image, create-position(absolute), create-size(24px, auto), create-flex(0, 1, auto, auto)
// button
vertical-low-button(effect)
    add-skin effect, button dark-arrow-icon--up, image, create-size(24px, 24px), create-box(2px, null, null), create-flex(0, 0, auto, auto)
vertical-high-button(effect)
    add-skin effect, button dark-arrow-icon--down, image, create-size(24px, 24px), create-box(2px, null, null), create-flex(0, 0, auto, auto)

// scroll-view
.unity-scroll-view
    scroll-view(null)
    #unity-content-and-vertical-scroll-container
        viewport-and-vertical-scroller(null)
    #unity-content-viewport
        viewport(null)
    #unity-content-container
        content(null)

// scroll-view
.unity-scroll-view.reverse
    #unity-content-viewport
        add-component-flex2(column-reverse, null, null)

// scroller
.unity-scroller--horizontal
    horizontal-scroller(null)
    // slider
    .unity-base-slider
        horizontal-slider-field(null)
        .unity-base-slider__input
            horizontal-slider-field-input(null)
        #unity-drag-container
            horizontal-container(null)
        #unity-tracker
            horizontal-tracker(null)
        #unity-dragger
            horizontal-dragger(null)
    .unity-base-slider:focus
        #unity-dragger
            horizontal-dragger(focus)
    // button
    #unity-low-button
        horizontal-low-button(null)
    #unity-low-button:hover
        horizontal-low-button(hover)
    #unity-low-button:active
        horizontal-low-button(active)
    // button
    #unity-high-button
        horizontal-high-button(null)
    #unity-high-button:hover
        horizontal-high-button(hover)
    #unity-high-button:active
        horizontal-high-button(active)

// scroller
.unity-scroller--vertical
    vertical-scroller(null)
    // slider
    .unity-base-slider
        vertical-slider-field(null)
        .unity-base-slider__input
            vertical-slider-field-input(null)
        #unity-drag-container
            vertical-container(null)
        #unity-tracker
            vertical-tracker(null)
        #unity-dragger
            vertical-dragger(null)
    .unity-base-slider:focus
        #unity-dragger
            vertical-dragger(focus)
    // button
    #unity-low-button
        vertical-low-button(null)
    #unity-low-button:hover
        vertical-low-button(hover)
    #unity-low-button:active
        vertical-low-button(active)
    // button
    #unity-high-button
        vertical-high-button(null)
    #unity-high-button:hover
        vertical-high-button(hover)
    #unity-high-button:active
        vertical-high-button(active)
