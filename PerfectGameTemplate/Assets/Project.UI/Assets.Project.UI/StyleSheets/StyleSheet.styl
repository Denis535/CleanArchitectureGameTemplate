// view
.view
    layout-position()
    layout-size()
    layout-box()

// screen-view
.screen-view
.views-container
.modal-views-container
    layout-position(absolute)
    layout-size(100%, 100%)
    layout-box(0px, 0px, 0px)

// widget-view
.widget-view
    layout-position(absolute)
    layout-size(100%, 100%)
    layout-box(0px, 0px, 0px)
    translate 0% 0%
.left-widget-view
    layout-position(absolute, left: 5%, bottom: 10%)
    layout-size(30%, auto)
    layout-box(0px, 0px, 0px)
    translate 0% 0%
.small-widget-view
    layout-position(absolute, left: 50%, top: 50%)
    layout-size(60%, 50%)
    layout-box(0px, 0px, 0px)
    translate -50% -50%
.middle-widget-view
    layout-position(absolute, left: 50%, top: 50%)
    layout-size(80%, 70%)
    layout-box(0px, 0px, 0px)
    translate -50% -50%
.large-widget-view
    layout-position(absolute, left: 50%, top: 50%)
    layout-size(90%, 80%)
    layout-box(0px, 0px, 0px)
    translate -50% -50%
.modal-widget-view
    layout-position(absolute, left: 50%, top: 49%)
    layout-size(60%, 50%)
    layout-box(0px, 0px, 0px)
    translate -50% -50%

// sub-view
.sub-view
    layout-position()
    layout-size()
    layout-box()

