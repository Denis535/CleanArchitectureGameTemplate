@import url("StyleSheet_Core.uss")
@import url("StyleSheet_Core2.uss")
@import url("StyleSheet_Library.uss")
@import "StyleSheet_Internal"
@import "StyleSheet_Internal2"

// view
.view
    add-layout-position(null)
    add-layout-size(null, null)
    add-layout-box(null, null, null)

// screen-view
.screen-view
.views-container
.modal-views-container
    add-layout-position(absolute)
    add-layout-size(100%, 100%)
    add-layout-box(0px, 0px, 0px)

// widget-view
.widget-view
    add-layout-position(absolute)
    add-layout-size(100%, 100%)
    add-layout-box(0px, 0px, 0px)
    translate 0% 0%
.left-widget-view
    add-layout-position(absolute, left: 5%, bottom: 10%)
    add-layout-size(30%, auto)
    add-layout-box(0px, 0px, 0px)
    translate 0% 0%
.small-widget-view
    add-layout-position(absolute, left: 50%, top: 50%)
    add-layout-size(60%, 50%)
    add-layout-box(0px, 0px, 0px)
    translate -50% -50%
.middle-widget-view
    add-layout-position(absolute, left: 50%, top: 50%)
    add-layout-size(80%, 70%)
    add-layout-box(0px, 0px, 0px)
    translate -50% -50%
.large-widget-view
    add-layout-position(absolute, left: 50%, top: 50%)
    add-layout-size(90%, 80%)
    add-layout-box(0px, 0px, 0px)
    translate -50% -50%
.modal-widget-view
    add-layout-position(absolute, left: 50%, top: 49%)
    add-layout-size(60%, 50%)
    add-layout-box(0px, 0px, 0px)
    translate -50% -50%

// sub-view
.sub-view
    add-layout-position(null)
    add-layout-size(null, null)
    add-layout-box(null, null, null)

// card
.unity-card
    add-view(null)
    add-layout(null)
    .unity-header
        add-view(null, font: fnt(null, 140%, bold))
        add-layout(null)
    .unity-content
        add-view(null, font: fnt(null, 100%, normal))
        add-layout(null)
    .unity-footer
        add-view(null, font: fnt(null, 130%, bold))
        add-layout(null)

// dialog-card
.unity-dialog-card, .unity-info-dialog-card, .unity-warning-dialog-card, .unity-error-dialog-card
    add-view(null)
    add-layout(null)
    .unity-header
        add-view(null)
        add-layout(null)
    .unity-content
        add-view(null, font: fnt(null, 120%, bold))
        add-layout(null)
    .unity-footer
        add-view(null)
        add-layout(null)

