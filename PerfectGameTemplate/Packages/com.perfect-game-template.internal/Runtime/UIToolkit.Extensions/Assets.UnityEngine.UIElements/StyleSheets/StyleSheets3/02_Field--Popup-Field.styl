@import "../Internal/_Theme"

// selector
selector--field = '.unity-base-popup-field'
selector--label = '.unity-base-popup-field .unity-base-popup-field__label'
selector--input = '.unity-base-popup-field .unity-base-popup-field__input'
selector--text  = '.unity-base-popup-field .unity-base-popup-field__input .unity-base-popup-field__text'
selector--arrow = '.unity-base-popup-field .unity-base-popup-field__input .unity-base-popup-field__arrow'

// view
add-style(field, null                                                                          )
add-style(label, null                                                                          )
add-style(input, null                                                                          )
add-style(text,  create-view(null, element,   element,                    element,   element  ))
add-style(arrow, create-view(null, component, dropdown-arrow-icon--light, component, component))

// layout
add-style(field, null                                                )
add-style(label, null                                                )
add-style(input, null                                                )
add-style(text,  create-layout(null, auto, auto, (0px), (0px), (0px)))
add-style(arrow, create-layout(null, 12px, 12px, (2px), (0px), (0px)))

// flex
add-style(field, null                         )
add-style(label, null                         )
add-style(input, null                         )
add-style(text,  create-flex(1, 1, auto, auto))
add-style(arrow, create-flex(0, 1, auto, auto))
