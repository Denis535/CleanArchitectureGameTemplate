@import "../Internal/_Theme"

// view
view--dropdown                         = create-view-skin(light, (dropdown             dropdown             ), (dropdown             dropdown     ))
view--dropdown--hover                  = create-view-skin(light, (dropdown--hover      dropdown--hover      ), (dropdown--hover      dropdown     ))
view--dropdown-item                    = create-view-skin(light, (dropdown-item        dropdown-item        ), (dropdown-item        dropdown-item))
view--dropdown-item--hover             = create-view-skin(light, (dropdown-item--hover dropdown-item--hover ), (dropdown-item--hover dropdown-item))
view--checkmark                        = create-view-skin(null,  (component            component            ), (component            component    ))
view--checkmark--checked               = create-view-skin(null,  (component            checkmark-icon--light), (component            component    ))
view--text                             = create-view-skin(null,  (element              element              ), (element              element      ))
// view
view--scroll-view                      = create-view-skin(null,  (element              element              ), (element              element      ))
view--viewport-and-vertical-scroller   = create-view-skin(null,  (element              element              ), (element              element      ))
view--viewport                         = create-view-skin(null,  (element              element              ), (element              element      ))
view--content                          = create-view-skin(null,  (element              element              ), (element              element      ))

// layout
layout--dropdown                       = create-layout-skin(null, auto auto, (0px 0px  2px 0px), (1px            ), (0px                ))
layout--dropdown-item                  = create-layout-skin(null, auto auto, (0px             ), (0px 0px 0px 1px), (12px 12px 10px 10px))
layout--checkmark                      = create-layout-skin(null, 16px 16px, (0px 12px 0px 0px), (1px            ), (0px                ))
layout--text                           = create-layout-skin(null, auto auto, (0px             ), (0px            ), (0px                ))
// layout
layout--scroll-view                    = create-layout-skin(null, auto auto, (0px             ), (0px            ), (0px                ))
layout--viewport-and-vertical-scroller = create-layout-skin(null, auto auto, (0px             ), (0px            ), (0px                ))
layout--viewport                       = create-layout-skin(null, auto auto, (0px             ), (0px            ), (0px                ))
layout--content                        = create-layout-skin(null, auto auto, (0px             ), (0px            ), (0px                ))

// flex
flex--dropdown                         = create-flex(0, 1, auto, auto)
flex--dropdown-item                    = create-flex(0, 1, auto, auto), create-flex2(row, flex-start, stretch)
flex--checkmark                        = create-flex(0, 1, auto, auto)
flex--text                             = create-flex(1, 1, auto, auto)
// flex
flex--scroll-view                      = null
flex--viewport-and-vertical-scroller   = null
flex--viewport                         = null
flex--content                          = null

// dropdown
.unity-base-dropdown
    add-view(bg-color: rgba(0, 0, 0, 0.25))
    add-layout(position: absolute)
    &__container-outer
        add-skin1 dropdown
        add-skin2 dropdown
        add-skin3 dropdown
    .unity-scroll-view
        add-skin1 scroll-view
        add-skin2 scroll-view
        add-skin3 scroll-view
    #unity-content-and-vertical-scroll-container
        add-skin1 viewport-and-vertical-scroller
        add-skin2 viewport-and-vertical-scroller
        add-skin3 viewport-and-vertical-scroller
    #unity-content-viewport
        add-skin1 viewport
        add-skin2 viewport
        add-skin3 viewport
    #unity-content-container
        add-skin1 content
        add-skin2 content
        add-skin3 content
    &__item
        add-skin1 dropdown-item
        add-skin2 dropdown-item
        add-skin3 dropdown-item
    &__item &__checkmark
        add-skin1 checkmark
        add-skin2 checkmark
        add-skin3 checkmark
    &__item &__label
        add-skin1 text
        add-skin2 text
        add-skin3 text
// dropdown
.unity-base-dropdown
    &__container-outer:hover
        add-skin1 dropdown--hover
    &__item:hover
        add-skin1 dropdown-item--hover
    &__item:hover &__checkmark
        add-skin1 none
    &__item:hover &__label
        add-skin1 none
    &__item:checked
        add-skin1 none
    &__item:checked &__checkmark
        add-skin1 checkmark--checked
    &__item:checked &__label
        add-skin1 none
