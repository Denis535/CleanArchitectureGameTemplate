@import "../Internal/_Theme"

// selector
selector--field = '.unity-base-text-field'
selector--label = '.unity-base-text-field .unity-base-text-field__label'
selector--input = '.unity-base-text-field .unity-base-text-field__input'
selector--text  = '.unity-base-text-field .unity-base-text-field__input .unity-text-element'

// view
add-style(field, null                                                                                 )
add-style(label, null                                                                                 )
add-style(input, null                                                                                 )
add-style(text,  create-view(null, element--normal, element--normal, element--normal, element--normal))

// layout
add-style(field, null                                                )
add-style(label, null                                                )
add-style(input, null                                                )
add-style(text,  create-layout(null, auto, auto, (0px), (0px), (0px)))

// flex
add-style(field, null                         )
add-style(label, null                         )
add-style(input, null                         )
add-style(text,  create-flex(1, 1, auto, auto))
