@import "../Internal/_Theme"

// selector
selector--field     = '.unity-base-slider'
selector--label     = '.unity-base-slider .unity-base-slider__label'
selector--input     = '.unity-base-slider .unity-base-slider__input'
selector--container = '.unity-base-slider .unity-base-slider__input #unity-drag-container'
selector--tracker   = '.unity-base-slider .unity-base-slider__input #unity-drag-container #unity-tracker'
selector--dragger   = '.unity-base-slider .unity-base-slider__input #unity-drag-container #unity-dragger'

// view
style(field    )
style(label    )
style(input    )
style(container) view(null, element-----------normal, element-----------normal, element-----------normal, element----normal)
style(tracker  ) view(null, component--dark---normal, component--dark---normal, component--dark---normal, component--normal)
style(dragger  ) view(null, component--light--normal, component--light--normal, component--light--normal, component--normal)
flush()

// layout
style(field    )
style(label    )
style(input    )
style(container) layout(null,     auto, auto, (0px), (0px), (0px))
style(tracker  ) layout(null,     auto,  8px, (0px), (1px), (0px))
style(dragger  ) layout(absolute, 8px,  24px, (0px), (1px), (0px))
flush()

// flex
style(field    )
style(label    )
style(input    )
style(container) flex(1, 1, auto, auto) flex2(row, flex-start, center)
style(tracker  ) flex(1, 1, auto, auto)
style(dragger  ) flex(0, 1, auto, auto)
flush()
