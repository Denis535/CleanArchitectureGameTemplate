@import "../Internal/_Theme"

// selector
selector--field     = '.unity-base-slider'
selector--label     = '.unity-base-slider .unity-base-slider__label'
selector--input     = '.unity-base-slider .unity-base-slider__input'
selector--container = '.unity-base-slider .unity-base-slider__input #unity-drag-container'
selector--tracker   = '.unity-base-slider .unity-base-slider__input #unity-drag-container #unity-tracker'
selector--dragger   = '.unity-base-slider .unity-base-slider__input #unity-drag-container #unity-dragger'

// view
add-style(field    )
add-style(label    )
add-style(input    )
add-style(container) theme(element-----------normal)
add-style(tracker  ) theme(component--dark---normal)
add-style(dragger  ) theme(component--light--normal)
flush()

// layout
add-style(field    )
add-style(label    )
add-style(input    )
add-style(container) layout(null,     auto, auto, (0px), (0px), (0px))
add-style(tracker  ) layout(null,     auto,  8px, (0px), (1px), (0px))
add-style(dragger  ) layout(absolute, 8px,  24px, (0px), (1px), (0px))
flush()

// flex
add-style(field    )
add-style(label    )
add-style(input    )
add-style(container) flex(1, 1, auto, auto) flex2(row, flex-start, center)
add-style(tracker  ) flex(1, 1, auto, auto)
add-style(dragger  ) flex(0, 1, auto, auto)
flush()
