@import "../Internal/_Theme"

// selector
selector--field--------normal                 = '.unity-base-slider'
selector--field--------hover                  = '.unity-base-slider:hover'
selector--field--------active                 = '.unity-base-slider:active'
selector--field--------normal--focus          = '.unity-base-slider:focus'
selector--field--------hover---focus          = '.unity-base-slider:focus:hover'
selector--field--------active--focus          = '.unity-base-slider:focus:active'
selector--field--------normal--invalid        = '.unity-base-slider.invalid'
selector--field--------hover---invalid        = '.unity-base-slider.invalid:hover'
selector--field--------active--invalid        = '.unity-base-slider.invalid:active'
selector--field--------normal--invalid--focus = '.unity-base-slider.invalid:focus'
selector--field--------hover---invalid--focus = '.unity-base-slider.invalid:focus:hover'
selector--field--------active--invalid--focus = '.unity-base-slider.invalid:focus:active'
// selector
selector--field-label--normal                 = '.unity-base-slider                      .unity-base-slider__label'
selector--field-label--hover                  = '.unity-base-slider:hover                .unity-base-slider__label'
selector--field-label--active                 = '.unity-base-slider:active               .unity-base-slider__label'
selector--field-label--normal--focus          = '.unity-base-slider:focus                .unity-base-slider__label'
selector--field-label--hover---focus          = '.unity-base-slider:focus:hover          .unity-base-slider__label'
selector--field-label--active--focus          = '.unity-base-slider:focus:active         .unity-base-slider__label'
selector--field-label--normal--invalid        = '.unity-base-slider.invalid              .unity-base-slider__label'
selector--field-label--hover---invalid        = '.unity-base-slider.invalid:hover        .unity-base-slider__label'
selector--field-label--active--invalid        = '.unity-base-slider.invalid:active       .unity-base-slider__label'
selector--field-label--normal--invalid--focus = '.unity-base-slider.invalid:focus        .unity-base-slider__label'
selector--field-label--hover---invalid--focus = '.unity-base-slider.invalid:focus:hover  .unity-base-slider__label'
selector--field-label--active--invalid--focus = '.unity-base-slider.invalid:focus:active .unity-base-slider__label'
// selector
selector--field-input--normal                 = '.unity-base-slider                      .unity-base-slider__input'
selector--field-input--hover                  = '.unity-base-slider:hover                .unity-base-slider__input'
selector--field-input--active                 = '.unity-base-slider:active               .unity-base-slider__input'
selector--field-input--normal--focus          = '.unity-base-slider:focus                .unity-base-slider__input'
selector--field-input--hover---focus          = '.unity-base-slider:focus:hover          .unity-base-slider__input'
selector--field-input--active--focus          = '.unity-base-slider:focus:active         .unity-base-slider__input'
selector--field-input--normal--invalid        = '.unity-base-slider.invalid              .unity-base-slider__input'
selector--field-input--hover---invalid        = '.unity-base-slider.invalid:hover        .unity-base-slider__input'
selector--field-input--active--invalid        = '.unity-base-slider.invalid:active       .unity-base-slider__input'
selector--field-input--normal--invalid--focus = '.unity-base-slider.invalid:focus        .unity-base-slider__input'
selector--field-input--hover---invalid--focus = '.unity-base-slider.invalid:focus:hover  .unity-base-slider__input'
selector--field-input--active--invalid--focus = '.unity-base-slider.invalid:focus:active .unity-base-slider__input'
// selector
selector--container----normal                 = '.unity-base-slider                      .unity-base-slider__input #unity-drag-container'
selector--tracker------normal                 = '.unity-base-slider                      .unity-base-slider__input #unity-drag-container #unity-tracker'
selector--dragger------normal                 = '.unity-base-slider                      .unity-base-slider__input #unity-drag-container #unity-dragger'

// view
add-style(field--------normal) theme()
add-style(field-label--normal) theme()
add-style(field-input--normal) theme()
add-style(container----normal) theme(       element----normal)
add-style(tracker------normal) theme(dark---component--normal)
add-style(dragger------normal) theme(light--component--normal)
flush()

// layout
add-style(field--------normal) layout()
add-style(field-label--normal) layout()
add-style(field-input--normal) layout()
add-style(container----normal) layout(null,     auto, auto, (0px), (0px), (0px))
add-style(tracker------normal) layout(null,     auto,  8px, (0px), (1px), (0px))
add-style(dragger------normal) layout(absolute, 8px,  24px, (0px), (1px), (0px))
flush()

// flex
add-style(field--------normal) flex()
add-style(field-label--normal) flex()
add-style(field-input--normal) flex()
add-style(container----normal) flex(1, 1, auto, auto) flex2(row, flex-start, center)
add-style(tracker------normal) flex(1, 1, auto, auto)
add-style(dragger------normal) flex(0, 1, auto, auto)
flush()
