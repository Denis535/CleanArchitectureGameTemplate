@import "../Internal/_Theme"

// selector
selector--dropdown                       = '.unity-base-dropdown'
selector--scroll-view                    = '.unity-base-dropdown .unity-scroll-view'
selector--viewport-and-vertical-scroller = '.unity-base-dropdown .unity-scroll-view #unity-content-and-vertical-scroll-container'
selector--viewport                       = '.unity-base-dropdown .unity-scroll-view #unity-content-viewport'
selector--content                        = '.unity-base-dropdown .unity-scroll-view #unity-content-container'
selector--dropdown-item                  = '.unity-base-dropdown__item'
selector--dropdown-item--checked         = '.unity-base-dropdown__item:checked'
selector--checkmark                      = '.unity-base-dropdown__item         .unity-base-dropdown__checkmark'
selector--checkmark------checked         = '.unity-base-dropdown__item:checked .unity-base-dropdown__checkmark'
selector--text                           = '.unity-base-dropdown__item         .unity-base-dropdown__label'
selector--text-----------checked         = '.unity-base-dropdown__item:checked .unity-base-dropdown__label'
// selector
selector--scroll-view----hover           = '.unity-base-dropdown .unity-scroll-view:hover'
selector--dropdown-item--hover           = '.unity-base-dropdown__item:hover'
selector--checkmark------hover           = '.unity-base-dropdown__item:hover .unity-base-dropdown__checkmark'
selector--text-----------hover           = '.unity-base-dropdown__item:hover .unity-base-dropdown__label'

// view
add-style(dropdown                      )
add-style(scroll-view                   ) theme(dropdown-------normal)
add-style(viewport-and-vertical-scroller)
add-style(viewport                      ) property(overflow, hidden)
add-style(content                       ) property(overflow, scroll)
add-style(dropdown-item                 ) theme(dropdown-item--normal)
add-style(checkmark                     ) theme(component------normal)
add-style(checkmark--checked            ) theme(component------normal) theme(checkmark-icon--light)
add-style(text                          ) theme(element--------normal)
flush()
// view
add-style(scroll-view----hover          ) theme(dropdown-------hover)
add-style(dropdown-item--hover          ) theme(dropdown-item--hover)
flush()

// layout
add-style(dropdown                      ) layout(absolute, auto, auto, (0px             ), (0px            ), (0px                ))
add-style(scroll-view                   ) layout(null,     auto, auto, (0px             ), (1px            ), (0px                ))
add-style(viewport-and-vertical-scroller)
add-style(viewport                      )
add-style(content                       )
add-style(dropdown-item                 ) layout(null,     auto, auto, (0px             ), (0px 0px 0px 1px), (12px 12px 10px 10px))
add-style(checkmark                     ) layout(null,     16px, 16px, (0px 12px 0px 0px), (1px            ), (0px                ))
add-style(text                          ) layout(null,     auto, auto, (0px             ), (0px            ), (0px                ))
flush()

// flex
add-style(dropdown                      )
add-style(scroll-view                   )
add-style(viewport-and-vertical-scroller)
add-style(viewport                      )
add-style(content                       )
add-style(dropdown-item                 ) flex(0, 1, auto, auto) flex2(row, flex-start, stretch)
add-style(checkmark                     ) flex(0, 1, auto, auto)
add-style(text                          ) flex(1, 1, auto, auto)
flush()
