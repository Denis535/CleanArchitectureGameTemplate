@import "../Internal/_Theme"

// selector
selector--dropdown                       = '.unity-base-dropdown'
selector--scroll-view                    = '.unity-base-dropdown .unity-scroll-view'
selector--viewport-and-vertical-scroller = '.unity-base-dropdown .unity-scroll-view #unity-content-and-vertical-scroll-container'
selector--viewport                       = '.unity-base-dropdown .unity-scroll-view #unity-content-viewport'
selector--content                        = '.unity-base-dropdown .unity-scroll-view #unity-content-container'
selector--dropdown-item                  = '.unity-base-dropdown__item'
selector--dropdown-item--checked         = '.unity-base-dropdown__item:checked'
selector--checkmark                      = '.unity-base-dropdown__item         .unity-base-dropdown__checkmark'
selector--checkmark------checked         = '.unity-base-dropdown__item:checked .unity-base-dropdown__checkmark'
selector--text                           = '.unity-base-dropdown__item         .unity-base-dropdown__label'
selector--text-----------checked         = '.unity-base-dropdown__item:checked .unity-base-dropdown__label'
// selector
selector--scroll-view----hover           = '.unity-base-dropdown .unity-scroll-view:hover'
selector--dropdown-item--hover           = '.unity-base-dropdown__item:hover'
selector--checkmark------hover           = '.unity-base-dropdown__item:hover .unity-base-dropdown__checkmark'
selector--text-----------hover           = '.unity-base-dropdown__item:hover .unity-base-dropdown__label'

// view
add-style(dropdown,                       null                                                                                                )
add-style(scroll-view,                    create-view(light, dropdown,             dropdown,              dropdown,             dropdown     ))
add-style(viewport-and-vertical-scroller, null                                                                                                )
+add-style(viewport,                      null                                                                                                )
    overflow hidden
+add-style(content,                       null                                                                                                )
    overflow scroll
add-style(dropdown-item,                  create-view(light, dropdown-item,        dropdown-item,         dropdown-item,        dropdown-item))
add-style(checkmark,                      create-view(null,  component,            component,             component,            component    ))
add-style(checkmark--checked,             create-view(null,  component,            checkmark-icon--light, component,            component    ))
add-style(text,                           create-view(null,  element,              element,               element,              element      ))
// view
add-style(scroll-view----hover,           create-view(null,  dropdown--hover,      null,                  dropdown--hover,      null         ))
add-style(dropdown-item--hover,           create-view(null,  dropdown-item--hover, null,                  dropdown-item--hover, null         ))

// layout
add-style(dropdown,                       create-layout(absolute, auto, auto, (0px             ), (0px            ), (0px                )))
add-style(scroll-view,                    create-layout(null,     auto, auto, (0px             ), (1px            ), (0px                )))
add-style(viewport-and-vertical-scroller, null                                                                                             )
add-style(viewport,                       null                                                                                             )
add-style(content,                        null                                                                                             )
add-style(dropdown-item,                  create-layout(null,     auto, auto, (0px             ), (0px 0px 0px 1px), (12px 12px 10px 10px)))
add-style(checkmark,                      create-layout(null,     16px, 16px, (0px 12px 0px 0px), (1px            ), (0px                )))
add-style(text,                           create-layout(null,     auto, auto, (0px             ), (0px            ), (0px                )))

// flex
add-style(dropdown,                       null                                                                 )
add-style(scroll-view,                    null                                                                 )
add-style(viewport-and-vertical-scroller, null                                                                 )
add-style(viewport,                       null                                                                 )
add-style(content,                        null                                                                 )
add-style(dropdown-item,                  create-flex(0, 1, auto, auto), create-flex2(row, flex-start, stretch))
add-style(checkmark,                      create-flex(0, 1, auto, auto)                                        )
add-style(text,                           create-flex(1, 1, auto, auto)                                        )
