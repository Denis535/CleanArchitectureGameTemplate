@import "../Internal/_Theme"

// selector
selector--field              = '.unity-toggle'
selector--label              = '.unity-toggle .unity-toggle__label'
selector--input              = '.unity-toggle .unity-toggle__input'
selector--checkmark          = '.unity-toggle .unity-toggle__input         .unity-toggle__checkmark'
selector--checkmark--checked = '.unity-toggle .unity-toggle__input:checked .unity-toggle__checkmark'

// view
add-style(field,              null                                                                                 )
add-style(label,              null                                                                                 )
add-style(input,              null                                                                                 )
add-style(checkmark,          create-view(null, component--dark, component-------dark,  component--dark, component))
add-style(checkmark--checked, create-view(null, component--dark, checkmark-icon--light, component--dark, component))

// layout
add-style(field,              null                                                )
add-style(label,              null                                                )
add-style(input,              null                                                )
add-style(checkmark,          create-layout(null, 16px, 16px, (0px), (1px), (0px)))

// flex
add-style(field,              null                         )
add-style(label,              null                         )
add-style(input,              null                         )
add-style(checkmark,          create-flex(0, 1, auto, auto))
