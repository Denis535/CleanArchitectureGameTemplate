.unity-base-popup-field .unity-base-popup-field__input .unity-base-popup-field__arrow {
  background-image: url('../../Images/DropdownArrow.png');
  -unity-background-image-tint-color: #e6e6e6;
}
.unity-base-popup-field .unity-base-popup-field__input .unity-base-popup-field__text {
  width: auto;
  height: auto;
  margin-left: 0px;
  margin-right: 0px;
  margin-top: 0px;
  margin-bottom: 0px;
  border-left-width: 0px;
  border-right-width: 0px;
  border-top-width: 0px;
  border-bottom-width: 0px;
  padding-left: 0px;
  padding-right: 0px;
  padding-top: 0px;
  padding-bottom: 0px;
}
.unity-base-popup-field .unity-base-popup-field__input .unity-base-popup-field__arrow {
  width: 12px;
  height: 12px;
  margin-left: 2px;
  margin-right: 2px;
  margin-top: 2px;
  margin-bottom: 2px;
  border-left-width: 0px;
  border-right-width: 0px;
  border-top-width: 0px;
  border-bottom-width: 0px;
  padding-left: 0px;
  padding-right: 0px;
  padding-top: 0px;
  padding-bottom: 0px;
}
.unity-base-popup-field .unity-base-popup-field__input .unity-base-popup-field__text {
  flex-grow: 1;
  flex-shrink: 1;
  flex-basis: auto;
  align-self: auto;
}
.unity-base-popup-field .unity-base-popup-field__input .unity-base-popup-field__arrow {
  flex-grow: 0;
  flex-shrink: 1;
  flex-basis: auto;
  align-self: auto;
}
