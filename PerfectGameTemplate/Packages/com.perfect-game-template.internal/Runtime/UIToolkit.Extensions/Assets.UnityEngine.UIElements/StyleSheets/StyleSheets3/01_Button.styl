@import "../Internal/_Theme"

// selector
selector---------button                = '.unity-button'
selector--repeat-button                = '.unity-repeat-button'
// selector
selector---------button--hover         = '.unity-button:hover'
selector--repeat-button--hover         = '.unity-repeat-button:hover'
// selector
selector---------button--active        = '.unity-button:active'
selector--repeat-button--active        = '.unity-repeat-button:active'
// selector
selector---------button--focus         = '.unity-button:focus'
selector--repeat-button--focus         = '.unity-repeat-button:focus'
// selector
selector---------button--focus--hover  = '.unity-button:focus:hover'
selector--repeat-button--focus--hover  = '.unity-repeat-button:focus:hover'
// selector
selector---------button--focus--active = '.unity-button:focus:active'
selector--repeat-button--focus--active = '.unity-repeat-button:focus:active'

// view
add-style(       button        ) view(element--normal, element--light--normal, element--light--normal, element--light--normal, element--normal) font(null, null, bold) text(middle-center, null, null)
add-style(repeat-button        ) view(element--normal, element--light--normal, element--light--normal, element--light--normal, element--normal) font(null, null, bold) text(middle-center, null, null)
flush()
// view
add-style(       button--hover ) view(null,            element--light--hover,  null,                   element--light--hover,  null           )
add-style(repeat-button--hover ) view(null,            element--light--hover,  null,                   element--light--hover,  null           )
flush()
// view
add-style(       button--active) view(null,            element--light--active, null,                   element--light--active, null           )
add-style(repeat-button--active) view(null,            element--light--active, null,                   element--light--active, null           )
flush()

// layout
add-style(button               ) layout(null, auto, auto, (4px), (1px), (12px 12px 10px 10px))
add-style(repeat-button        ) layout(null, auto, auto, (4px), (1px), (12px 12px 10px 10px))
flush()

// flex
add-style(button               ) flex(0, 1, auto, auto)
add-style(repeat-button        ) flex(0, 1, auto, auto)
flush()
