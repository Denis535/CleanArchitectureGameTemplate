@import "../Internal/_Theme"

// button
selector--button         = '.unity-button'
// button
selector--button--hover  = '.unity-button:hover'
// button
selector--button--active = '.unity-button:active'
// button
selector--button--focus  = '.unity-button:focus'

// repeat-button
selector--repeat-button         = '.unity-repeat-button'
// repeat-button
selector--repeat-button--hover  = '.unity-repeat-button:hover'
// repeat-button
selector--repeat-button--active = '.unity-repeat-button:active'
// repeat-button
selector--repeat-button--focus  = '.unity-repeat-button:focus'

// view
view--button         = create-view(light element--light         element--light element--light         element), create-font(null, null, bold), create-text(middle-center, null, null)
// view
view--button--hover  = create-view(null  element--light--hover  null           element--light--hover  null   )
// view
view--button--active = create-view(null  element--light--active null           element--light--active null   )
// view
view--button--focus  = create-view(focus element--light--focus  null           element--light--focus  null   )

// layout
layout--button       = create-layout(null auto auto (4px) (1px) (12px 12px 10px 10px))

// flex
flex--button         = create-flex(0, 1, auto, auto)

// button
.unity-button
.unity-repeat-button
    // cursor link
    add-skin1 button
    add-skin2 button
    add-skin3 button
// button
.unity-button:hover
.unity-repeat-button:hover
    add-skin1 button--hover
// button
.unity-button:active
.unity-repeat-button:active
    add-skin1 button--active
// button
.unity-button:focus
.unity-repeat-button:focus
    add-skin1 button--focus
