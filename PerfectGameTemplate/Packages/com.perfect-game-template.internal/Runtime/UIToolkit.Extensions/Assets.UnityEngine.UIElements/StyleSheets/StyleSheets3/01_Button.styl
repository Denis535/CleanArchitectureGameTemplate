@import "../Internal/_Theme"

// view
view--button        = create-view-skin(light, (element--light        element--light       ), (element--light        element)), create-font(null, null, bold), create-text(middle-center, null, null)

// view
view--hover--button = create-view-skin(light, (hover--element--light hover--element--light), (hover--element--light element))

// layout
layout--button      = create-layout-skin(null, auto auto, (4px), (1px), (12px 12px 10px 10px))

// flex
flex--button        = create-flex(0, 1, auto, auto)

// button
.unity-button
.unity-repeat-button
    // cursor link
    add-skin1 button
    add-skin2 button
    add-skin3 button
// button
.unity-button:hover
.unity-repeat-button:hover
    add-skin1 hover--button
