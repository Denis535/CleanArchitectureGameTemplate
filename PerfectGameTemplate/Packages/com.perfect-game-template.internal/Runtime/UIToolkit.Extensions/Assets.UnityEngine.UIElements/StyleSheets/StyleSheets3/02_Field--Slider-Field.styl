@import "../Internal/_Theme"

// selector
selector--field     = '.unity-base-slider'
selector--label     = '.unity-base-slider .unity-base-slider__label'
selector--input     = '.unity-base-slider .unity-base-slider__input'
selector--container = '.unity-base-slider .unity-base-slider__input #unity-drag-container'
selector--tracker   = '.unity-base-slider .unity-base-slider__input #unity-drag-container #unity-tracker'
selector--dragger   = '.unity-base-slider .unity-base-slider__input #unity-drag-container #unity-dragger'

// view
add-style(field,     null                                                                              )
add-style(label,     null                                                                              )
add-style(input,     null                                                                              )
add-style(container, create-view(null, element,          element,          element,          element  ))
add-style(tracker,   create-view(null, component--dark,  component--dark,  component--dark,  component))
add-style(dragger,   create-view(null, component--light, component--light, component--light, component))

// layout
add-style(field,     null                                                    )
add-style(label,     null                                                    )
add-style(input,     null                                                    )
add-style(container, create-layout(null,     auto, auto, (0px), (0px), (0px)))
add-style(tracker,   create-layout(null,     auto,  8px, (0px), (1px), (0px)))
add-style(dragger,   create-layout(absolute, 8px,  24px, (0px), (1px), (0px)))

// flex
add-style(field,     null                                                                )
add-style(label,     null                                                                )
add-style(input,     null                                                                )
add-style(container, create-flex(1, 1, auto, auto), create-flex2(row, flex-start, center))
add-style(tracker,   create-flex(1, 1, auto, auto)                                       )
add-style(dragger,   create-flex(0, 1, auto, auto)                                       )
