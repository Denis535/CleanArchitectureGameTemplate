@import "../Internal/_Theme"

// selector
selector--field              = '.unity-toggle'
selector--label              = '.unity-toggle .unity-toggle__label'
selector--input              = '.unity-toggle .unity-toggle__input'
selector--checkmark          = '.unity-toggle .unity-toggle__input         .unity-toggle__checkmark'
selector--checkmark--checked = '.unity-toggle .unity-toggle__input:checked .unity-toggle__checkmark'

// view
style(field             )
style(label             )
style(input             )
style(checkmark         ) view(null, component--dark--normal, component-------dark--normal, component--dark--normal, component--normal)
style(checkmark--checked) view(null, component--dark--normal, checkmark-icon--light,        component--dark--normal, component--normal)
flush()

// layout
style(field             )
style(label             )
style(input             )
style(checkmark         ) layout(null, 16px, 16px, (0px), (1px), (0px))
flush()

// flex
style(field             )
style(label             )
style(input             )
style(checkmark         ) flex(0, 1, auto, auto)
flush()
