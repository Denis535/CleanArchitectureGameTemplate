@import "../Internal/_Theme"

// selector
selector--field              = '.unity-toggle'
selector--label              = '.unity-toggle .unity-toggle__label'
selector--input              = '.unity-toggle .unity-toggle__input'
selector--checkmark          = '.unity-toggle .unity-toggle__input         .unity-toggle__checkmark'
selector--checkmark--checked = '.unity-toggle .unity-toggle__input:checked .unity-toggle__checkmark'

// view
add-style(field             )
add-style(label             )
add-style(input             )
add-style(checkmark         ) view(null, component--light--normal, component--light--normal, component--light--normal, component--normal)
add-style(checkmark--checked) view(null, component--light--normal, component--light--normal, component--light--normal, component--normal) image(checkmark-icon--dark)
flush()

// layout
add-style(field             )
add-style(label             )
add-style(input             )
add-style(checkmark         ) layout(null, 16px, 16px, (0px), (1px), (0px))
flush()

// flex
add-style(field             )
add-style(label             )
add-style(input             )
add-style(checkmark         ) flex(0, 1, auto, auto)
flush()
