@import "../Internal/_Theme"

// selector
selector--field              = '.unity-toggle'
selector--field-label        = '.unity-toggle .unity-toggle__label'
selector--field-input        = '.unity-toggle .unity-toggle__input'
selector--checkmark          = '.unity-toggle .unity-toggle__input         .unity-toggle__checkmark'
selector--checkmark--checked = '.unity-toggle .unity-toggle__input:checked .unity-toggle__checkmark'

// view
add-style(field             ) theme()
add-style(field-label       ) theme()
add-style(field-input       ) theme()
add-style(checkmark         ) theme(light--component--normal)
add-style(checkmark--checked) theme(                        ) theme(dark--checkmark-icon)
flush()

// layout
add-style(field             ) layout()
add-style(field-label       ) layout()
add-style(field-input       ) layout()
add-style(checkmark         ) layout(null, 16px, 16px, (0px), (1px), (0px))
flush()

// flex
add-style(field             ) flex()
add-style(field-label       ) flex()
add-style(field-input       ) flex()
add-style(checkmark         ) flex(0, 1, auto, auto)
flush()
