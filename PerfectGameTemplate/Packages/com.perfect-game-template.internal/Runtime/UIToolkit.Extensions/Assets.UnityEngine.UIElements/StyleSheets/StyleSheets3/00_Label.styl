@import "../Internal/_Theme"

// selector
selector----------label = '.unity-label'
selector--small---label = '.unity-label.small'
selector--medium--label = '.unity-label.medium'
selector--large---label = '.unity-label.large'

// view
add-style(        label) theme()
flush()

// layout
add-style(        label) layout(null, auto, auto, (4px), (1px), (0px  0px  0px  0px ))
add-style(small---label) layout(null, auto, auto, (4px), (1px), (6px  6px  5px  5px ))
add-style(medium--label) layout(null, auto, auto, (4px), (1px), (12px 12px 10px 10px))
add-style(large---label) layout(null, auto, auto, (4px), (1px), (24px 24px 20px 20px))
flush()

// flex
add-style(        label) flex(0, 1, auto, auto)
flush()
