@import "../Internal/_Theme"

// view
view--label           = create-view-skin(null, (element element), (element element))

// layout
layout--label         = create-layout-skin(null, auto auto, (4px), (1px), (0px  0px  0px  0px ))
layout--label--small  = create-layout-skin(null, auto auto, (4px), (1px), (6px  6px  5px  5px ))
layout--label--medium = create-layout-skin(null, auto auto, (4px), (1px), (12px 12px 10px 10px))
layout--label--large  = create-layout-skin(null, auto auto, (4px), (1px), (24px 24px 20px 20px))

// flex
flex--label           = create-flex(0, 1, auto, auto)

// label
.unity-label
    add-skin1 label
    add-skin2 label
    add-skin3 label
    // layout
    &.small
        add-skin2 label--small
    &.medium
        add-skin2 label--medium
    &.large
        add-skin2 label--large
