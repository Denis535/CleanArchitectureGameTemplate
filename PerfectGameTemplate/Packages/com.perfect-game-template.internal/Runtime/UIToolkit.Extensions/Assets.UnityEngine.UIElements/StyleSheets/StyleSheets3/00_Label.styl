@import "../Internal/_Theme"

// selector
selector--label         = '.unity-label'
// selector
selector--label--small  = '.unity-label.small'
selector--label--medium = '.unity-label.medium'
selector--label--large  = '.unity-label.large'

// view
add-style(label,         create-view(null, element, element, element, element))

// layout
add-style(label,         create-layout(null, auto, auto, (4px), (1px), (0px  0px  0px  0px )))
add-style(label--small,  create-layout(null, auto, auto, (4px), (1px), (6px  6px  5px  5px )))
add-style(label--medium, create-layout(null, auto, auto, (4px), (1px), (12px 12px 10px 10px)))
add-style(label--large,  create-layout(null, auto, auto, (4px), (1px), (24px 24px 20px 20px)))

// flex
add-style(label,         create-flex(0, 1, auto, auto))
