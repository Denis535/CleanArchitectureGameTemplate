@import "../Internal/_Theme"

// selector
selector--field = '.unity-base-text-field'
selector--label = '.unity-base-text-field .unity-base-text-field__label'
selector--input = '.unity-base-text-field .unity-base-text-field__input'
selector--text  = '.unity-base-text-field .unity-base-text-field__input .unity-text-element'

// view
style(field)
style(label)
style(input)
style(text ) view(null, element--normal, element--normal, element--normal, element--normal)
flush()

// layout
style(field)
style(label)
style(input)
style(text ) layout(null, auto, auto, (0px), (0px), (0px))
flush()

// flex
style(field)
style(label)
style(input)
style(text ) flex(1, 1, auto, auto)
flush()
