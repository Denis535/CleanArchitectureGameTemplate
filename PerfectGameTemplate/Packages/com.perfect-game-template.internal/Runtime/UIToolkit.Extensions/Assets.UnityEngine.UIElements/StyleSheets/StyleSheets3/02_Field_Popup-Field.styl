@import "../Internal/_Theme"

// selector
selector--field = '.unity-base-popup-field'
selector--label = '.unity-base-popup-field .unity-base-popup-field__label'
selector--input = '.unity-base-popup-field .unity-base-popup-field__input'
selector--text  = '.unity-base-popup-field .unity-base-popup-field__input .unity-base-popup-field__text'
selector--arrow = '.unity-base-popup-field .unity-base-popup-field__input .unity-base-popup-field__arrow'

// view
style(field)
style(label)
style(input)
style(text ) view(null, element----normal, element--normal,            element----normal, element----normal)
style(arrow) view(null, component--normal, dropdown-arrow-icon--light, component--normal, component--normal)
flush()

// layout
style(field)
style(label)
style(input)
style(text ) layout(null, auto, auto, (0px), (0px), (0px))
style(arrow) layout(null, 12px, 12px, (2px), (0px), (0px))
flush()

// flex
style(field)
style(label)
style(input)
style(text ) flex(1, 1, auto, auto)
style(arrow) flex(0, 1, auto, auto)
flush()
