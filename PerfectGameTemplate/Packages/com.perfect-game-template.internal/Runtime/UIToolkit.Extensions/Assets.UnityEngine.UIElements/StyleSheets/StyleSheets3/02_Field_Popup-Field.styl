@import "../Internal/_Theme"

// selector
selector--field = '.unity-base-popup-field'
selector--label = '.unity-base-popup-field .unity-base-popup-field__label'
selector--input = '.unity-base-popup-field .unity-base-popup-field__input'
selector--text  = '.unity-base-popup-field .unity-base-popup-field__input .unity-base-popup-field__text'
selector--arrow = '.unity-base-popup-field .unity-base-popup-field__input .unity-base-popup-field__arrow'

// view
add-style(field)
add-style(label)
add-style(input)
add-style(text ) view(null, element----normal, element----normal, element----normal, element----normal)
add-style(arrow) view(null, component--normal, component--normal, component--normal, component--normal) image(dropdown-arrow-icon--light)
flush()

// layout
add-style(field)
add-style(label)
add-style(input)
add-style(text ) layout(null, auto, auto, (0px), (0px), (0px))
add-style(arrow) layout(null, 12px, 12px, (2px), (0px), (0px))
flush()

// flex
add-style(field)
add-style(label)
add-style(input)
add-style(text ) flex(1, 1, auto, auto)
add-style(arrow) flex(0, 1, auto, auto)
flush()
