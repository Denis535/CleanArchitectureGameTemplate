@import "../Internal/_Theme"

// selector
selector--field       = '.unity-base-popup-field'
selector--field-label = '.unity-base-popup-field .unity-base-popup-field__label'
selector--field-input = '.unity-base-popup-field .unity-base-popup-field__input'
selector--text        = '.unity-base-popup-field .unity-base-popup-field__input .unity-base-popup-field__text'
selector--arrow       = '.unity-base-popup-field .unity-base-popup-field__input .unity-base-popup-field__arrow'

// view
add-style(field      ) theme()
add-style(field-label) theme()
add-style(field-input) theme()
add-style(text       ) theme(element----normal)
add-style(arrow      ) theme(component--normal) theme(light--dropdown-arrow-icon)
flush()

// layout
add-style(field      ) layout()
add-style(field-label) layout()
add-style(field-input) layout()
add-style(text       ) layout(null, auto, auto, (0px), (0px), (0px))
add-style(arrow      ) layout(null, 12px, 12px, (2px), (0px), (0px))
flush()

// flex
add-style(field      ) flex()
add-style(field-label) flex()
add-style(field-input) flex()
add-style(text       ) flex(1, 1, auto, auto)
add-style(arrow      ) flex(0, 1, auto, auto)
flush()
