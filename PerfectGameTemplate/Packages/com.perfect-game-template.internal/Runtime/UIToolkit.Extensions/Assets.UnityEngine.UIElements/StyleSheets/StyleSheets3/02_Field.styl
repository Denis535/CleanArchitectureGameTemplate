@import "../Internal/_Theme"

// selector
selector--field------------------------normal = '.unity-base-field'
selector--field------------------------hover  = '.unity-base-field:hover'
selector--field------------------------active = '.unity-base-field:active'
selector--field--------invalid---------normal = '.unity-base-field.invalid'
selector--field--------invalid---------hover  = '.unity-base-field.invalid:hover'
selector--field--------invalid---------active = '.unity-base-field.invalid:active'
selector--field-----------------focus--normal = '.unity-base-field:focus'
selector--field-----------------focus--hover  = '.unity-base-field:focus:hover'
selector--field-----------------focus--active = '.unity-base-field:focus:active'
selector--field--------invalid--focus--normal = '.unity-base-field.invalid:focus'
selector--field--------invalid--focus--hover  = '.unity-base-field.invalid:focus:hover'
selector--field--------invalid--focus--active = '.unity-base-field.invalid:focus:active'
// selector
selector--field-label------------------normal = '.unity-base-field                      .unity-base-field__label'
selector--field-label------------------hover  = '.unity-base-field:hover                .unity-base-field__label'
selector--field-label------------------active = '.unity-base-field:active               .unity-base-field__label'
selector--field-label--invalid---------normal = '.unity-base-field.invalid              .unity-base-field__label'
selector--field-label--invalid---------hover  = '.unity-base-field.invalid:hover        .unity-base-field__label'
selector--field-label--invalid---------active = '.unity-base-field.invalid:active       .unity-base-field__label'
selector--field-label-----------focus--normal = '.unity-base-field:focus                .unity-base-field__label'
selector--field-label-----------focus--hover  = '.unity-base-field:focus:hover          .unity-base-field__label'
selector--field-label-----------focus--active = '.unity-base-field:focus:active         .unity-base-field__label'
selector--field-label--invalid--focus--normal = '.unity-base-field.invalid:focus        .unity-base-field__label'
selector--field-label--invalid--focus--hover  = '.unity-base-field.invalid:focus:hover  .unity-base-field__label'
selector--field-label--invalid--focus--active = '.unity-base-field.invalid:focus:active .unity-base-field__label'
// selector
selector--field-input------------------normal = '.unity-base-field                      .unity-base-field__input'
selector--field-input------------------hover  = '.unity-base-field:hover                .unity-base-field__input'
selector--field-input------------------active = '.unity-base-field:active               .unity-base-field__input'
selector--field-input--invalid---------normal = '.unity-base-field.invalid              .unity-base-field__input'
selector--field-input--invalid---------hover  = '.unity-base-field.invalid:hover        .unity-base-field__input'
selector--field-input--invalid---------active = '.unity-base-field.invalid:active       .unity-base-field__input'
selector--field-input-----------focus--normal = '.unity-base-field:focus                .unity-base-field__input'
selector--field-input-----------focus--hover  = '.unity-base-field:focus:hover          .unity-base-field__input'
selector--field-input-----------focus--active = '.unity-base-field:focus:active         .unity-base-field__input'
selector--field-input--invalid--focus--normal = '.unity-base-field.invalid:focus        .unity-base-field__input'
selector--field-input--invalid--focus--hover  = '.unity-base-field.invalid:focus:hover  .unity-base-field__input'
selector--field-input--invalid--focus--active = '.unity-base-field.invalid:focus:active .unity-base-field__input'

// view
add-style(field------------------------normal) theme(field--normal                )
add-style(field------------------------hover ) theme(field--hover                 )
add-style(field------------------------active) theme(field--active                )
add-style(field--------invalid---------normal) theme(field--normal--invalid       )
add-style(field--------invalid---------hover ) theme(field--hover---invalid       )
add-style(field--------invalid---------active) theme(field--active--invalid       )
add-style(field-----------------focus--normal) theme(field--normal--focus         )
add-style(field-----------------focus--hover ) theme(field--hover---focus         )
add-style(field-----------------focus--active) theme(field--active--focus         )
add-style(field--------invalid--focus--normal) theme(field--normal--invalid--focus)
add-style(field--------invalid--focus--hover ) theme(field--hover---invalid--focus)
add-style(field--------invalid--focus--active) theme(field--active--invalid--focus)
flush()
// view
add-style(field-label------------------normal) theme(field--label--normal                ) font(null, null, bold) text(middle-left, null, null)
add-style(field-label------------------hover ) theme(field--label--hover                 )
add-style(field-label------------------active) theme(field--label--active                )
add-style(field-label--invalid---------normal) theme(field--label--normal--invalid       )
add-style(field-label--invalid---------hover ) theme(field--label--hover---invalid       )
add-style(field-label--invalid---------active) theme(field--label--active--invalid       )
add-style(field-label-----------focus--normal) theme(field--label--normal--focus         )
add-style(field-label-----------focus--hover ) theme(field--label--hover---focus         )
add-style(field-label-----------focus--active) theme(field--label--active--focus         )
add-style(field-label--invalid--focus--normal) theme(field--label--normal--invalid--focus)
add-style(field-label--invalid--focus--hover ) theme(field--label--hover---invalid--focus)
add-style(field-label--invalid--focus--active) theme(field--label--active--invalid--focus)
flush()
// view
add-style(field-input------------------normal) theme(field--input--normal                ) font(null, null, null) text(middle-left, null, null)
add-style(field-input------------------hover ) theme(field--input--hover                 )
add-style(field-input------------------active) theme(field--input--active                )
add-style(field-input--invalid---------normal) theme(field--input--normal--invalid       )
add-style(field-input--invalid---------hover ) theme(field--input--hover---invalid       )
add-style(field-input--invalid---------active) theme(field--input--active--invalid       )
add-style(field-input-----------focus--normal) theme(field--input--normal--focus         )
add-style(field-input-----------focus--hover ) theme(field--input--hover---focus         )
add-style(field-input-----------focus--active) theme(field--input--active--focus         )
add-style(field-input--invalid--focus--normal) theme(field--input--normal--invalid--focus)
add-style(field-input--invalid--focus--hover ) theme(field--input--hover---invalid--focus)
add-style(field-input--invalid--focus--active) theme(field--input--active--invalid--focus)
flush()

// layout
add-style(field------------------------normal) layout(null, auto, auto, (4px            ), (0px), (0px                ))
add-style(field-label------------------normal) layout(null, auto, auto, (0px 2px 0px 0px), (1px), (12px 12px 10px 10px))
add-style(field-input------------------normal) layout(null, auto, auto, (0px            ), (1px), (12px 12px 10px 10px))
flush()

// flex
add-style(field------------------------normal) flex(0, 1, auto, auto) flex2(row, flex-start, stretch)
add-style(field-label------------------normal) flex(0, 1, auto, auto)
add-style(field-input------------------normal) flex(1, 1, auto, auto) flex2(row, flex-end, stretch)
flush()
