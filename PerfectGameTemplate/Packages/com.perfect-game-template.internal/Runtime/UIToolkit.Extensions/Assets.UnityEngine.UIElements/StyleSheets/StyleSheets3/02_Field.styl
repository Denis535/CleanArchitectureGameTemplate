@import "../Internal/_Theme"

// view
view--field              = create-view-skin(null,  (element               element              ), (element               element))
view--field-label        = create-view-skin(light, (element--light        element--light       ), (element--light        element)), create-font(null, null, bold), create-text(middle-left, null, null)
view--field-input        = create-view-skin(light, (element--dark         element--dark        ), (element--dark         element)), create-font(null, null, null), create-text(middle-left, null, null)

// view
view--hover--field-label = create-view-skin(light, (element--light        element--light       ), (hover--element--light element))
view--hover--field-input = create-view-skin(light, (hover--element--dark  hover--element--dark ), (hover--element--dark  element))

// layout
layout--field            = create-layout-skin(null, auto auto, (4px            ), (0px), (0px                ))
layout--field-label      = create-layout-skin(null, auto auto, (0px 2px 0px 0px), (1px), (12px 12px 10px 10px))
layout--field-input      = create-layout-skin(null, auto auto, (0px            ), (1px), (12px 12px 10px 10px))

// flex
flex--field              = create-flex(0, 1, auto, auto), create-flex2(row, flex-start, stretch)
flex--field-label        = create-flex(0, 1, auto, auto), null
flex--field-input        = create-flex(1, 1, auto, auto), create-flex2(row, flex-end, stretch)

// field
.unity-base-field
    add-skin1 field
    add-skin2 field
    add-skin3 field
.unity-base-field__label
    add-skin1 field-label
    add-skin2 field-label
    add-skin3 field-label
.unity-base-field__input
    add-skin1 field-input
    add-skin2 field-input
    add-skin3 field-input
// field
.unity-base-field:hover
    add-skin1 none
.unity-base-field__label:hover
    add-skin1 hover--field-label
.unity-base-field__input:hover
    // cursor text
    add-skin1 hover--field-input
