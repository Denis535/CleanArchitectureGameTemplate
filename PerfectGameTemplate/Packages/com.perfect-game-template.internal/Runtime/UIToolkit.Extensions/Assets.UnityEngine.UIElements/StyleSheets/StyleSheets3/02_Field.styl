@import "../Internal/_Theme"

// selector
selector--field        = '.unity-base-field'
selector--label        = '.unity-base-field .unity-base-field__label'
selector--input        = '.unity-base-field .unity-base-field__input'
// selector
selector--field--hover = '.unity-base-field:hover'
selector--label--hover = '.unity-base-field:hover .unity-base-field__label'
selector--input--hover = '.unity-base-field:hover .unity-base-field__input'
// selector
selector--field--focus = '.unity-base-field:focus'
selector--label--focus = '.unity-base-field:focus .unity-base-field__label'
selector--input--focus = '.unity-base-field:focus .unity-base-field__input'

// view
add-style(field,        create-view(null,            element---------normal, element---------normal, element---------normal, element--normal)                                                                     )
add-style(label,        create-view(element--normal, element--light--normal, element--light--normal, element--light--normal, element--normal), create-font(null, null, bold), create-text(middle-left, null, null))
add-style(input,        create-view(element--normal, element--dark---normal, element--dark---normal, element--dark---normal, element--normal), create-font(null, null, null), create-text(middle-left, null, null))
// view
add-style(field--hover, create-view(null,            null,                   null,                   null,                   null           ))
add-style(label--hover, create-view(null,            null,                   null,                   element--light--hover,  null           ))
add-style(input--hover, create-view(null,            null,                   null,                   element--dark---hover,  null           ))
// // view
// add-style(field--focus, create-view(null,                   element---------focus,  null,                   element---------focus,  null           ))
// add-style(label--focus, create-view(element--light--focus,  element--light--focus,  null,                   element--light--focus,  null           ))
// add-style(input--focus, create-view(null,                   element--dark---focus,  null,                   element--dark---focus,  null           ))

// layout
add-style(field,        create-layout(null, auto, auto, (4px            ), (0px), (0px                )))
add-style(label,        create-layout(null, auto, auto, (0px 2px 0px 0px), (1px), (12px 12px 10px 10px)))
add-style(input,        create-layout(null, auto, auto, (0px            ), (1px), (12px 12px 10px 10px)))

// flex
add-style(field,        create-flex(0, 1, auto, auto), create-flex2(row, flex-start, stretch))
add-style(label,        create-flex(0, 1, auto, auto), null                                  )
add-style(input,        create-flex(1, 1, auto, auto), create-flex2(row, flex-end, stretch)  )
