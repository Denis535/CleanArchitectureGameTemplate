@import "../Internal/_Theme"

// selector
selector--field                               = '.unity-base-field'
selector--field-label                         = '.unity-base-field .unity-base-field__label'
selector--field-input                         = '.unity-base-field .unity-base-field__input'
// selector
selector--field--------hover                  = '.unity-base-field:hover'
selector--field-label--hover                  = '.unity-base-field:hover .unity-base-field__label'
selector--field-input--hover                  = '.unity-base-field:hover .unity-base-field__input'
// selector
selector--field--------active                 = '.unity-base-field:active'
selector--field-label--active                 = '.unity-base-field:active .unity-base-field__label'
selector--field-input--active                 = '.unity-base-field:active .unity-base-field__input'
// selector
selector--field--------invalid                = '.unity-base-field.invalid'
selector--field-label--invalid                = '.unity-base-field.invalid .unity-base-field__label'
selector--field-input--invalid                = '.unity-base-field.invalid .unity-base-field__input'
// selector
selector--field--------invalid--hover         = '.unity-base-field.invalid:hover'
selector--field-label--invalid--hover         = '.unity-base-field.invalid:hover .unity-base-field__label'
selector--field-input--invalid--hover         = '.unity-base-field.invalid:hover .unity-base-field__input'
// selector
selector--field--------invalid--active        = '.unity-base-field.invalid:active'
selector--field-label--invalid--active        = '.unity-base-field.invalid:active .unity-base-field__label'
selector--field-input--invalid--active        = '.unity-base-field.invalid:active .unity-base-field__input'
// selector
selector--field--------focus                  = '.unity-base-field:focus'
selector--field-label--focus                  = '.unity-base-field:focus .unity-base-field__label'
selector--field-input--focus                  = '.unity-base-field:focus .unity-base-field__input'
// selector
selector--field--------focus--hover           = '.unity-base-field:focus:hover'
selector--field-label--focus--hover           = '.unity-base-field:focus:hover .unity-base-field__label'
selector--field-input--focus--hover           = '.unity-base-field:focus:hover .unity-base-field__input'
// selector
selector--field--------focus--active          = '.unity-base-field:focus:active'
selector--field-label--focus--active          = '.unity-base-field:focus:active .unity-base-field__label'
selector--field-input--focus--active          = '.unity-base-field:focus:active .unity-base-field__input'
// selector
selector--field--------invalid--focus         = '.unity-base-field.invalid:focus'
selector--field-label--invalid--focus         = '.unity-base-field.invalid:focus .unity-base-field__label'
selector--field-input--invalid--focus         = '.unity-base-field.invalid:focus .unity-base-field__input'
// selector
selector--field--------invalid--focus--hover  = '.unity-base-field.invalid:focus:hover'
selector--field-label--invalid--focus--hover  = '.unity-base-field.invalid:focus:hover .unity-base-field__label'
selector--field-input--invalid--focus--hover  = '.unity-base-field.invalid:focus:hover .unity-base-field__input'
// selector
selector--field--------invalid--focus--active = '.unity-base-field.invalid:focus:active'
selector--field-label--invalid--focus--active = '.unity-base-field.invalid:focus:active .unity-base-field__label'
selector--field-input--invalid--focus--active = '.unity-base-field.invalid:focus:active .unity-base-field__input'

// view
add-style(field                              ) theme(field--------normal)
add-style(field-label                        ) theme(field-label--normal) font(null, null, bold) text(middle-left, null, null)
add-style(field-input                        ) theme(field-input--normal) font(null, null, null) text(middle-left, null, null)
flush()
// view
add-style(field--------hover                 ) theme(field--------hover)
add-style(field-label--hover                 ) theme(field-label--hover)
add-style(field-input--hover                 ) theme(field-input--hover)
flush()
// view
add-style(field--------active                ) theme(field--------active)
add-style(field-label--active                ) theme(field-label--active)
add-style(field-input--active                ) theme(field-input--active)
flush()

// view
add-style(field--------invalid               ) theme(field--------invalid--normal)
add-style(field-label--invalid               ) theme(field-label--invalid--normal)
add-style(field-input--invalid               ) theme(field-input--invalid--normal)
flush()
// view
add-style(field--------invalid--hover        ) theme(field--------invalid--hover)
add-style(field-label--invalid--hover        ) theme(field-label--invalid--hover)
add-style(field-input--invalid--hover        ) theme(field-input--invalid--hover)
flush()
// view
add-style(field--------invalid--active       ) theme(field--------invalid--active)
add-style(field-label--invalid--active       ) theme(field-label--invalid--active)
add-style(field-input--invalid--active       ) theme(field-input--invalid--active)
flush()

// view
add-style(field--------focus                 ) theme(field--------focus--normal)
add-style(field-label--focus                 ) theme(field-label--focus--normal)
add-style(field-input--focus                 ) theme(field-input--focus--normal)
flush()
// view
add-style(field--------focus--hover          ) theme(field--------focus--hover)
add-style(field-label--focus--hover          ) theme(field-label--focus--hover)
add-style(field-input--focus--hover          ) theme(field-input--focus--hover)
flush()
// view
add-style(field--------focus--active         ) theme(field--------focus--active)
add-style(field-label--focus--active         ) theme(field-label--focus--active)
add-style(field-input--focus--active         ) theme(field-input--focus--active)
flush()

// view
add-style(field--------invalid--focus        ) theme(field--------invalid--focus--normal)
add-style(field-label--invalid--focus        ) theme(field-label--invalid--focus--normal)
add-style(field-input--invalid--focus        ) theme(field-input--invalid--focus--normal)
flush()
// view
add-style(field--------invalid--focus--hover ) theme(field--------invalid--focus--hover)
add-style(field-label--invalid--focus--hover ) theme(field-label--invalid--focus--hover)
add-style(field-input--invalid--focus--hover ) theme(field-input--invalid--focus--hover)
flush()
// view
add-style(field--------invalid--focus--active) theme(field--------invalid--focus--active)
add-style(field-label--invalid--focus--active) theme(field-label--invalid--focus--active)
add-style(field-input--invalid--focus--active) theme(field-input--invalid--focus--active)
flush()

// layout
add-style(field                              ) layout(null, auto, auto, (4px            ), (0px), (0px                ))
add-style(field-label                        ) layout(null, auto, auto, (0px 2px 0px 0px), (1px), (12px 12px 10px 10px))
add-style(field-input                        ) layout(null, auto, auto, (0px            ), (1px), (12px 12px 10px 10px))
flush()

// flex
add-style(field                              ) flex(0, 1, auto, auto) flex2(row, flex-start, stretch)
add-style(field-label                        ) flex(0, 1, auto, auto)
add-style(field-input                        ) flex(1, 1, auto, auto) flex2(row, flex-end, stretch)
flush()
