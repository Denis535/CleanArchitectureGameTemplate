// create-view
create-font(url = null, size = null, style = null)
    return @block {
        add-font(url, size, style)
    }
create-text(align = null, outline = null, shadow = null)
    return @block {
        add-text(align, outline, shadow)
    }

// create-view
create-view(args)
    return @block {
        add-view(args[0], args[1], args[2], args[3], args[4])
    }

// create-layout
create-layout(args)
    return @block {
        add-layout(args[0], args[1], args[2], args[3], args[4], args[5])
    }

// create-flex
create-flex(flex-grow, flex-shrink, flex-basis, align-self)
    return @block {
        add-flex(flex-grow, flex-shrink, flex-basis, align-self)
    }
create-flex2(flex-direction, justify-content, align-items)
    return @block {
        add-flex2(flex-direction, justify-content, align-items)
    }

// add-style
add-style(selector)
    {get-value(get-key('selector', selector))}
        {block}
// add-view-style
add-font-style(selector, url, size, style)
    {get-value(get-key('selector', selector))}
        add-font(url, size, style)
add-text-style(selector, align, outline, shadow)
    {get-value(get-key('selector', selector))}
        add-text(align, outline, shadow)
// add-view-style
add-view-style(selector, color = null, background-color = null, background-image = null, border-color = null, border-radius = null)
    {get-value(get-key('selector', selector))}
        add-view(color, background-color, background-image, border-color, border-radius)
// add-layout-style
add-layout-style(selector, position = null, width = null, height = null, margin = null, border = null, padding = null)
    {get-value(get-key('selector', selector))}
        add-layout(position, width, height, margin, border, padding)
// add-flex-style
add-flex-style(selector, flex-grow, flex-shrink, flex-basis, align-self)
    {get-value(get-key('selector', selector))}
        add-flex(flex-grow, flex-shrink, flex-basis, align-self)
add-flex2-style(selector, flex-direction, justify-content, align-items)
    {get-value(get-key('selector', selector))}
        add-flex2(flex-direction, justify-content, align-items)

// add-skin
add-view-skin(key)
    if key != null and key != none
        for object in get-value(get-key('view', key))
            {object}
add-layout-skin(key)
    if key != null and key != none
        for object in get-value(get-key('layout', key))
            {object}
add-flex-skin(key)
    if key != null and key != none
        for object in get-value(get-key('flex', key))
            {object}

// add-skin
add-skin1 = add-view-skin
add-skin2 = add-layout-skin
add-skin3 = add-flex-skin
