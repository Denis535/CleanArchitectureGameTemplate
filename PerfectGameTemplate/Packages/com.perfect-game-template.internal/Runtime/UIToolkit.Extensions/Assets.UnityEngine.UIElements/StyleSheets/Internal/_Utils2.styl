// create-view
create-font(url = null, size = null, style = null)
    return @block {
        add-font(url, size, style)
    }
create-text(align = null, outline = null, shadow = null)
    return @block {
        add-text(align, outline, shadow)
    }

// create-view
create-view(args)
    return @block {
        add-view(args[0], args[1], args[2], args[3], args[4])
    }

// create-layout
create-layout(args)
    return @block {
        add-layout(args[0], args[1], args[2], args[3], args[4], args[5])
    }

// create-flex
create-flex(flex-grow, flex-shrink, flex-basis, align-self)
    return @block {
        add-flex(flex-grow, flex-shrink, flex-basis, align-self)
    }
create-flex2(flex-direction, justify-content, align-items)
    return @block {
        add-flex2(flex-direction, justify-content, align-items)
    }

// add-style
add-style(selector, view = null, layout = null, flex = null)
    +add-selector(selector)
        add-view-skin(view)
        add-layout-skin(layout)
        add-flex-skin(flex)
        {block}

// add-selector
add-selector(key)
    {get-value(get-key('selector', key))}
        {block}

// add-skin
add-view-skin(key)
    if key != null and key != none
        for object in get-value(get-key('view', key))
            {object}
add-layout-skin(key)
    if key != null and key != none
        for object in get-value(get-key('layout', key))
            {object}
add-flex-skin(key)
    if key != null and key != none
        for object in get-value(get-key('flex', key))
            {object}

// add-skin
add-skin1 = add-view-skin
add-skin2 = add-layout-skin
add-skin3 = add-flex-skin
