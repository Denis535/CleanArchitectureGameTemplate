@import "_Utils"

init-theme()
    // card
    set-theme-value background-color--card                                hsla(210,   4%,  25%, 0.90)
    set-theme-value background-color--card-header                         hsla(210,   4%,  20%, 0.90)
    set-theme-value background-color--card-content                        hsla(210,   4%,   0%, 0.00)
    set-theme-value background-color--card-footer                         hsla(210,   4%,  15%, 0.90)
    // card
    set-theme-value background-color--dialog-card
    set-theme-value background-color--dialog-card-header
    set-theme-value background-color--dialog-card-header--info            hsla(240,  50%,  20%, 0.90)
    set-theme-value background-color--dialog-card-header--warning         hsla( 60,  50%,  20%, 0.90)
    set-theme-value background-color--dialog-card-header--error           hsla(  0,  50%,  20%, 0.90)
    set-theme-value background-color--dialog-card-content
    set-theme-value background-color--dialog-card-footer
    // view
    set-theme-value background-color--view                                hsla(  0,   0%,   0%, 0.00)
    set-theme-value background-color--view--light2                        hsla(210,   4%,  30%, 0.90)
    set-theme-value background-color--view--light                         hsla(210,   4%,  25%, 0.90)
    set-theme-value background-color--view--gray                          hsla(210,   4%,  20%, 0.90)
    set-theme-value background-color--view--dark                          hsla(210,   4%,  15%, 0.90)
    set-theme-value background-color--view--dark2                         hsla(210,   4%,  10%, 0.90)
    // box
    set-theme-value background-color--box                                 hsla(  0,   0%,   0%, 0.00)
    set-theme-value background-color--box--light2                         hsla(210,   2%,  22%, 1.00)
    set-theme-value background-color--box--light                          hsla(210,   2%,  21%, 1.00)
    set-theme-value background-color--box--gray                           hsla(210,   2%,  20%, 1.00)
    set-theme-value background-color--box--dark                           hsla(210,   2%,  19%, 1.00)
    set-theme-value background-color--box--dark2                          hsla(210,   2%,  18%, 1.00)
    // element
    set-theme-value background-color--element                             hsla(  0,   2%,  0%,  0.00)
    set-theme-value background-color--element--light                      hsla(210,   2%,  23%, 1.00)
    set-theme-value background-color--element--gray                       hsla(210,   2%,  20%, 1.00)
    set-theme-value background-color--element--dark                       hsla(210,   2%,  17%, 1.00)
    // component
    set-theme-value background-color--component                           hsla(  0,   2%,   0%, 0.00)
    set-theme-value background-color--component--light                    hsla(210,   2%,  70%, 1.00)
    set-theme-value background-color--component--gray                     hsla(210,   2%,  50%, 1.00)
    set-theme-value background-color--component--dark                     hsla(210,   2%,  30%, 1.00)

    // card
    set-theme-value background-image--card                                create-background-image(null, null, null)
    set-theme-value background-image--card-header                         create-background-image(null, null, null)
    set-theme-value background-image--card-content                        create-background-image(null, null, null)
    set-theme-value background-image--card-footer                         create-background-image(null, null, null)
    // card
    set-theme-value background-image--dialog-card                         create-background-image(null, null, null)
    set-theme-value background-image--dialog-card-header                  create-background-image(null, null, null)
    set-theme-value background-image--dialog-card-header--info            create-background-image(null, null, null)
    set-theme-value background-image--dialog-card-header--warning         create-background-image(null, null, null)
    set-theme-value background-image--dialog-card-header--error           create-background-image(null, null, null)
    set-theme-value background-image--dialog-card-content                 create-background-image(null, null, null)
    set-theme-value background-image--dialog-card-footer                  create-background-image(null, null, null)
    // view
    set-theme-value background-image--view                                create-background-image(null, null, null)
    set-theme-value background-image--view--light2                        create-background-image(null, null, null)
    set-theme-value background-image--view--light                         create-background-image(null, null, null)
    set-theme-value background-image--view--gray                          create-background-image(null, null, null)
    set-theme-value background-image--view--dark                          create-background-image(null, null, null)
    set-theme-value background-image--view--dark2                         create-background-image(null, null, null)
    // box
    set-theme-value background-image--box                                 create-background-image(null, null, null)
    set-theme-value background-image--box--light2                         create-background-image(null, null, null)
    set-theme-value background-image--box--light                          create-background-image(null, null, null)
    set-theme-value background-image--box--gray                           create-background-image(null, null, null)
    set-theme-value background-image--box--dark                           create-background-image(null, null, null)
    set-theme-value background-image--box--dark2                          create-background-image(null, null, null)
    // element
    set-theme-value background-image--element                             create-background-image(null, null, null)
    set-theme-value background-image--element--light                      create-background-image(null, null, null)
    set-theme-value background-image--element--gray                       create-background-image(null, null, null)
    set-theme-value background-image--element--dark                       create-background-image(null, null, null)
    // component
    set-theme-value background-image--component                           create-background-image(null, null, null)
    set-theme-value background-image--component--light                    create-background-image(null, null, null)
    set-theme-value background-image--component--gray                     create-background-image(null, null, null)
    set-theme-value background-image--component--dark                     create-background-image(null, null, null)

    // card
    set-theme-value border-color------card                                hsla( 30,  20%,  30%, 1.00)
    set-theme-value border-color------card-header                         hsla( 30,  20%,  30%, 1.00)
    set-theme-value border-color------card-content                        hsla( 30,  20%,  30%, 1.00)
    set-theme-value border-color------card-footer                         hsla( 30,  20%,  30%, 1.00)
    // card
    set-theme-value border-color------dialog-card                         hsla( 30,  20%,  30%, 1.00)
    set-theme-value border-color------dialog-card-header                  hsla( 30,  20%,  30%, 1.00)
    set-theme-value border-color------dialog-card-content                 hsla( 30,  20%,  30%, 1.00)
    set-theme-value border-color------dialog-card-footer                  hsla( 30,  20%,  30%, 1.00)
    // view
    set-theme-value border-color------view                                hsla( 30,  20%,  30%, 1.00)
    set-theme-value border-color------view--light2                        hsla( 30,  20%,  30%, 1.00)
    set-theme-value border-color------view--light                         hsla( 30,  20%,  30%, 1.00)
    set-theme-value border-color------view--gray                          hsla( 30,  20%,  30%, 1.00)
    set-theme-value border-color------view--dark                          hsla( 30,  20%,  30%, 1.00)
    set-theme-value border-color------view--dark2                         hsla( 30,  20%,  30%, 1.00)
    // box
    set-theme-value border-color------box                                 hsla( 30,  30%,  30%, 1.00)
    set-theme-value border-color------box--light2                         hsla( 30,  30%,  30%, 1.00)
    set-theme-value border-color------box--light                          hsla( 30,  30%,  30%, 1.00)
    set-theme-value border-color------box--gray                           hsla( 30,  30%,  30%, 1.00)
    set-theme-value border-color------box--dark                           hsla( 30,  30%,  30%, 1.00)
    set-theme-value border-color------box--dark2                          hsla( 30,  30%,  30%, 1.00)
    // element
    set-theme-value border-color------element                             hsla(  0,   0%,   0%, 0.00)
    set-theme-value border-color------element--light                      hsla( 30,  30%,  30%, 1.00)
    set-theme-value border-color------element--gray                       hsla( 30,  30%,  30%, 1.00)
    set-theme-value border-color------element--dark                       hsla( 30,  30%,  30%, 1.00)
    // component
    set-theme-value border-color------component                           hsla(  0,   0%,   0%, 0.00)
    set-theme-value border-color------component--light                    hsla( 30,  30%,  30%, 0.50)
    set-theme-value border-color------component--gray                     hsla( 30,  30%,  30%, 0.50)
    set-theme-value border-color------component--dark                     hsla( 30,  30%,  30%, 0.50)

    // card
    set-theme-value border-radius-----card                                6px
    set-theme-value border-radius-----card-header                         6px 6px 0px 0px
    set-theme-value border-radius-----card-content                        6px
    set-theme-value border-radius-----card-footer                         0px 0px 6px 6px
    // card
    set-theme-value border-radius-----dialog-card                         6px
    set-theme-value border-radius-----dialog-card-header                  6px 6px 0px 0px
    set-theme-value border-radius-----dialog-card-content                 6px
    set-theme-value border-radius-----dialog-card-footer                  0px 0px 6px 6px
    // view
    set-theme-value border-radius-----view                                4px
    // box
    set-theme-value border-radius-----box                                 4px
    // element
    set-theme-value border-radius-----element                             4px
    // component
    set-theme-value border-radius-----component                           2px

    // dropdown
    set-theme-value background-color--dropdown                            get-theme-value(background-color--element--dark, darken: 10%, alpha: 0.97)
    set-theme-value background-image--dropdown                            get-theme-value(background-image--element--dark                          )
    set-theme-value border-color------dropdown                            get-theme-value(border-color------element--dark                          )
    set-theme-value border-radius-----dropdown                            get-theme-value(border-radius-----element                                )
    // dropdown-item
    set-theme-value background-color--dropdown-item                       get-theme-value(background-color--element                                )
    set-theme-value background-image--dropdown-item                       get-theme-value(background-image--element                                )
    set-theme-value border-color------dropdown-item                       get-theme-value(border-color------element                                )
    set-theme-value border-radius-----dropdown-item                       get-theme-value(border-radius-----element                                )

    // icon
    set-theme-value background-image--left-arrow-icon------light          create-background-image('../../Images/Arrow_Left.png',    hsla(  0,  0%,  90%, 1.00), null)
    set-theme-value background-image--right-arrow-icon-----light          create-background-image('../../Images/Arrow_Right.png',   hsla(  0,  0%,  90%, 1.00), null)
    set-theme-value background-image--up-arrow-icon--------light          create-background-image('../../Images/Arrow_Up.png',      hsla(  0,  0%,  90%, 1.00), null)
    set-theme-value background-image--down-arrow-icon------light          create-background-image('../../Images/Arrow_Down.png',    hsla(  0,  0%,  90%, 1.00), null)
    set-theme-value background-image--dropdown-arrow-icon--light          create-background-image('../../Images/DropdownArrow.png', hsla(  0,  0%,  90%, 1.00), null)
    set-theme-value background-image--checkmark-icon-------light          create-background-image('../../Images/Check.png',         hsla(  0,  0%,  90%, 1.00), null)
    // icon
    set-theme-value background-image--left-arrow-icon------dark           create-background-image('../../Images/Arrow_Left.png',    hsla(  0,  0%,  10%, 1.00), null)
    set-theme-value background-image--right-arrow-icon-----dark           create-background-image('../../Images/Arrow_Right.png',   hsla(  0,  0%,  10%, 1.00), null)
    set-theme-value background-image--up-arrow-icon--------dark           create-background-image('../../Images/Arrow_Up.png',      hsla(  0,  0%,  10%, 1.00), null)
    set-theme-value background-image--down-arrow-icon------dark           create-background-image('../../Images/Arrow_Down.png',    hsla(  0,  0%,  10%, 1.00), null)
    set-theme-value background-image--dropdown-arrow-icon--dark           create-background-image('../../Images/DropdownArrow.png', hsla(  0,  0%,  10%, 1.00), null)
    set-theme-value background-image--checkmark-icon-------dark           create-background-image('../../Images/Check.png',         hsla(  0,  0%,  10%, 1.00), null)

init-theme()
