@import "_Utils"

// theme
theme--element---------normal = null                   hsla(  0, 0%, 0%,  0.00) img(null, null, null) hsla( 0,  0%,  0%, 0.00) 4px
theme--element--light--normal = hsla(0, 0%, 90%, 1.00) hsla(210, 2%, 23%, 1.00) img(null, null, null) hsla(30, 30%, 30%, 1.00) 4px
theme--element--gray---normal = hsla(0, 0%, 90%, 1.00) hsla(210, 2%, 20%, 1.00) img(null, null, null) hsla(30, 30%, 30%, 1.00) 4px
theme--element--dark---normal = hsla(0, 0%, 90%, 1.00) hsla(210, 2%, 17%, 1.00) img(null, null, null) hsla(30, 30%, 30%, 1.00) 4px

// theme
theme--element---------hover  = null lighten(hsla(  0, 0%, 0%,  0.00), 5%) null lighten(hsla( 0,  0%,  0%, 0.00), 20%) null
theme--element--light--hover  = null lighten(hsla(210, 2%, 23%, 1.00), 5%) null lighten(hsla(30, 30%, 30%, 1.00), 20%) null
theme--element--gray---hover  = null lighten(hsla(210, 2%, 20%, 1.00), 5%) null lighten(hsla(30, 30%, 30%, 1.00), 20%) null
theme--element--dark---hover  = null lighten(hsla(210, 2%, 17%, 1.00), 5%) null lighten(hsla(30, 30%, 30%, 1.00), 20%) null

// theme
theme--element---------active = null darken(hsla(  0, 0%, 0%,  0.00),  5%) null darken(hsla( 0,  0%,  0%, 0.00), 20%) null
theme--element--light--active = null darken(hsla(210, 2%, 23%, 1.00),  5%) null darken(hsla(30, 30%, 30%, 1.00), 20%) null
theme--element--gray---active = null darken(hsla(210, 2%, 20%, 1.00),  5%) null darken(hsla(30, 30%, 30%, 1.00), 20%) null
theme--element--dark---active = null darken(hsla(210, 2%, 17%, 1.00),  5%) null darken(hsla(30, 30%, 30%, 1.00), 20%) null
