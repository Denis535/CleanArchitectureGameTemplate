@import "_Utils"

// theme
theme--color-------------element---------normal        = hsla(  0,   0%,  90%, 1.00)
// theme
theme--background-color--element---------normal        = hsla(  0,   2%,  0%,  0.00)
theme--background-color--element--light--normal        = hsla(210,   2%,  23%, 1.00)
theme--background-color--element--gray---normal        = hsla(210,   2%,  20%, 1.00)
theme--background-color--element--dark---normal        = hsla(210,   2%,  17%, 1.00)
// theme
theme--background-image--element---------normal        = img(null, null, null)
theme--background-image--element--light--normal        = img(null, null, null)
theme--background-image--element--gray---normal        = img(null, null, null)
theme--background-image--element--dark---normal        = img(null, null, null)
// theme
theme--border-color------element---------normal        = hsla(  0,   0%,   0%, 0.00)
