@import "../Internal/_Theme"

// view
view--vertical-scroller            = create-view(null element                element                        element                element)
view--vertical-field               = create-view(null element                element                        element                element)
view--vertical-field-input         = create-view(null element                element                        element                element)
view--vertical-container           = create-view(null element                element                        element                element)
view--vertical-tracker             = create-view(null element--dark          element----------dark          element--dark          element)
view--vertical-dragger             = create-view(null element--light         element----------light         element--light         element)
view--vertical-low-button          = create-view(null element--light         up-arrow-icon----light         element--light         element)
view--vertical-high-button         = create-view(null element--light         down-arrow-icon--light         element--light         element)
// view
view--vertical-tracker------hover  = create-view(null element--dark          element----------dark          element--dark---hover  null   )
view--vertical-dragger------hover  = create-view(null element--light--hover  element----------light--hover  element--light--hover  null   )
view--vertical-low-button---hover  = create-view(null element--light--hover  up-arrow-icon----light         element--light--hover  null   )
view--vertical-high-button--hover  = create-view(null element--light--hover  down-arrow-icon--light         element--light--hover  null   )
// view
view--vertical-tracker------active = create-view(null element--dark          element----------dark          element--dark---active null   )
view--vertical-dragger------active = create-view(null element--light--active element----------light--active element--light--active null   )
view--vertical-low-button---active = create-view(null element--light--active up-arrow-icon----light         element--light--active null   )
view--vertical-high-button--active = create-view(null element--light--active down-arrow-icon--light         element--light--active null   )
// view
view--vertical-tracker------focus  = create-view(null element--dark          element-----------dark         element--dark---focus  null   )
view--vertical-dragger------focus  = create-view(null element--light--focus  element-----------light--focus element--light--focus  null   )
view--vertical-low-button---focus  = create-view(null element--light--focus  null                           element--light--focus  null   )
view--vertical-high-button--focus  = create-view(null element--light--focus  null                           element--light--focus  null   )

// layout
layout--vertical-scroller          = create-layout(null      auto auto (0px            ) (0px) (0px))
layout--vertical-field             = create-layout(null      auto auto (0px            ) (0px) (0px))
layout--vertical-field-input       = create-layout(null      auto auto (0px            ) (0px) (0px))
layout--vertical-container         = create-layout(null      auto auto (0px 0px 2px 2px) (0px) (0px))
layout--vertical-tracker           = create-layout(null      24px auto (0px            ) (1px) (0px))
layout--vertical-dragger           = create-layout(absolute  24px auto (0px            ) (1px) (0px))
layout--vertical-low-button        = create-layout(null      24px 24px (0px            ) (1px) (0px))
layout--vertical-high-button       = create-layout(null      24px 24px (0px            ) (1px) (0px))

// flex
flex--vertical-scroller            = create-flex(0, 0, auto, auto), create-flex2(column, flex-start, center)
flex--vertical-field               = create-flex(1, 1, auto, auto), create-flex2(column, flex-start, center)
flex--vertical-field-input         = create-flex(1, 1, auto, auto), create-flex2(column, flex-start, center)
flex--vertical-container           = create-flex(1, 1, auto, auto), create-flex2(column, flex-start, center)
flex--vertical-tracker             = create-flex(1, 1, auto, auto)
flex--vertical-dragger             = create-flex(0, 1, auto, auto)
flex--vertical-low-button          = create-flex(0, 0, auto, auto)
flex--vertical-high-button         = create-flex(0, 0, auto, auto)

// scroller
.unity-scroller--vertical
    add-skin1 vertical-scroller
    add-skin2 vertical-scroller
    add-skin3 vertical-scroller
.unity-scroller--vertical .unity-base-slider
    add-skin1 vertical-field
    add-skin2 vertical-field
    add-skin3 vertical-field
.unity-scroller--vertical .unity-base-slider .unity-base-slider__input
    add-skin1 vertical-field-input
    add-skin2 vertical-field-input
    add-skin3 vertical-field-input
.unity-scroller--vertical .unity-base-slider .unity-base-slider__input #unity-drag-container
    add-skin1 vertical-container
    add-skin2 vertical-container
    add-skin3 vertical-container
.unity-scroller--vertical .unity-base-slider .unity-base-slider__input #unity-drag-container #unity-tracker
    add-skin1 vertical-tracker
    add-skin2 vertical-tracker
    add-skin3 vertical-tracker
.unity-scroller--vertical .unity-base-slider .unity-base-slider__input #unity-drag-container #unity-dragger
    add-skin1 vertical-dragger
    add-skin2 vertical-dragger
    add-skin3 vertical-dragger
.unity-scroller--vertical #unity-low-button
    add-skin1 vertical-low-button
    add-skin2 vertical-low-button
    add-skin3 vertical-low-button
.unity-scroller--vertical #unity-high-button
    add-skin1 vertical-high-button
    add-skin2 vertical-high-button
    add-skin3 vertical-high-button
// scroller
.unity-scroller--vertical .unity-base-slider .unity-base-slider__input #unity-drag-container #unity-tracker:hover
    add-skin1 vertical-tracker--hover
.unity-scroller--vertical .unity-base-slider .unity-base-slider__input #unity-drag-container #unity-dragger:hover
    add-skin1 vertical-dragger--hover
.unity-scroller--vertical #unity-low-button:hover
    add-skin1 vertical-low-button--hover
.unity-scroller--vertical #unity-high-button:hover
    add-skin1 vertical-high-button--hover
// scroller
.unity-scroller--vertical .unity-base-slider .unity-base-slider__input #unity-drag-container:active #unity-tracker
    add-skin1 vertical-tracker--active
.unity-scroller--vertical .unity-base-slider .unity-base-slider__input #unity-drag-container:active #unity-dragger
    add-skin1 vertical-dragger--active
.unity-scroller--vertical #unity-low-button:active
    add-skin1 vertical-low-button--active
.unity-scroller--vertical #unity-high-button:active
    add-skin1 vertical-high-button--active
// scroller
.unity-scroller--vertical .unity-base-slider:focus .unity-base-slider__input #unity-drag-container #unity-tracker
    add-skin1 vertical-tracker--focus
.unity-scroller--vertical .unity-base-slider:focus .unity-base-slider__input #unity-drag-container #unity-dragger
    add-skin1 vertical-dragger--focus
.unity-scroller--vertical #unity-low-button:focus
    add-skin1 vertical-low-button--focus
.unity-scroller--vertical #unity-high-button:focus
    add-skin1 vertical-high-button--focus
