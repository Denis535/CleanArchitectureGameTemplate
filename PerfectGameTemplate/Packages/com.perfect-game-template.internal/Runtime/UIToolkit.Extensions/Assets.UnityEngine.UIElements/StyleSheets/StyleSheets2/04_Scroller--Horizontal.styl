@import "../Internal/_Theme"

// view
view--horizontal-scroller             = create-view-skin(null, (element               element                ), (element                element))
view--horizontal-slider-field         = create-view-skin(null, (element               element                ), (element                element))
view--horizontal-slider-field-input   = create-view-skin(null, (element               element                ), (element                element))
view--horizontal-container            = create-view-skin(null, (element               element                ), (element                element))
view--horizontal-tracker              = create-view-skin(null, (element--dark         element--dark          ), (element--dark          element))
view--horizontal-dragger              = create-view-skin(null, (element--light        element--light         ), (element--light         element))
view--horizontal-low-button           = create-view-skin(null, (element--light        left-arrow-icon--light ), (element--light         element))
view--horizontal-high-button          = create-view-skin(null, (element--light        right-arrow-icon--light), (element--light         element))
// view
view--horizontal-tracker--hover       = create-view-skin(null, (element--dark--hover  element--dark--hover   ), (element--dark--hover   element))
view--horizontal-dragger--hover       = create-view-skin(null, (element--light--hover element--light--hover  ), (element--light--hover  element))
view--horizontal-low-button--hover    = create-view-skin(null, (element--light--hover left-arrow-icon--light ), (element--light--hover  element))
view--horizontal-high-button--hover   = create-view-skin(null, (element--light--hover right-arrow-icon--light), (element--light--hover  element))

// layout
layout--horizontal-scroller           = create-layout-skin(null,     auto auto, (0px            ), (0px), (0px))
layout--horizontal-slider-field       = create-layout-skin(null,     auto auto, (0px            ), (0px), (0px))
layout--horizontal-slider-field-input = create-layout-skin(null,     auto auto, (0px            ), (0px), (0px))
layout--horizontal-container          = create-layout-skin(null,     auto auto, (2px 2px 0px 0px), (0px), (0px))
layout--horizontal-tracker            = create-layout-skin(null,     auto 24px, (0px            ), (1px), (0px))
layout--horizontal-dragger            = create-layout-skin(absolute, auto 24px, (0px            ), (1px), (0px))
layout--horizontal-low-button         = create-layout-skin(null,     24px 24px, (0px            ), (1px), (0px))
layout--horizontal-high-button        = create-layout-skin(null,     24px 24px, (0px            ), (1px), (0px))

// flex
flex--horizontal-scroller             = create-flex(0, 0, auto, auto), create-flex2(row, flex-start, center)
flex--horizontal-slider-field         = create-flex(1, 1, auto, auto), create-flex2(row, flex-start, center)
flex--horizontal-slider-field-input   = create-flex(1, 1, auto, auto), create-flex2(row, flex-start, center)
flex--horizontal-container            = create-flex(1, 1, auto, auto), create-flex2(row, flex-start, center)
flex--horizontal-tracker              = create-flex(1, 1, auto, auto)
flex--horizontal-dragger              = create-flex(0, 1, auto, auto)
flex--horizontal-low-button           = create-flex(0, 0, auto, auto)
flex--horizontal-high-button          = create-flex(0, 0, auto, auto)

// scroller
.unity-scroller--horizontal
    add-skin1 horizontal-scroller
    add-skin2 horizontal-scroller
    add-skin3 horizontal-scroller
    // slider
    .unity-base-slider
        add-skin1 horizontal-slider-field
        add-skin2 horizontal-slider-field
        add-skin3 horizontal-slider-field
        .unity-base-slider__input
            add-skin1 horizontal-slider-field-input
            add-skin2 horizontal-slider-field-input
            add-skin3 horizontal-slider-field-input
        .unity-base-slider__input #unity-drag-container
            add-skin1 horizontal-container
            add-skin2 horizontal-container
            add-skin3 horizontal-container
        .unity-base-slider__input #unity-tracker
            add-skin1 horizontal-tracker
            add-skin2 horizontal-tracker
            add-skin3 horizontal-tracker
        .unity-base-slider__input #unity-dragger
            add-skin1 horizontal-dragger
            add-skin2 horizontal-dragger
            add-skin3 horizontal-dragger
    // button
    #unity-low-button
        add-skin1 horizontal-low-button
        add-skin2 horizontal-low-button
        add-skin3 horizontal-low-button
    #unity-high-button
        add-skin1 horizontal-high-button
        add-skin2 horizontal-high-button
        add-skin3 horizontal-high-button

// scroller
.unity-scroller--horizontal
    // slider
    #unity-tracker:hover
        add-skin1 horizontal-tracker--hover
    #unity-dragger:hover
        add-skin1 horizontal-dragger--hover
    // button
    #unity-low-button:hover
        add-skin1 horizontal-low-button--hover
    #unity-high-button:hover
        add-skin1 horizontal-high-button--hover
