@import "../Internal/_Theme"

// selector
selector----------scope = '.scope'
// selector
selector--small---scope = '.scope.small'
selector--medium--scope = '.scope.medium'
selector--large---scope = '.scope.large'
// selector
selector--column--scope = '.scope.column'
selector--row-----scope = '.scope.row'

// view
add-style(scope        ) theme()
flush()

// layout
add-style(        scope) layout(null, auto, auto, (0px), (0px), (0px                ))
add-style(small---scope) layout(null, auto, auto, (0px), (0px), (6px  6px  5px  5px ))
add-style(medium--scope) layout(null, auto, auto, (0px), (0px), (12px 12px 10px 10px))
add-style(large---scope) layout(null, auto, auto, (0px), (0px), (24px 24px 20px 20px))
flush()

// flex
add-style(column--scope) flex(0, 1, auto, auto) flex2(column, flex-start, stretch)
add-style(row-----scope) flex(0, 1, auto, auto) flex2(row,    flex-start, stretch)
flush()
