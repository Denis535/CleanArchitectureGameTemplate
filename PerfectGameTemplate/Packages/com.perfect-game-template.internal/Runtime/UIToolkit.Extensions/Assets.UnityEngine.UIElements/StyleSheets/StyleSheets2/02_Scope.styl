@import "../Internal/_Theme"

// selector
selector--scope         = '.scope'
// selector
selector--scope--small  = '.scope.small'
selector--scope--medium = '.scope.medium'
selector--scope--large  = '.scope.large'
// selector
selector--scope--column = '.scope.column'
selector--scope--row    = '.scope.row'

// view
add-style(scope,         create-view(null, null, null, null, null))

// layout
add-style(scope,         create-layout(null, auto, auto, (0px), (0px), (0px                )))
add-style(scope--small,  create-layout(null, auto, auto, (0px), (0px), (6px  6px  5px  5px )))
add-style(scope--medium, create-layout(null, auto, auto, (0px), (0px), (12px 12px 10px 10px)))
add-style(scope--large,  create-layout(null, auto, auto, (0px), (0px), (24px 24px 20px 20px)))

// flex
add-style(scope--column, create-flex(0, 1, auto, auto), create-flex2(column, flex-start, stretch))
add-style(scope--row,    create-flex(0, 1, auto, auto), create-flex2(row,    flex-start, stretch))
