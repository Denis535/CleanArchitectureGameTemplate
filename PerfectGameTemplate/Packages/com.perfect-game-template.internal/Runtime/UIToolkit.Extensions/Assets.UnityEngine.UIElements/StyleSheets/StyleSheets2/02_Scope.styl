@import "../Internal/__Theme"

// view
view--scope           = create-view-skin(null, (null null), (null null))

// layout
layout--scope         = create-layout-skin(null, auto auto, (0px), (0px), (0px                ))
layout--scope--small  = create-layout-skin(null, auto auto, (0px), (0px), (6px  6px  5px  5px ))
layout--scope--medium = create-layout-skin(null, auto auto, (0px), (0px), (12px 12px 10px 10px))
layout--scope--large  = create-layout-skin(null, auto auto, (0px), (0px), (24px 24px 20px 20px))

// flex
flex--scope--column   = create-flex(0, 1, auto, auto), create-flex2(column, flex-start, stretch)
flex--scope--row      = create-flex(0, 1, auto, auto), create-flex2(row,    flex-start, stretch)

// scope
.scope
    add-skin1 scope
    add-skin2 scope
// scope/layout
.scope
    &.small
        add-skin2 scope--small
    &.medium
        add-skin2 scope--medium
    &.large
        add-skin2 scope--large
// scope/flex
.scope
    &.column
        add-skin3 scope--column
    &.row
        add-skin3 scope--row
