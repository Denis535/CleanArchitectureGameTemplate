@import "../Internal/_Theme"

// selector
selector--scope         = '.scope'
// selector
selector--scope--small  = '.scope.small'
selector--scope--medium = '.scope.medium'
selector--scope--large  = '.scope.large'
// selector
selector--scope--column = '.scope.column'
selector--scope--row    = '.scope.row'

// view
add-style(scope        ) view(null, null, null, null, null)
flush()

// layout
add-style(scope        ) layout(null, auto, auto, (0px), (0px), (0px                ))
add-style(scope--small ) layout(null, auto, auto, (0px), (0px), (6px  6px  5px  5px ))
add-style(scope--medium) layout(null, auto, auto, (0px), (0px), (12px 12px 10px 10px))
add-style(scope--large ) layout(null, auto, auto, (0px), (0px), (24px 24px 20px 20px))
flush()

// flex
add-style(scope--column) flex(0, 1, auto, auto) flex2(column, flex-start, stretch)
add-style(scope--row   ) flex(0, 1, auto, auto) flex2(row,    flex-start, stretch)
flush()
