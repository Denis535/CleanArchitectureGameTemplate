@import "../Internal/_Theme"

// selector
selector----------box        = '.unity-box'
selector--light2--box        = '.unity-box.light2'
selector--light---box        = '.unity-box.light'
selector--gray----box        = '.unity-box.gray'
selector--dark----box        = '.unity-box.dark'
selector--dark2---box        = '.unity-box.dark2'
// selector
selector----------box--hover = '.unity-box:hover'
selector--light2--box--hover = '.unity-box.light2:hover'
selector--light---box--hover = '.unity-box.light:hover'
selector--gray----box--hover = '.unity-box.gray:hover'
selector--dark----box--hover = '.unity-box.dark:hover'
selector--dark2---box--hover = '.unity-box.dark2:hover'
// selector
selector--small---box        = '.unity-box.small'
selector--medium--box        = '.unity-box.medium'
selector--large---box        = '.unity-box.large'

// view
add-style(        box       ) theme(        box--normal)
add-style(light2--box       ) theme(light2--box--normal)
add-style(light---box       ) theme(light---box--normal)
add-style(gray----box       ) theme(gray----box--normal)
add-style(dark----box       ) theme(dark----box--normal)
add-style(dark2---box       ) theme(dark2---box--normal)
flush()
// view
add-style(        box--hover) theme(        box--hover)
add-style(light2--box--hover) theme(light2--box--hover)
add-style(light---box--hover) theme(light---box--hover)
add-style(gray----box--hover) theme(gray----box--hover)
add-style(dark----box--hover) theme(dark----box--hover)
add-style(dark2---box--hover) theme(dark2---box--hover)
flush()

// layout
add-style(        box       ) layout(null, auto, auto, (4px), (1px), (0px                ))
add-style(small---box       ) layout(null, auto, auto, (4px), (1px), (6px  6px  5px  5px ))
add-style(medium--box       ) layout(null, auto, auto, (4px), (1px), (12px 12px 10px 10px))
add-style(large---box       ) layout(null, auto, auto, (4px), (1px), (24px 24px 20px 20px))
flush()

// flex
add-style(        box       ) flex(0, 1, auto, auto) flex2(column, flex-start, stretch)
flush()
