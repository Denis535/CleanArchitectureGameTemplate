@import "../Internal/_Theme"

// selector
selector--box                = '.unity-box'
selector--box--light2        = '.unity-box.light2'
selector--box--light         = '.unity-box.light'
selector--box--gray          = '.unity-box.gray'
selector--box--dark          = '.unity-box.dark'
selector--box--dark2         = '.unity-box.dark2'
// selector
selector--box----------hover = '.unity-box:hover'
selector--box--light2--hover = '.unity-box.light2:hover'
selector--box--light---hover = '.unity-box.light:hover'
selector--box--gray----hover = '.unity-box.gray:hover'
selector--box--dark----hover = '.unity-box.dark:hover'
selector--box--dark2---hover = '.unity-box.dark2:hover'
// selector
selector--box--small         = '.unity-box.small'
selector--box--medium        = '.unity-box.medium'
selector--box--large         = '.unity-box.large'

// view
add-style(box               ) theme(box----------normal)
add-style(box--light2       ) theme(box--light2--normal)
add-style(box--light        ) theme(box--light---normal)
add-style(box--gray         ) theme(box--gray----normal)
add-style(box--dark         ) theme(box--dark----normal)
add-style(box--dark2        ) theme(box--dark2---normal)
flush()
// view
add-style(box----------hover) theme(box----------hover)
add-style(box--light2--hover) theme(box--light2--hover)
add-style(box--light---hover) theme(box--light---hover)
add-style(box--gray----hover) theme(box--gray----hover)
add-style(box--dark----hover) theme(box--dark----hover)
add-style(box--dark2---hover) theme(box--dark2---hover)
flush()

// layout
add-style(box               ) layout(null, auto, auto, (4px), (1px), (0px                ))
add-style(box--small        ) layout(null, auto, auto, (4px), (1px), (6px  6px  5px  5px ))
add-style(box--medium       ) layout(null, auto, auto, (4px), (1px), (12px 12px 10px 10px))
add-style(box--large        ) layout(null, auto, auto, (4px), (1px), (24px 24px 20px 20px))
flush()

// flex
add-style(box               ) flex(0, 1, auto, auto) flex2(column, flex-start, stretch)
flush()
