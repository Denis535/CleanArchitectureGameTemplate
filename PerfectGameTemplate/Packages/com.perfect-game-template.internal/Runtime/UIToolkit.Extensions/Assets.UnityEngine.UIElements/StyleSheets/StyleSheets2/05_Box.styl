@import "../Internal/_Theme"

// selector
selector--box                = '.unity-box'
selector--box--light2        = '.unity-box.light2'
selector--box--light         = '.unity-box.light'
selector--box--gray          = '.unity-box.gray'
selector--box--dark          = '.unity-box.dark'
selector--box--dark2         = '.unity-box.dark2'
// selector
selector--box----------hover = '.unity-box:hover'
selector--box--light2--hover = '.unity-box.light2:hover'
selector--box--light---hover = '.unity-box.light:hover'
selector--box--gray----hover = '.unity-box.gray:hover'
selector--box--dark----hover = '.unity-box.dark:hover'
selector--box--dark2---hover = '.unity-box.dark2:hover'
// selector
selector--box--small         = '.unity-box.small'
selector--box--medium        = '.unity-box.medium'
selector--box--large         = '.unity-box.large'

// view
style(box               ) view(box--normal, box----------normal, box----------normal, box----------normal, box--normal)
style(box--light2       ) view(box--normal, box--light2--normal, box--light2--normal, box--light2--normal, box--normal)
style(box--light        ) view(box--normal, box--light---normal, box--light---normal, box--light---normal, box--normal)
style(box--gray         ) view(box--normal, box--gray----normal, box--gray----normal, box--gray----normal, box--normal)
style(box--dark         ) view(box--normal, box--dark----normal, box--dark----normal, box--dark----normal, box--normal)
style(box--dark2        ) view(box--normal, box--dark2---normal, box--dark2---normal, box--dark2---normal, box--normal)
flush()
// view
style(box----------hover) view(null,        box----------hover,  null,                box----------hover,  null       )
style(box--light2--hover) view(null,        box--light2--hover,  null,                box--light2--hover,  null       )
style(box--light---hover) view(null,        box--light---hover,  null,                box--light---hover,  null       )
style(box--gray----hover) view(null,        box--gray----hover,  null,                box--gray----hover,  null       )
style(box--dark----hover) view(null,        box--dark----hover,  null,                box--dark----hover,  null       )
style(box--dark2---hover) view(null,        box--dark2---hover,  null,                box--dark2---hover,  null       )
flush()

// layout
style(box               ) layout(null, auto, auto, (4px), (1px), (0px                ))
style(box--small        ) layout(null, auto, auto, (4px), (1px), (6px  6px  5px  5px ))
style(box--medium       ) layout(null, auto, auto, (4px), (1px), (12px 12px 10px 10px))
style(box--large        ) layout(null, auto, auto, (4px), (1px), (24px 24px 20px 20px))
flush()

// flex
style(box               ) flex(0, 1, auto, auto) flex2(column, flex-start, stretch)
flush()
