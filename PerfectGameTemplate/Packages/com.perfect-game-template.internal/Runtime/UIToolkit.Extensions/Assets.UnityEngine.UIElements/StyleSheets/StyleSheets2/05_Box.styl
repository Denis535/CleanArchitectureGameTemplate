@import "../Internal/_Theme"

// selector
selector--box                = '.unity-box'
selector--box--light2        = '.unity-box.light2'
selector--box--light         = '.unity-box.light'
selector--box--gray          = '.unity-box.gray'
selector--box--dark          = '.unity-box.dark'
selector--box--dark2         = '.unity-box.dark2'
// selector
selector--box----------hover = '.unity-box:hover'
selector--box--light2--hover = '.unity-box.light2:hover'
selector--box--light---hover = '.unity-box.light:hover'
selector--box--gray----hover = '.unity-box.gray:hover'
selector--box--dark----hover = '.unity-box.dark:hover'
selector--box--dark2---hover = '.unity-box.dark2:hover'
// selector
selector--box--small         = '.unity-box.small'
selector--box--medium        = '.unity-box.medium'
selector--box--large         = '.unity-box.large'

// view
add-style(box,                create-view(box--normal, box----------normal, box----------normal, box----------normal, box--normal))
add-style(box--light2,        create-view(box--normal, box--light2--normal, box--light2--normal, box--light2--normal, box--normal))
add-style(box--light,         create-view(box--normal, box--light---normal, box--light---normal, box--light---normal, box--normal))
add-style(box--gray,          create-view(box--normal, box--gray----normal, box--gray----normal, box--gray----normal, box--normal))
add-style(box--dark,          create-view(box--normal, box--dark----normal, box--dark----normal, box--dark----normal, box--normal))
add-style(box--dark2,         create-view(box--normal, box--dark2---normal, box--dark2---normal, box--dark2---normal, box--normal))
// view
add-style(box----------hover, create-view(null,        box----------hover,  null,                box----------hover,  null       ))
add-style(box--light2--hover, create-view(null,        box--light2--hover,  null,                box--light2--hover,  null       ))
add-style(box--light---hover, create-view(null,        box--light---hover,  null,                box--light---hover,  null       ))
add-style(box--gray----hover, create-view(null,        box--gray----hover,  null,                box--gray----hover,  null       ))
add-style(box--dark----hover, create-view(null,        box--dark----hover,  null,                box--dark----hover,  null       ))
add-style(box--dark2---hover, create-view(null,        box--dark2---hover,  null,                box--dark2---hover,  null       ))

// layout
add-style(box,                create-layout(null, auto, auto, (4px), (1px), (0px                )))
add-style(box--small,         create-layout(null, auto, auto, (4px), (1px), (6px  6px  5px  5px )))
add-style(box--medium,        create-layout(null, auto, auto, (4px), (1px), (12px 12px 10px 10px)))
add-style(box--large,         create-layout(null, auto, auto, (4px), (1px), (24px 24px 20px 20px)))

// flex
add-style(box,                create-flex(0, 1, auto, auto), create-flex2(column, flex-start, stretch))
