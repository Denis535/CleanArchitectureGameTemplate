@import "../Internal/_Theme"

// selector
selector--scroller            = '.unity-scroller--horizontal'
selector--field               = '.unity-scroller--horizontal .unity-base-slider'
selector--input               = '.unity-scroller--horizontal .unity-base-slider .unity-base-slider__input'
selector--container           = '.unity-scroller--horizontal .unity-base-slider .unity-base-slider__input #unity-drag-container'
selector--tracker             = '.unity-scroller--horizontal .unity-base-slider .unity-base-slider__input #unity-drag-container #unity-tracker'
selector--dragger             = '.unity-scroller--horizontal .unity-base-slider .unity-base-slider__input #unity-drag-container #unity-dragger'
selector--low-button          = '.unity-scroller--horizontal #unity-low-button'
selector--high-button         = '.unity-scroller--horizontal #unity-high-button'
// selector
selector--tracker------hover  = '.unity-scroller--horizontal .unity-base-slider .unity-base-slider__input #unity-drag-container #unity-tracker:hover'
selector--dragger------hover  = '.unity-scroller--horizontal .unity-base-slider .unity-base-slider__input #unity-drag-container #unity-dragger:hover'
selector--low-button---hover  = '.unity-scroller--horizontal #unity-low-button:hover'
selector--high-button--hover  = '.unity-scroller--horizontal #unity-high-button:hover'
// selector
selector--tracker------active = '.unity-scroller--horizontal .unity-base-slider .unity-base-slider__input #unity-drag-container:active #unity-tracker'
selector--dragger------active = '.unity-scroller--horizontal .unity-base-slider .unity-base-slider__input #unity-drag-container:active #unity-dragger'
selector--low-button---active = '.unity-scroller--horizontal #unity-low-button:active'
selector--high-button--active = '.unity-scroller--horizontal #unity-high-button:active'
// selector
selector--tracker------focus  = '.unity-scroller--horizontal .unity-base-slider:focus .unity-base-slider__input #unity-drag-container #unity-tracker'
selector--dragger------focus  = '.unity-scroller--horizontal .unity-base-slider:focus .unity-base-slider__input #unity-drag-container #unity-dragger'
selector--low-button---focus  = '.unity-scroller--horizontal #unity-low-button:focus'
selector--high-button--focus  = '.unity-scroller--horizontal #unity-high-button:focus'

// view
style(scroller           ) view(null, element---------normal, element------------------normal, element---------normal, element--normal)
style(field              ) view(null, element---------normal, element------------------normal, element---------normal, element--normal)
style(input              ) view(null, element---------normal, element------------------normal, element---------normal, element--normal)
style(container          ) view(null, element---------normal, element------------------normal, element---------normal, element--normal)
style(tracker            ) view(null, element--dark---normal, element-----------dark---normal, element--dark---normal, element--normal)
style(dragger            ) view(null, element--light--normal, element-----------light--normal, element--light--normal, element--normal)
style(low-button         ) view(null, element--light--normal, element-----------light--normal, element--light--normal, element--normal) image(left-arrow-icon--light)
style(high-button        ) view(null, element--light--normal, element-----------light--normal, element--light--normal, element--normal) image(right-arrow-icon--light)
flush()
// view
style(tracker------hover ) view(null, null,                   null,                            element--dark---hover,  null           )
style(dragger------hover ) view(null, element--light--hover,  null,                            element--light--hover,  null           )
style(low-button---hover ) view(null, element--light--hover,  null,                            element--light--hover,  null           )
style(high-button--hover ) view(null, element--light--hover,  null,                            element--light--hover,  null           )
flush()
// view
style(tracker------active) view(null, null,                   null,                            element--dark---active, null           )
style(dragger------active) view(null, element--light--active, null,                            element--light--active, null           )
style(low-button---active) view(null, element--light--active, null,                            element--light--active, null           )
style(high-button--active) view(null, element--light--active, null,                            element--light--active, null           )
flush()

// layout
style(scroller           ) layout(null,     auto, auto, (0px            ), (0px), (0px))
style(field              ) layout(null,     auto, auto, (0px            ), (0px), (0px))
style(input              ) layout(null,     auto, auto, (0px            ), (0px), (0px))
style(container          ) layout(null,     auto, auto, (2px 2px 0px 0px), (0px), (0px))
style(tracker            ) layout(null,     auto, 24px, (0px            ), (1px), (0px))
style(dragger            ) layout(absolute, auto, 24px, (0px            ), (1px), (0px))
style(low-button         ) layout(null,     24px, 24px, (0px            ), (1px), (0px))
style(high-button        ) layout(null,     24px, 24px, (0px            ), (1px), (0px))
flush()

// flex
style(scroller           ) flex(0, 0, auto, auto) flex2(row, flex-start, center)
style(field              ) flex(1, 1, auto, auto) flex2(row, flex-start, center)
style(input              ) flex(1, 1, auto, auto) flex2(row, flex-start, center)
style(container          ) flex(1, 1, auto, auto) flex2(row, flex-start, center)
style(tracker            ) flex(1, 1, auto, auto)
style(dragger            ) flex(0, 1, auto, auto)
style(low-button         ) flex(0, 0, auto, auto)
style(high-button        ) flex(0, 0, auto, auto)
flush()
