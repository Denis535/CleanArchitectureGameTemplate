@import "../Internal/_Theme"

// selector
selector--scroller            = '.unity-scroller--horizontal'
selector--field               = '.unity-scroller--horizontal .unity-base-slider'
selector--input               = '.unity-scroller--horizontal .unity-base-slider .unity-base-slider__input'
selector--container           = '.unity-scroller--horizontal .unity-base-slider .unity-base-slider__input #unity-drag-container'
selector--tracker             = '.unity-scroller--horizontal .unity-base-slider .unity-base-slider__input #unity-drag-container #unity-tracker'
selector--dragger             = '.unity-scroller--horizontal .unity-base-slider .unity-base-slider__input #unity-drag-container #unity-dragger'
selector--low-button          = '.unity-scroller--horizontal #unity-low-button'
selector--high-button         = '.unity-scroller--horizontal #unity-high-button'
// selector
selector--tracker------hover  = '.unity-scroller--horizontal .unity-base-slider .unity-base-slider__input #unity-drag-container #unity-tracker:hover'
selector--dragger------hover  = '.unity-scroller--horizontal .unity-base-slider .unity-base-slider__input #unity-drag-container #unity-dragger:hover'
selector--low-button---hover  = '.unity-scroller--horizontal #unity-low-button:hover'
selector--high-button--hover  = '.unity-scroller--horizontal #unity-high-button:hover'
// selector
selector--tracker------active = '.unity-scroller--horizontal .unity-base-slider .unity-base-slider__input #unity-drag-container:active #unity-tracker'
selector--dragger------active = '.unity-scroller--horizontal .unity-base-slider .unity-base-slider__input #unity-drag-container:active #unity-dragger'
selector--low-button---active = '.unity-scroller--horizontal #unity-low-button:active'
selector--high-button--active = '.unity-scroller--horizontal #unity-high-button:active'
// selector
selector--tracker------focus  = '.unity-scroller--horizontal .unity-base-slider:focus .unity-base-slider__input #unity-drag-container #unity-tracker'
selector--dragger------focus  = '.unity-scroller--horizontal .unity-base-slider:focus .unity-base-slider__input #unity-drag-container #unity-dragger'
selector--low-button---focus  = '.unity-scroller--horizontal #unity-low-button:focus'
selector--high-button--focus  = '.unity-scroller--horizontal #unity-high-button:focus'

// view
add-style(scroller,            create-view(null, element---------normal, element------------------normal, element---------normal, element--normal))
add-style(field,               create-view(null, element---------normal, element------------------normal, element---------normal, element--normal))
add-style(input,               create-view(null, element---------normal, element------------------normal, element---------normal, element--normal))
add-style(container,           create-view(null, element---------normal, element------------------normal, element---------normal, element--normal))
add-style(tracker,             create-view(null, element--dark---normal, element-----------dark---normal, element--dark---normal, element--normal))
add-style(dragger,             create-view(null, element--light--normal, element-----------light--normal, element--light--normal, element--normal))
add-style(low-button,          create-view(null, element--light--normal, left-arrow-icon---light,         element--light--normal, element--normal))
add-style(high-button,         create-view(null, element--light--normal, right-arrow-icon--light,         element--light--normal, element--normal))
// view
add-style(tracker------hover,  create-view(null, null,                   null,                            element--dark---hover,  null           ))
add-style(dragger------hover,  create-view(null, element--light--hover,  null,                            element--light--hover,  null           ))
add-style(low-button---hover,  create-view(null, element--light--hover,  null,                            element--light--hover,  null           ))
add-style(high-button--hover,  create-view(null, element--light--hover,  null,                            element--light--hover,  null           ))
// view
add-style(tracker------active, create-view(null, null,                   null,                            element--dark---active, null           ))
add-style(dragger------active, create-view(null, element--light--active, null,                            element--light--active, null           ))
add-style(low-button---active, create-view(null, element--light--active, left-arrow-icon---gray,          element--light--active, null           ))
add-style(high-button--active, create-view(null, element--light--active, right-arrow-icon--gray,          element--light--active, null           ))
// // view
// add-style(tracker------focus,  create-view(null, null,                   null,                            null,                   null           ))
// add-style(dragger------focus,  create-view(null, element--light--focus,  null,                            element--light--focus,  null           ))
// add-style(low-button---focus,  create-view(null, element--light--focus,  null,                            element--light--focus,  null           ))
// add-style(high-button--focus,  create-view(null, element--light--focus,  null,                            element--light--focus,  null           ))

// layout
add-style(scroller,            create-layout(null,     auto, auto, (0px            ), (0px), (0px)))
add-style(field,               create-layout(null,     auto, auto, (0px            ), (0px), (0px)))
add-style(input,               create-layout(null,     auto, auto, (0px            ), (0px), (0px)))
add-style(container,           create-layout(null,     auto, auto, (2px 2px 0px 0px), (0px), (0px)))
add-style(tracker,             create-layout(null,     auto, 24px, (0px            ), (1px), (0px)))
add-style(dragger,             create-layout(absolute, auto, 24px, (0px            ), (1px), (0px)))
add-style(low-button,          create-layout(null,     24px, 24px, (0px            ), (1px), (0px)))
add-style(high-button,         create-layout(null,     24px, 24px, (0px            ), (1px), (0px)))

// flex
add-style(scroller,            create-flex(0, 0, auto, auto), create-flex2(row, flex-start, center))
add-style(field,               create-flex(1, 1, auto, auto), create-flex2(row, flex-start, center))
add-style(input,               create-flex(1, 1, auto, auto), create-flex2(row, flex-start, center))
add-style(container,           create-flex(1, 1, auto, auto), create-flex2(row, flex-start, center))
add-style(tracker,             create-flex(1, 1, auto, auto)                                       )
add-style(dragger,             create-flex(0, 1, auto, auto)                                       )
add-style(low-button,          create-flex(0, 0, auto, auto)                                       )
add-style(high-button,         create-flex(0, 0, auto, auto)                                       )
