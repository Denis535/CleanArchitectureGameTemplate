@import "../Internal/_Theme"

// view
view--scroll-view                      = create-view-skin(light, (view                  view                   ), (view                   view   ))
view--scroll-view--light2              = create-view-skin(light, (view--light2          view--light2           ), (view--light2           view   ))
view--scroll-view--light               = create-view-skin(light, (view--light           view--light            ), (view--light            view   ))
view--scroll-view--gray                = create-view-skin(light, (view--gray            view--gray             ), (view--gray             view   ))
view--scroll-view--dark                = create-view-skin(light, (view--dark            view--dark             ), (view--dark             view   ))
view--scroll-view--dark2               = create-view-skin(light, (view--dark2           view--dark2            ), (view--dark2            view   ))
view--viewport-and-vertical-scroller   = create-view-skin(null,  (element               element                ), (element                element))
view--viewport                         = create-view-skin(null,  (element               element                ), (element                element))
view--content                          = create-view-skin(null,  (element               element                ), (element                element))

// view
view--scroll-view--hover               = create-view-skin(light, (view--hover           view--hover            ), (view--hover            view   ))
view--scroll-view--light2--hover       = create-view-skin(light, (view--light2--hover   view--light2--hover    ), (view--light2--hover    view   ))
view--scroll-view--light--hover        = create-view-skin(light, (view--light--hover    view--light--hover     ), (view--light--hover     view   ))
view--scroll-view--gray--hover         = create-view-skin(light, (view--gray--hover     view--gray--hover      ), (view--gray--hover      view   ))
view--scroll-view--dark--hover         = create-view-skin(light, (view--dark--hover     view--dark--hover      ), (view--dark--hover      view   ))
view--scroll-view--dark2--hover        = create-view-skin(light, (view--dark2--hover    view--dark2--hover     ), (view--dark2--hover     view   ))

// layout
layout--scroll-view                    = create-layout-skin(null, auto auto, (4px), (1px), (0px                ))
layout--viewport-and-vertical-scroller = create-layout-skin(null, auto auto, (0px), (0px), (0px                ))
layout--viewport                       = create-layout-skin(null, auto auto, (0px), (0px), (0px                ))
layout--content                        = create-layout-skin(null, auto auto, (0px), (0px), (0px                ))
// layout
layout--content--small                 = create-layout-skin(null, auto auto, (0px), (0px), (6px  6px  5px  5px ))
layout--content--medium                = create-layout-skin(null, auto auto, (0px), (0px), (12px 12px 10px 10px))
layout--content--large                 = create-layout-skin(null, auto auto, (0px), (0px), (24px 24px 20px 20px))

// flex
flex--scroll-view                      = create-flex(0, 1, auto, auto), create-flex2(column,         flex-start, stretch)
flex--viewport-and-vertical-scroller   = create-flex(1, 1, auto, auto), create-flex2(row,            flex-start, stretch)
flex--viewport                         = create-flex(1, 1, auto, auto), create-flex2(column,         flex-start, stretch)
flex--content                          = create-flex(0, 0, auto, auto), create-flex2(column,         flex-start, stretch)
// flex
flex--viewport--reverse                = create-flex(1, 1, auto, auto), create-flex2(column-reverse, flex-start, stretch)

// scroll-view
.unity-scroll-view
    add-skin1 scroll-view
    add-skin2 scroll-view
    add-skin3 scroll-view
.unity-scroll-view #unity-content-and-vertical-scroll-container
    add-skin1 viewport-and-vertical-scroller
    add-skin2 viewport-and-vertical-scroller
    add-skin3 viewport-and-vertical-scroller
.unity-scroll-view #unity-content-viewport
    overflow hidden
    add-skin1 viewport
    add-skin2 viewport
    add-skin3 viewport
.unity-scroll-view #unity-content-container
    overflow scroll
    add-skin1 content
    add-skin2 content
    add-skin3 content
// scroll-view
.unity-scroll-view.light2
    add-skin1 scroll-view--light2
.unity-scroll-view.light
    add-skin1 scroll-view--light
.unity-scroll-view.gray
    add-skin1 scroll-view--gray
.unity-scroll-view.dark
    add-skin1 scroll-view--dark
.unity-scroll-view.dark2
    add-skin1 scroll-view--dark2
// scroll-view
.unity-scroll-view:hover
    add-skin1 scroll-view--hover
.unity-scroll-view.light2:hover
    add-skin1 scroll-view--light2--hover
.unity-scroll-view.light:hover
    add-skin1 scroll-view--light--hover
.unity-scroll-view.gray:hover
    add-skin1 scroll-view--gray--hover
.unity-scroll-view.dark:hover
    add-skin1 scroll-view--dark--hover
.unity-scroll-view.dark2:hover
    add-skin1 scroll-view--dark2--hover
// scroll-view
.unity-scroll-view.small #unity-content-container
    add-skin2 content--small
.unity-scroll-view.medium #unity-content-container
    add-skin2 content--medium
.unity-scroll-view.large #unity-content-container
    add-skin2 content--large
// scroll-view
.unity-scroll-view.reverse #unity-content-viewport
    add-skin3 viewport--reverse
