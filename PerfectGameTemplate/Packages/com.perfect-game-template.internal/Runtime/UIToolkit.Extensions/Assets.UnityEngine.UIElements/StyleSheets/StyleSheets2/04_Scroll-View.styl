layout--vertical-dragger               = create-layout-skin(absolute, 24px auto, (0px            ), (1px), (0px                ))
layout--vertical-low-button            = create-layout-skin(null,     24px 24px, (0px            ), (1px), (0px                ))
layout--vertical-high-button           = create-layout-skin(null,     24px 24px, (0px            ), (1px), (0px                ))

// scroll-view
flex--scroll-view                      = create-flex(0, 1, auto, auto), create-flex2(column,         flex-start, stretch)
flex--viewport-and-vertical-scroller   = create-flex(1, 1, auto, auto), create-flex2(row,            flex-start, stretch)
flex--viewport                         = create-flex(1, 1, auto, auto), create-flex2(column,         flex-start, stretch)
flex--viewport--reverse                = create-flex(1, 1, auto, auto), create-flex2(column-reverse, flex-start, stretch)
flex--content                          = create-flex(0, 0, auto, auto), create-flex2(column,         flex-start, stretch)
// horizontal-scroller
flex--horizontal-scroller              = create-flex(0, 0, auto, auto), create-flex2(row,            flex-start, center )
flex--horizontal-slider-field          = create-flex(1, 1, auto, auto), create-flex2(row,            flex-start, center )
flex--horizontal-slider-field-input    = create-flex(1, 1, auto, auto), create-flex2(row,            flex-start, center )
flex--horizontal-container             = create-flex(1, 1, auto, auto), create-flex2(row,            flex-start, center )
flex--horizontal-tracker               = create-flex(1, 1, auto, auto)
flex--horizontal-dragger               = create-flex(0, 1, auto, auto)
flex--horizontal-low-button            = create-flex(0, 0, auto, auto)
flex--horizontal-high-button           = create-flex(0, 0, auto, auto)
// vertical-scroller
flex--vertical-scroller                = create-flex(0, 0, auto, auto), create-flex2(column,         flex-start, center )
flex--vertical-slider-field            = create-flex(1, 1, auto, auto), create-flex2(column,         flex-start, center )
flex--vertical-slider-field-input      = create-flex(1, 1, auto, auto), create-flex2(column,         flex-start, center )
flex--vertical-container               = create-flex(1, 1, auto, auto), create-flex2(column,         flex-start, center )
flex--vertical-tracker                 = create-flex(1, 1, auto, auto)
flex--vertical-dragger                 = create-flex(0, 1, auto, auto)
flex--vertical-low-button              = create-flex(0, 0, auto, auto)
flex--vertical-high-button             = create-flex(0, 0, auto, auto)

// scroll-view
.unity-scroll-view
    add-skin1 scroll-view
    add-skin2 scroll-view
    add-skin3 scroll-view
    #unity-content-and-vertical-scroll-container
        add-skin1 viewport-and-vertical-scroller
        add-skin2 viewport-and-vertical-scroller
        add-skin3 viewport-and-vertical-scroller
    #unity-content-viewport
        overflow hidden
        add-skin1 viewport
        add-skin2 viewport
        add-skin3 viewport
    #unity-content-container
        overflow scroll
        add-skin1 content
        add-skin2 content
        add-skin3 content
// scroll-view/view
.unity-scroll-view
    &.light2
        add-skin1 scroll-view--light2
    &.light
        add-skin1 scroll-view--light
    &.gray
        add-skin1 scroll-view--gray
    &.dark
        add-skin1 scroll-view--dark
    &.dark2
        add-skin1 scroll-view--dark2
// scroll-view/layout
.unity-scroll-view
    &.small
        #unity-content-container
            add-skin2 content--small
    &.medium
        #unity-content-container
            add-skin2 content--medium
    &.large
        #unity-content-container
            add-skin2 content--large
// scroll-view/flex
.unity-scroll-view
    &.reverse
        #unity-content-viewport
            add-skin3 viewport--reverse

// scroller
.unity-scroller--horizontal
    add-skin1 horizontal-scroller
    add-skin2 horizontal-scroller
    add-skin3 horizontal-scroller
    // slider-field
    .unity-base-slider
        add-skin1 horizontal-slider-field
        add-skin2 horizontal-slider-field
        add-skin3 horizontal-slider-field
        .unity-base-slider__input
            add-skin1 horizontal-slider-field-input
            add-skin2 horizontal-slider-field-input
            add-skin3 horizontal-slider-field-input
        #unity-drag-container
            add-skin1 horizontal-container
            add-skin2 horizontal-container
            add-skin3 horizontal-container
        #unity-tracker
            add-skin1 horizontal-tracker
            add-skin2 horizontal-tracker
            add-skin3 horizontal-tracker
        #unity-dragger
            add-skin1 horizontal-dragger
            add-skin2 horizontal-dragger
            add-skin3 horizontal-dragger
    // button
    #unity-low-button
        add-skin1 horizontal-low-button
        add-skin2 horizontal-low-button
        add-skin3 horizontal-low-button
    // button
    #unity-high-button
        add-skin1 horizontal-high-button
        add-skin2 horizontal-high-button
        add-skin3 horizontal-high-button

// scroller/hover
.unity-scroller--horizontal
    // slider
    .unity-base-slider
        #unity-dragger:hover
            add-skin1 horizontal-dragger--hover
    // button
    #unity-low-button:hover
        add-skin1 horizontal-low-button--hover
    // button
    #unity-high-button:hover
        add-skin1 horizontal-high-button--hover

