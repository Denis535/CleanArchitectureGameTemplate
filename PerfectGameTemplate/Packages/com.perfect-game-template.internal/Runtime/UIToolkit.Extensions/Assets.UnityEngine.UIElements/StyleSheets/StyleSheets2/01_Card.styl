// warning-dialog-card
selector--warning-dialog-card           = '.warning-dialog-card'
selector--warning-dialog-header         = '.warning-dialog-card .header'
selector--warning-dialog-content        = '.warning-dialog-card .content'
selector--warning-dialog-footer         = '.warning-dialog-card .footer'
// warning-dialog-card
selector--warning-dialog-card-----hover = '.warning-dialog-card:hover'
selector--warning-dialog-header---hover = '.warning-dialog-card:hover .header'
