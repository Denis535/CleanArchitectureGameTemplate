@import "../Internal/_Theme"

// selector
selector--card                           = '.card'
selector--header                         = '.card .header'
selector--content                        = '.card .content'
selector--footer                         = '.card .footer'
// selector
selector--dialog-card                    = '.dialog-card'
selector--dialog-header                  = '.dialog-card .header'
selector--dialog-content                 = '.dialog-card .content'
selector--dialog-footer                  = '.dialog-card .footer'
// selector
selector--info--dialog-card              = '.info-dialog-card'
selector--info--dialog-header            = '.info-dialog-card .header'
selector--info--dialog-content           = '.info-dialog-card .content'
selector--info--dialog-footer            = '.info-dialog-card .footer'
// selector
selector--warning--dialog-card           = '.warning-dialog-card'
selector--warning--dialog-header         = '.warning-dialog-card .header'
selector--warning--dialog-content        = '.warning-dialog-card .content'
selector--warning--dialog-footer         = '.warning-dialog-card .footer'
// selector
selector--error--dialog-card             = '.error-dialog-card'
selector--error--dialog-header           = '.error-dialog-card .header'
selector--error--dialog-content          = '.error-dialog-card .content'
selector--error--dialog-footer           = '.error-dialog-card .footer'

// selector
selector--card---------------------hover = '.card:hover'
selector--header-------------------hover = '.card:hover .header'
selector--content------------------hover = '.card:hover .content'
selector--footer-------------------hover = '.card:hover .footer'
// selector
selector--dialog-card--------------hover = '.dialog-card:hover'
selector--dialog-header------------hover = '.dialog-card:hover .header'
selector--dialog-content-----------hover = '.dialog-card:hover .content'
selector--dialog-footer------------hover = '.dialog-card:hover .footer'
// selector
selector--info--dialog-card--------hover = '.info-dialog-card:hover'
selector--info--dialog-header------hover = '.info-dialog-card:hover .header'
selector--info--dialog-content-----hover = '.info-dialog-card:hover .content'
selector--info--dialog-footer------hover = '.info-dialog-card:hover .footer'
// selector
selector--warning--dialog-card-----hover = '.warning-dialog-card:hover'
selector--warning--dialog-header---hover = '.warning-dialog-card:hover .header'
selector--warning--dialog-content--hover = '.warning-dialog-card:hover .content'
selector--warning--dialog-footer---hover = '.warning-dialog-card:hover .footer'
// selector
selector--error--dialog-card-------hover = '.error-dialog-card:hover'
selector--error--dialog-header-----hover = '.error-dialog-card:hover .header'
selector--error--dialog-content----hover = '.error-dialog-card:hover .content'
selector--error--dialog-footer-----hover = '.error-dialog-card:hover .footer'

// view
add-style(card                          ) theme(card---------------------normal) font(null, 100%, normal)
add-style(header                        ) theme(header-------------------normal) font(null, 130%, bold  )
add-style(content                       ) theme(content------------------normal) font(null, 100%, normal)
add-style(footer                        ) theme(footer-------------------normal) font(null, 120%, bold  )
flush()
// view
add-style(dialog-card                   ) theme(dialog-card--------------normal) font(null, null, null  )
add-style(dialog-header                 ) theme(dialog-header------------normal) font(null, null, null  )
add-style(dialog-content                ) theme(dialog-content-----------normal) font(null, 120%, bold  )
add-style(dialog-footer                 ) theme(dialog-footer------------normal) font(null, null, null  )
flush()
// view
add-style(info--dialog-card             ) theme(info--dialog-card--------normal) font(null, null, null  )
add-style(info--dialog-header           ) theme(info--dialog-header------normal) font(null, null, null  )
add-style(info--dialog-content          ) theme(info--dialog-content-----normal) font(null, 120%, bold  )
add-style(info--dialog-footer           ) theme(info--dialog-footer------normal) font(null, null, null  )
flush()
// view
add-style(warning--dialog-card          ) theme(warning--dialog-card-----normal) font(null, null, null  )
add-style(warning--dialog-header        ) theme(warning--dialog-header---normal) font(null, null, null  )
add-style(warning--dialog-content       ) theme(warning--dialog-content--normal) font(null, 120%, bold  )
add-style(warning--dialog-footer        ) theme(warning--dialog-footer---normal) font(null, null, null  )
flush()
// view
add-style(error--dialog-card            ) theme(error--dialog-card-------normal) font(null, null, null  )
add-style(error--dialog-header          ) theme(error--dialog-header-----normal) font(null, null, null  )
add-style(error--dialog-content         ) theme(error--dialog-content----normal) font(null, 120%, bold  )
add-style(error--dialog-footer          ) theme(error--dialog-footer-----normal) font(null, null, null  )
flush()

// view
add-style(card---------------------hover) theme(card---------------------hover)
add-style(header-------------------hover) theme(header-------------------hover)
add-style(content------------------hover) theme(content------------------hover)
add-style(footer-------------------hover) theme(footer-------------------hover)
flush()
// view
add-style(dialog-card--------------hover) theme(dialog-card--------------hover)
add-style(dialog-header------------hover) theme(dialog-header------------hover)
add-style(dialog-content-----------hover) theme(dialog-content-----------hover)
add-style(dialog-footer------------hover) theme(dialog-footer------------hover)
flush()
// view
add-style(info--dialog-card--------hover) theme(info--dialog-card--------hover)
add-style(info--dialog-header------hover) theme(info--dialog-header------hover)
add-style(info--dialog-content-----hover) theme(info--dialog-content-----hover)
add-style(info--dialog-footer------hover) theme(info--dialog-footer------hover)
flush()
// view
add-style(warning--dialog-card-----hover) theme(warning--dialog-card-----hover)
add-style(warning--dialog-header---hover) theme(warning--dialog-header---hover)
add-style(warning--dialog-content--hover) theme(warning--dialog-content--hover)
add-style(warning--dialog-footer---hover) theme(warning--dialog-footer---hover)
flush()
// view
add-style(error--dialog-card-------hover) theme(error--dialog-card-------hover)
add-style(error--dialog-header-----hover) theme(error--dialog-header-----hover)
add-style(error--dialog-content----hover) theme(error--dialog-content----hover)
add-style(error--dialog-footer-----hover) theme(error--dialog-footer-----hover)
flush()

// layout
add-style(card                          ) layout(null, auto, auto, (0px), (1px 1px 1px 1px), (0px  0px  0px  0px ))
add-style(header                        ) layout(null, auto, auto, (0px), (0px 0px 0px 1px), (24px 24px 20px 20px))
add-style(content                       ) layout(null, auto, auto, (0px), (0px 0px 0px 0px), (24px 24px 20px 20px))
add-style(footer                        ) layout(null, auto, auto, (0px), (0px 0px 1px 0px), (24px 24px 20px 20px))
add-style(footer, '%s *'                ) layout(null, 25%,  null, null,  null,              null                 )
flush()

// flex
add-style(card                          ) flex(1, 1, auto, auto) flex2(column, flex-start,   stretch)
add-style(header                        ) flex(0, 0, auto, auto) flex2(row,    center,       center )
add-style(content                       ) flex(1, 1, auto, auto) flex2(column, flex-start,   stretch)
add-style(footer                        ) flex(0, 0, auto, auto) flex2(row,    space-around, center )
flush()
