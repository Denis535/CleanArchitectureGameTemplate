@import "../Internal/_Theme"

// selector
selector--card                           = '.card'
selector--header                         = '.card .header'
selector--content                        = '.card .content'
selector--footer                         = '.card .footer'
selector--footer-descendants             = '.card .footer *'
// selector
selector--dialog-card                    = '.dialog-card'
selector--dialog-header                  = '.dialog-card .header'
selector--dialog-content                 = '.dialog-card .content'
selector--dialog-footer                  = '.dialog-card .footer'
// selector
selector--dialog-card-----info           = '.info-dialog-card'
selector--dialog-header---info           = '.info-dialog-card .header'
selector--dialog-content--info           = '.info-dialog-card .content'
selector--dialog-footer---info           = '.info-dialog-card .footer'
// selector
selector--dialog-card-----warning        = '.warning-dialog-card'
selector--dialog-header---warning        = '.warning-dialog-card .header'
selector--dialog-content--warning        = '.warning-dialog-card .content'
selector--dialog-footer---warning        = '.warning-dialog-card .footer'
// selector
selector--dialog-card-----error          = '.error-dialog-card'
selector--dialog-header---error          = '.error-dialog-card .header'
selector--dialog-content--error          = '.error-dialog-card .content'
selector--dialog-footer---error          = '.error-dialog-card .footer'

// selector
selector--card---------------------hover = '.card:hover'
selector--header-------------------hover = '.card:hover .header'
selector--content------------------hover = '.card:hover .content'
selector--footer-------------------hover = '.card:hover .footer'
// selector
selector--dialog-card--------------hover = '.dialog-card:hover'
selector--dialog-header------------hover = '.dialog-card:hover .header'
selector--dialog-content-----------hover = '.dialog-card:hover .content'
selector--dialog-footer------------hover = '.dialog-card:hover .footer'
// selector
selector--dialog-card-----info-----hover = '.info-dialog-card:hover'
selector--dialog-header---info-----hover = '.info-dialog-card:hover .header'
selector--dialog-content--info-----hover = '.info-dialog-card:hover .content'
selector--dialog-footer---info-----hover = '.info-dialog-card:hover .footer'
// selector
selector--dialog-card-----warning--hover = '.warning-dialog-card:hover'
selector--dialog-header---warning--hover = '.warning-dialog-card:hover .header'
selector--dialog-content--warning--hover = '.warning-dialog-card:hover .content'
selector--dialog-footer---warning--hover = '.warning-dialog-card:hover .footer'
// selector
selector--dialog-card-----error----hover = '.error-dialog-card:hover'
selector--dialog-header---error----hover = '.error-dialog-card:hover .header'
selector--dialog-content--error----hover = '.error-dialog-card:hover .content'
selector--dialog-footer---error----hover = '.error-dialog-card:hover .footer'

// view
add-style(card,                           create-view(light, card,                          card,                        card,                       card               ), create-font(null, 100%, normal))
add-style(header,                         create-view(light, header,                        header,                      header,                     header             ), create-font(null, 130%, bold  ))
add-style(content,                        create-view(light, content,                       content,                     content,                    content            ), create-font(null, 100%, normal))
add-style(footer,                         create-view(light, footer,                        footer,                      footer,                     footer             ), create-font(null, 120%, bold  ))
// view
add-style(dialog-card,                    create-view(light, dialog-card,                   dialog-card,                 dialog-card,                dialog-card        ), create-font(null, null, null  ))
add-style(dialog-header,                  create-view(light, dialog-header,                 dialog-header,               dialog-header,              dialog-header      ), create-font(null, null, null  ))
add-style(dialog-content,                 create-view(light, dialog-content,                dialog-content,              dialog-content,             dialog-content     ), create-font(null, 120%, bold  ))
add-style(dialog-footer,                  create-view(light, dialog-footer,                 dialog-footer,               dialog-footer,              dialog-footer      ), create-font(null, null, null  ))
// view
add-style(dialog-card-----info,           create-view(light, dialog-card,                   dialog-card,                 dialog-card,                dialog-card        ), create-font(null, null, null  ))
add-style(dialog-header---info,           create-view(light, dialog-header--info,           dialog-header--info,         dialog-header,              dialog-header      ), create-font(null, null, null  ))
add-style(dialog-content--info,           create-view(light, dialog-content,                dialog-content,              dialog-content,             dialog-content     ), create-font(null, 120%, bold  ))
add-style(dialog-footer---info,           create-view(light, dialog-footer,                 dialog-footer,               dialog-footer,              dialog-footer      ), create-font(null, null, null  ))
// view
add-style(dialog-card-----warning,        create-view(light, dialog-card,                   dialog-card,                 dialog-card,                dialog-card        ), create-font(null, null, null  ))
add-style(dialog-header---warning,        create-view(light, dialog-header--warning,        dialog-header--warning,      dialog-header,              dialog-header      ), create-font(null, null, null  ))
add-style(dialog-content--warning,        create-view(light, dialog-content,                dialog-content,              dialog-content,             dialog-content     ), create-font(null, 120%, bold  ))
add-style(dialog-footer---warning,        create-view(light, dialog-footer,                 dialog-footer,               dialog-footer,              dialog-footer      ), create-font(null, null, null  ))
// view
add-style(dialog-card-----error,          create-view(light, dialog-card,                   dialog-card,                 dialog-card,                dialog-card        ), create-font(null, null, null  ))
add-style(dialog-header---error,          create-view(light, dialog-header--error,          dialog-header--error,        dialog-header,              dialog-header      ), create-font(null, null, null  ))
add-style(dialog-content--error,          create-view(light, dialog-content,                dialog-content,              dialog-content,             dialog-content     ), create-font(null, 120%, bold  ))
add-style(dialog-footer---error,          create-view(light, dialog-footer,                 dialog-footer,               dialog-footer,              dialog-footer      ), create-font(null, null, null  ))

// view
add-style(card---------------------hover, create-view(null,  card--------------------hover, null,                        card------------hover,      null               ))
add-style(header-------------------hover, create-view(null,  header------------------hover, null,                        header----------hover,      null               ))
add-style(content------------------hover, create-view(null,  content-----------------hover, null,                        content---------hover,      null               ))
add-style(footer-------------------hover, create-view(null,  footer------------------hover, null,                        footer----------hover,      null               ))
// view
add-style(dialog-card--------------hover, create-view(null,  dialog-card-------------hover, null,                        dialog-card-----hover,      null               ))
add-style(dialog-header------------hover, create-view(null,  dialog-header-----------hover, null,                        dialog-header---hover,      null               ))
add-style(dialog-content-----------hover, create-view(null,  dialog-content----------hover, null,                        dialog-content--hover,      null               ))
add-style(dialog-footer------------hover, create-view(null,  dialog-footer-----------hover, null,                        dialog-footer---hover,      null               ))
// view
add-style(dialog-card-----info-----hover, create-view(null,  dialog-card-------------hover, null,                        dialog-card-----hover,      null               ))
add-style(dialog-header---info-----hover, create-view(null,  dialog-header--info-----hover, null,                        dialog-header---hover,      null               ))
add-style(dialog-content--info-----hover, create-view(null,  dialog-content----------hover, null,                        dialog-content--hover,      null               ))
add-style(dialog-footer---info-----hover, create-view(null,  dialog-footer-----------hover, null,                        dialog-footer---hover,      null               ))
// view
add-style(dialog-card-----warning--hover, create-view(null,  dialog-card-------------hover, null,                        dialog-card-----hover,      null               ))
add-style(dialog-header---warning--hover, create-view(null,  dialog-header--warning--hover, null,                        dialog-header---hover,      null               ))
add-style(dialog-content--warning--hover, create-view(null,  dialog-content----------hover, null,                        dialog-content--hover,      null               ))
add-style(dialog-footer---warning--hover, create-view(null,  dialog-footer-----------hover, null,                        dialog-footer---hover,      null               ))
// view
add-style(dialog-card-----error----hover, create-view(null,  dialog-card-------------hover, null,                        dialog-card-----hover,      null               ))
add-style(dialog-header---error----hover, create-view(null,  dialog-header--error----hover, null,                        dialog-header---hover,      null               ))
add-style(dialog-content--error----hover, create-view(null,  dialog-content----------hover, null,                        dialog-content--hover,      null               ))
add-style(dialog-footer---error----hover, create-view(null,  dialog-footer-----------hover, null,                        dialog-footer---hover,      null               ))

// layout
add-style(card,                           create-layout(null, auto, auto, (0px), (1px 1px 1px 1px), (0px  0px  0px  0px )))
add-style(header,                         create-layout(null, auto, auto, (0px), (0px 0px 0px 1px), (24px 24px 20px 20px)))
add-style(content,                        create-layout(null, auto, auto, (0px), (0px 0px 0px 0px), (24px 24px 20px 20px)))
add-style(footer,                         create-layout(null, auto, auto, (0px), (0px 0px 1px 0px), (24px 24px 20px 20px)))
add-style(footer-descendants,             create-layout(null, 25%,  null, null,  null,              null                 ))

// flex
add-style(card,                           create-flex(1, 1, auto, auto), create-flex2(column, flex-start,   stretch))
add-style(header,                         create-flex(0, 0, auto, auto), create-flex2(row,    center,       center ))
add-style(content,                        create-flex(1, 1, auto, auto), create-flex2(column, flex-start,   stretch))
add-style(footer,                         create-flex(0, 0, auto, auto), create-flex2(row,    space-around, center ))
