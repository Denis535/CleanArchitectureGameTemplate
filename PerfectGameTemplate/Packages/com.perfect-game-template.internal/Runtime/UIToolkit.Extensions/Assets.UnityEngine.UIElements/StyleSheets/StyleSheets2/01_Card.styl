@import "../Internal/_Theme"

// selector
selector--card                           = '.card'
selector--header                         = '.card .header'
selector--content                        = '.card .content'
selector--footer                         = '.card .footer'
selector--footer-descendants             = '.card .footer *'
// selector
selector--dialog-card                    = '.dialog-card'
selector--dialog-header                  = '.dialog-card .header'
selector--dialog-content                 = '.dialog-card .content'
selector--dialog-footer                  = '.dialog-card .footer'
// selector
selector--dialog-card-----info           = '.info-dialog-card'
selector--dialog-header---info           = '.info-dialog-card .header'
selector--dialog-content--info           = '.info-dialog-card .content'
selector--dialog-footer---info           = '.info-dialog-card .footer'
// selector
selector--dialog-card-----warning        = '.warning-dialog-card'
selector--dialog-header---warning        = '.warning-dialog-card .header'
selector--dialog-content--warning        = '.warning-dialog-card .content'
selector--dialog-footer---warning        = '.warning-dialog-card .footer'
// selector
selector--dialog-card-----error          = '.error-dialog-card'
selector--dialog-header---error          = '.error-dialog-card .header'
selector--dialog-content--error          = '.error-dialog-card .content'
selector--dialog-footer---error          = '.error-dialog-card .footer'

// selector
selector--card---------------------hover = '.card:hover'
selector--header-------------------hover = '.card:hover .header'
selector--content------------------hover = '.card:hover .content'
selector--footer-------------------hover = '.card:hover .footer'
// selector
selector--dialog-card--------------hover = '.dialog-card:hover'
selector--dialog-header------------hover = '.dialog-card:hover .header'
selector--dialog-content-----------hover = '.dialog-card:hover .content'
selector--dialog-footer------------hover = '.dialog-card:hover .footer'
// selector
selector--dialog-card-----info-----hover = '.info-dialog-card:hover'
selector--dialog-header---info-----hover = '.info-dialog-card:hover .header'
selector--dialog-content--info-----hover = '.info-dialog-card:hover .content'
selector--dialog-footer---info-----hover = '.info-dialog-card:hover .footer'
// selector
selector--dialog-card-----warning--hover = '.warning-dialog-card:hover'
selector--dialog-header---warning--hover = '.warning-dialog-card:hover .header'
selector--dialog-content--warning--hover = '.warning-dialog-card:hover .content'
selector--dialog-footer---warning--hover = '.warning-dialog-card:hover .footer'
// selector
selector--dialog-card-----error----hover = '.error-dialog-card:hover'
selector--dialog-header---error----hover = '.error-dialog-card:hover .header'
selector--dialog-content--error----hover = '.error-dialog-card:hover .content'
selector--dialog-footer---error----hover = '.error-dialog-card:hover .footer'

// view
add-style(card                          ) theme(card---------------------normal) font(null, 100%, normal)
add-style(header                        ) theme(header-------------------normal) font(null, 130%, bold  )
add-style(content                       ) theme(content------------------normal) font(null, 100%, normal)
add-style(footer                        ) theme(footer-------------------normal) font(null, 120%, bold  )
// view
add-style(dialog-card                   ) theme(dialog-card--------------normal) font(null, null, null  )
add-style(dialog-header                 ) theme(dialog-header------------normal) font(null, null, null  )
add-style(dialog-content                ) theme(dialog-content-----------normal) font(null, 120%, bold  )
add-style(dialog-footer                 ) theme(dialog-footer------------normal) font(null, null, null  )
// view
add-style(dialog-card-----info          ) theme(dialog-card-----info-----normal) font(null, null, null  )
add-style(dialog-header---info          ) theme(dialog-header---info-----normal) font(null, null, null  )
add-style(dialog-content--info          ) theme(dialog-content--info-----normal) font(null, 120%, bold  )
add-style(dialog-footer---info          ) theme(dialog-footer---info-----normal) font(null, null, null  )
// view
add-style(dialog-card-----warning       ) theme(dialog-card-----warning--normal) font(null, null, null  )
add-style(dialog-header---warning       ) theme(dialog-header---warning--normal) font(null, null, null  )
add-style(dialog-content--warning       ) theme(dialog-content--warning--normal) font(null, 120%, bold  )
add-style(dialog-footer---warning       ) theme(dialog-footer---warning--normal) font(null, null, null  )
// view
add-style(dialog-card-----error         ) theme(dialog-card-----error----normal) font(null, null, null  )
add-style(dialog-header---error         ) theme(dialog-header---error----normal) font(null, null, null  )
add-style(dialog-content--error         ) theme(dialog-content--error----normal) font(null, 120%, bold  )
add-style(dialog-footer---error         ) theme(dialog-footer---error----normal) font(null, null, null  )
flush()

// view
add-style(card---------------------hover) theme(card---------------------hover)
add-style(header-------------------hover) theme(header-------------------hover)
add-style(content------------------hover) theme(content------------------hover)
add-style(footer-------------------hover) theme(footer-------------------hover)
// view
add-style(dialog-card--------------hover) theme(dialog-card--------------hover)
add-style(dialog-header------------hover) theme(dialog-header------------hover)
add-style(dialog-content-----------hover) theme(dialog-content-----------hover)
add-style(dialog-footer------------hover) theme(dialog-footer------------hover)
// view
add-style(dialog-card-----info-----hover) theme(dialog-card-----info-----hover)
add-style(dialog-header---info-----hover) theme(dialog-header---info-----hover)
add-style(dialog-content--info-----hover) theme(dialog-content--info-----hover)
add-style(dialog-footer---info-----hover) theme(dialog-footer---info-----hover)
// view
add-style(dialog-card-----warning--hover) theme(dialog-card-----warning--hover)
add-style(dialog-header---warning--hover) theme(dialog-header---warning--hover)
add-style(dialog-content--warning--hover) theme(dialog-content--warning--hover)
add-style(dialog-footer---warning--hover) theme(dialog-footer---warning--hover)
// view
add-style(dialog-card-----error----hover) theme(dialog-card-----error----hover)
add-style(dialog-header---error----hover) theme(dialog-header---error----hover)
add-style(dialog-content--error----hover) theme(dialog-content--error----hover)
add-style(dialog-footer---error----hover) theme(dialog-footer---error----hover)
flush()

// layout
add-style(card                          ) layout(null, auto, auto, (0px), (1px 1px 1px 1px), (0px  0px  0px  0px ))
add-style(header                        ) layout(null, auto, auto, (0px), (0px 0px 0px 1px), (24px 24px 20px 20px))
add-style(content                       ) layout(null, auto, auto, (0px), (0px 0px 0px 0px), (24px 24px 20px 20px))
add-style(footer                        ) layout(null, auto, auto, (0px), (0px 0px 1px 0px), (24px 24px 20px 20px))
add-style(footer-descendants            ) layout(null, 25%,  null, null,  null,              null                 )
flush()

// flex
add-style(card                          ) flex(1, 1, auto, auto) flex2(column, flex-start,   stretch)
add-style(header                        ) flex(0, 0, auto, auto) flex2(row,    center,       center )
add-style(content                       ) flex(1, 1, auto, auto) flex2(column, flex-start,   stretch)
add-style(footer                        ) flex(0, 0, auto, auto) flex2(row,    space-around, center )
flush()
