@import "../Internal/_Theme"

// selector
selector--card                           = '.card'
selector--header                         = '.card .header'
selector--content                        = '.card .content'
selector--footer                         = '.card .footer'
selector--footer-descendants             = '.card .footer *'
// selector
selector--dialog-card                    = '.dialog-card'
selector--dialog-header                  = '.dialog-card .header'
selector--dialog-content                 = '.dialog-card .content'
selector--dialog-footer                  = '.dialog-card .footer'
// selector
selector--dialog-card-----info           = '.info-dialog-card'
selector--dialog-header---info           = '.info-dialog-card .header'
selector--dialog-content--info           = '.info-dialog-card .content'
selector--dialog-footer---info           = '.info-dialog-card .footer'
// selector
selector--dialog-card-----warning        = '.warning-dialog-card'
selector--dialog-header---warning        = '.warning-dialog-card .header'
selector--dialog-content--warning        = '.warning-dialog-card .content'
selector--dialog-footer---warning        = '.warning-dialog-card .footer'
// selector
selector--dialog-card-----error          = '.error-dialog-card'
selector--dialog-header---error          = '.error-dialog-card .header'
selector--dialog-content--error          = '.error-dialog-card .content'
selector--dialog-footer---error          = '.error-dialog-card .footer'

// selector
selector--card---------------------hover = '.card:hover'
selector--header-------------------hover = '.card:hover .header'
selector--content------------------hover = '.card:hover .content'
selector--footer-------------------hover = '.card:hover .footer'
// selector
selector--dialog-card--------------hover = '.dialog-card:hover'
selector--dialog-header------------hover = '.dialog-card:hover .header'
selector--dialog-content-----------hover = '.dialog-card:hover .content'
selector--dialog-footer------------hover = '.dialog-card:hover .footer'
// selector
selector--dialog-card-----info-----hover = '.info-dialog-card:hover'
selector--dialog-header---info-----hover = '.info-dialog-card:hover .header'
selector--dialog-content--info-----hover = '.info-dialog-card:hover .content'
selector--dialog-footer---info-----hover = '.info-dialog-card:hover .footer'
// selector
selector--dialog-card-----warning--hover = '.warning-dialog-card:hover'
selector--dialog-header---warning--hover = '.warning-dialog-card:hover .header'
selector--dialog-content--warning--hover = '.warning-dialog-card:hover .content'
selector--dialog-footer---warning--hover = '.warning-dialog-card:hover .footer'
// selector
selector--dialog-card-----error----hover = '.error-dialog-card:hover'
selector--dialog-header---error----hover = '.error-dialog-card:hover .header'
selector--dialog-content--error----hover = '.error-dialog-card:hover .content'
selector--dialog-footer---error----hover = '.error-dialog-card:hover .footer'

// view
add-style(card                          ) view(card---------normal, card--------------------normal, card--------------------normal, card------------normal, card------------normal) font(null, 100%, normal)
add-style(header                        ) view(card---------normal, header------------------normal, header------------------normal, header----------normal, header----------normal) font(null, 130%, bold  )
add-style(content                       ) view(card---------normal, content-----------------normal, content-----------------normal, content---------normal, content---------normal) font(null, 100%, normal)
add-style(footer                        ) view(card---------normal, footer------------------normal, footer------------------normal, footer----------normal, footer----------normal) font(null, 120%, bold  )
// view
add-style(dialog-card                   ) view(dialog-card--normal, dialog-card-------------normal, dialog-card-------------normal, dialog-card-----normal, dialog-card-----normal) font(null, null, null  )
add-style(dialog-header                 ) view(dialog-card--normal, dialog-header-----------normal, dialog-header-----------normal, dialog-header---normal, dialog-header---normal) font(null, null, null  )
add-style(dialog-content                ) view(dialog-card--normal, dialog-content----------normal, dialog-content----------normal, dialog-content--normal, dialog-content--normal) font(null, 120%, bold  )
add-style(dialog-footer                 ) view(dialog-card--normal, dialog-footer-----------normal, dialog-footer-----------normal, dialog-footer---normal, dialog-footer---normal) font(null, null, null  )
// view
add-style(dialog-card-----info          ) view(dialog-card--normal, dialog-card-------------normal, dialog-card-------------normal, dialog-card-----normal, dialog-card-----normal) font(null, null, null  )
add-style(dialog-header---info          ) view(dialog-card--normal, dialog-header--info-----normal, dialog-header--info-----normal, dialog-header---normal, dialog-header---normal) font(null, null, null  )
add-style(dialog-content--info          ) view(dialog-card--normal, dialog-content----------normal, dialog-content----------normal, dialog-content--normal, dialog-content--normal) font(null, 120%, bold  )
add-style(dialog-footer---info          ) view(dialog-card--normal, dialog-footer-----------normal, dialog-footer-----------normal, dialog-footer---normal, dialog-footer---normal) font(null, null, null  )
// view
add-style(dialog-card-----warning       ) view(dialog-card--normal, dialog-card-------------normal, dialog-card-------------normal, dialog-card-----normal, dialog-card-----normal) font(null, null, null  )
add-style(dialog-header---warning       ) view(dialog-card--normal, dialog-header--warning--normal, dialog-header--warning--normal, dialog-header---normal, dialog-header---normal) font(null, null, null  )
add-style(dialog-content--warning       ) view(dialog-card--normal, dialog-content----------normal, dialog-content----------normal, dialog-content--normal, dialog-content--normal) font(null, 120%, bold  )
add-style(dialog-footer---warning       ) view(dialog-card--normal, dialog-footer-----------normal, dialog-footer-----------normal, dialog-footer---normal, dialog-footer---normal) font(null, null, null  )
// view
add-style(dialog-card-----error         ) view(dialog-card--normal, dialog-card-------------normal, dialog-card-------------normal, dialog-card-----normal, dialog-card-----normal) font(null, null, null  )
add-style(dialog-header---error         ) view(dialog-card--normal, dialog-header--error----normal, dialog-header--error----normal, dialog-header---normal, dialog-header---normal) font(null, null, null  )
add-style(dialog-content--error         ) view(dialog-card--normal, dialog-content----------normal, dialog-content----------normal, dialog-content--normal, dialog-content--normal) font(null, 120%, bold  )
add-style(dialog-footer---error         ) view(dialog-card--normal, dialog-footer-----------normal, dialog-footer-----------normal, dialog-footer---normal, dialog-footer---normal) font(null, null, null  )
flush()

// view
add-style(card---------------------hover) view(null,                card--------------------hover,  null,                           card------------hover,  null                  )
add-style(header-------------------hover) view(null,                header------------------hover,  null,                           header----------hover,  null                  )
add-style(content------------------hover) view(null,                content-----------------hover,  null,                           content---------hover,  null                  )
add-style(footer-------------------hover) view(null,                footer------------------hover,  null,                           footer----------hover,  null                  )
// view
add-style(dialog-card--------------hover) view(null,                dialog-card-------------hover,  null,                           dialog-card-----hover,  null                  )
add-style(dialog-header------------hover) view(null,                dialog-header-----------hover,  null,                           dialog-header---hover,  null                  )
add-style(dialog-content-----------hover) view(null,                dialog-content----------hover,  null,                           dialog-content--hover,  null                  )
add-style(dialog-footer------------hover) view(null,                dialog-footer-----------hover,  null,                           dialog-footer---hover,  null                  )
// view
add-style(dialog-card-----info-----hover) view(null,                dialog-card-------------hover,  null,                           dialog-card-----hover,  null                  )
add-style(dialog-header---info-----hover) view(null,                dialog-header--info-----hover,  null,                           dialog-header---hover,  null                  )
add-style(dialog-content--info-----hover) view(null,                dialog-content----------hover,  null,                           dialog-content--hover,  null                  )
add-style(dialog-footer---info-----hover) view(null,                dialog-footer-----------hover,  null,                           dialog-footer---hover,  null                  )
// view
add-style(dialog-card-----warning--hover) view(null,                dialog-card-------------hover,  null,                           dialog-card-----hover,  null                  )
add-style(dialog-header---warning--hover) view(null,                dialog-header--warning--hover,  null,                           dialog-header---hover,  null                  )
add-style(dialog-content--warning--hover) view(null,                dialog-content----------hover,  null,                           dialog-content--hover,  null                  )
add-style(dialog-footer---warning--hover) view(null,                dialog-footer-----------hover,  null,                           dialog-footer---hover,  null                  )
// view
add-style(dialog-card-----error----hover) view(null,                dialog-card-------------hover,  null,                           dialog-card-----hover,  null                  )
add-style(dialog-header---error----hover) view(null,                dialog-header--error----hover,  null,                           dialog-header---hover,  null                  )
add-style(dialog-content--error----hover) view(null,                dialog-content----------hover,  null,                           dialog-content--hover,  null                  )
add-style(dialog-footer---error----hover) view(null,                dialog-footer-----------hover,  null,                           dialog-footer---hover,  null                  )
flush()

// layout
add-style(card                          ) layout(null, auto, auto, (0px), (1px 1px 1px 1px), (0px  0px  0px  0px ))
add-style(header                        ) layout(null, auto, auto, (0px), (0px 0px 0px 1px), (24px 24px 20px 20px))
add-style(content                       ) layout(null, auto, auto, (0px), (0px 0px 0px 0px), (24px 24px 20px 20px))
add-style(footer                        ) layout(null, auto, auto, (0px), (0px 0px 1px 0px), (24px 24px 20px 20px))
add-style(footer-descendants            ) layout(null, 25%,  null, null,  null,              null                 )
flush()

// flex
add-style(card                          ) flex(1, 1, auto, auto) flex2(column, flex-start,   stretch)
add-style(header                        ) flex(0, 0, auto, auto) flex2(row,    center,       center )
add-style(content                       ) flex(1, 1, auto, auto) flex2(column, flex-start,   stretch)
add-style(footer                        ) flex(0, 0, auto, auto) flex2(row,    space-around, center )
flush()
