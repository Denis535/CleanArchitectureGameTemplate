@import "../Internal/_Theme"

// selector
selector--card                          = '.card'
selector--header                        = '.card .header'
selector--content                       = '.card .content'
selector--footer                        = '.card .footer'
selector--footer-descendants            = '.card .footer *'
// selector
selector--dialog-card                   = '.dialog-card'
selector--dialog-header                 = '.dialog-card .header'
selector--dialog-content                = '.dialog-card .content'
selector--dialog-footer                 = '.dialog-card .footer'
// selector
selector--dialog-card-----info          = '.info-dialog-card'
selector--dialog-header---info          = '.info-dialog-card .header'
selector--dialog-content--info          = '.info-dialog-card .content'
selector--dialog-footer---info          = '.info-dialog-card .footer'
// selector
selector--dialog-card-----warning       = '.warning-dialog-card'
selector--dialog-header---warning       = '.warning-dialog-card .header'
selector--dialog-content--warning       = '.warning-dialog-card .content'
selector--dialog-footer---warning       = '.warning-dialog-card .footer'
// selector
selector--dialog-card-----error         = '.error-dialog-card'
selector--dialog-header---error         = '.error-dialog-card .header'
selector--dialog-content--error         = '.error-dialog-card .content'
selector--dialog-footer---error         = '.error-dialog-card .footer'

// selector
selector--card-----hover                 = '.card:hover'
selector--header---hover                 = '.card:hover .header'
selector--content--hover                 = '.card:hover .content'
selector--footer---hover                 = '.card:hover .footer'
// selector
selector--dialog-card-----hover          = '.dialog-card:hover'
selector--dialog-header---hover          = '.dialog-card:hover .header'
selector--dialog-content--hover          = '.dialog-card:hover .content'
selector--dialog-footer---hover          = '.dialog-card:hover .footer'
// selector
selector--dialog-card-----info--hover    = '.info-dialog-card:hover'
selector--dialog-header---info--hover    = '.info-dialog-card:hover .header'
selector--dialog-content--info--hover    = '.info-dialog-card:hover .content'
selector--dialog-footer---info--hover    = '.info-dialog-card:hover .footer'
// selector
selector--dialog-card-----warning--hover = '.warning-dialog-card:hover'
selector--dialog-header---warning--hover = '.warning-dialog-card:hover .header'
selector--dialog-content--warning--hover = '.warning-dialog-card:hover .content'
selector--dialog-footer---warning--hover = '.warning-dialog-card:hover .footer'
// selector
selector--dialog-card-----error--hover   = '.error-dialog-card:hover'
selector--dialog-header---error--hover   = '.error-dialog-card:hover .header'
selector--dialog-content--error--hover   = '.error-dialog-card:hover .content'
selector--dialog-footer---error--hover   = '.error-dialog-card:hover .footer'

// view
add-font-style(card,                    null, 100%, normal)
add-font-style(header,                  null, 130%, bold  )
add-font-style(content,                 null, 100%, normal)
add-font-style(footer,                  null, 120%, bold  )
// view
add-font-style(dialog-card,             null, null, null  )
add-font-style(dialog-header,           null, null, null  )
add-font-style(dialog-content,          null, 120%, bold  )
add-font-style(dialog-footer,           null, null, null  )
// view  
add-font-style(dialog-card-----info,    null, null, null  )
add-font-style(dialog-header---info,    null, null, null  )
add-font-style(dialog-content--info,    null, 120%, bold  )
add-font-style(dialog-footer---info,    null, null, null  )
// view
add-font-style(dialog-card-----warning, null, null, null  )
add-font-style(dialog-header---warning, null, null, null  )
add-font-style(dialog-content--warning, null, 120%, bold  )
add-font-style(dialog-footer---warning, null, null, null  )
// view
add-font-style(dialog-card-----error,   null, null, null  )
add-font-style(dialog-header---error,   null, null, null  )
add-font-style(dialog-content--error,   null, 120%, bold  )
add-font-style(dialog-footer---error,   null, null, null  )

// view
add-view-style(card,                           light, card,                          card,                        card,                       card               )
add-view-style(header,                         light, header,                        header,                      header,                     header             )
add-view-style(content,                        light, content,                       content,                     content,                    content            )
add-view-style(footer,                         light, footer,                        footer,                      footer,                     footer             )
// view
add-view-style(dialog-card,                    light, dialog-card,                   dialog-card,                 dialog-card,                dialog-card        )
add-view-style(dialog-header,                  light, dialog-header,                 dialog-header,               dialog-header,              dialog-header      )
add-view-style(dialog-content,                 light, dialog-content,                dialog-content,              dialog-content,             dialog-content     )
add-view-style(dialog-footer,                  light, dialog-footer,                 dialog-footer,               dialog-footer,              dialog-footer      )
// view
add-view-style(dialog-card-----info,           light, dialog-card,                   dialog-card,                 dialog-card,                dialog-card        )
add-view-style(dialog-header---info,           light, dialog-header--info,           dialog-header--info,         dialog-header,              dialog-header      )
add-view-style(dialog-content--info,           light, dialog-content,                dialog-content,              dialog-content,             dialog-content     )
add-view-style(dialog-footer---info,           light, dialog-footer,                 dialog-footer,               dialog-footer,              dialog-footer      )
// view
add-view-style(dialog-card-----warning,        light, dialog-card,                   dialog-card,                 dialog-card,                dialog-card        )
add-view-style(dialog-header---warning,        light, dialog-header--warning,        dialog-header--warning,      dialog-header,              dialog-header      )
add-view-style(dialog-content--warning,        light, dialog-content,                dialog-content,              dialog-content,             dialog-content     )
add-view-style(dialog-footer---warning,        light, dialog-footer,                 dialog-footer,               dialog-footer,              dialog-footer      )
// view
add-view-style(dialog-card-----error,          light, dialog-card,                   dialog-card,                 dialog-card,                dialog-card        )
add-view-style(dialog-header---error,          light, dialog-header--error,          dialog-header--error,        dialog-header,              dialog-header      )
add-view-style(dialog-content--error,          light, dialog-content,                dialog-content,              dialog-content,             dialog-content     )
add-view-style(dialog-footer---error,          light, dialog-footer,                 dialog-footer,               dialog-footer,              dialog-footer      )

// view
add-view-style(card-----hover,                 null,  card-----hover,                null,                        card,                       null               )
add-view-style(header---hover,                 null,  header---hover,                null,                        header,                     null               )
add-view-style(content--hover,                 null,  content--hover,                null,                        content,                    null               )
add-view-style(footer---hover,                 null,  footer---hover,                null,                        footer,                     null               )
// view
add-view-style(dialog-card-----hover,          null,  dialog-card-----hover,         null,                        dialog-card,                null               )
add-view-style(dialog-header---hover,          null,  dialog-header---hover,         null,                        dialog-header,              null               )
add-view-style(dialog-content--hover,          null,  dialog-content--hover,         null,                        dialog-content,             null               )
add-view-style(dialog-footer---hover,          null,  dialog-footer---hover,         null,                        dialog-footer,              null               )
// view
add-view-style(dialog-card-----info--hover,    null,  dialog-card----------hover,    null,                        dialog-card,                null               )
add-view-style(dialog-header---info--hover,    null,  dialog-header--info--hover,    null,                        dialog-header,              null               )
add-view-style(dialog-content--info--hover,    null,  dialog-content-------hover,    null,                        dialog-content,             null               )
add-view-style(dialog-footer---info--hover,    null,  dialog-footer--------hover,    null,                        dialog-footer,              null               )
// view
add-view-style(dialog-card-----warning--hover, null,  dialog-card-------------hover, null,                        dialog-card,                null               )
add-view-style(dialog-header---warning--hover, null,  dialog-header--warning--hover, null,                        dialog-header,              null               )
add-view-style(dialog-content--warning--hover, null,  dialog-content----------hover, null,                        dialog-content,             null               )
add-view-style(dialog-footer---warning--hover, null,  dialog-footer-----------hover, null,                        dialog-footer,              null               )
// view
add-view-style(dialog-card-----error--hover,   null,  dialog-card-----------hover,   null,                        dialog-card,                null               )
add-view-style(dialog-header---error--hover,   null,  dialog-header--error--hover,   null,                        dialog-header,              null               )
add-view-style(dialog-content--error--hover,   null,  dialog-content--------hover,   null,                        dialog-content,             null               )
add-view-style(dialog-footer---error--hover,   null,  dialog-footer---------hover,   null,                        dialog-footer,              null               )

// layout
add-layout-style(card,               null, auto, auto, (0px), (1px 1px 1px 1px), (0px  0px  0px  0px ))
add-layout-style(header,             null, auto, auto, (0px), (0px 0px 0px 1px), (24px 24px 20px 20px))
add-layout-style(content,            null, auto, auto, (0px), (0px 0px 0px 0px), (24px 24px 20px 20px))
add-layout-style(footer,             null, auto, auto, (0px), (0px 0px 1px 0px), (24px 24px 20px 20px))
add-layout-style(footer-descendants, null, 25%,  null, null,  null,              null                 )

// flex
add-flex-style(card,    1, 1, auto, auto)
add-flex-style(header,  0, 0, auto, auto)
add-flex-style(content, 1, 1, auto, auto)
add-flex-style(footer,  0, 0, auto, auto)

// flex2
add-flex2-style(card,    column, flex-start,   stretch)
add-flex2-style(header,  row,    center,       center )
add-flex2-style(content, column, flex-start,   stretch)
add-flex2-style(footer,  row,    space-around, center )
