@import "../Internal/_Theme"

// group
selector--group                = '.group'
selector--group--light2        = '.group.light2'
selector--group--light         = '.group.light'
selector--group--gray          = '.group.gray'
selector--group--dark          = '.group.dark'
selector--group--dark2         = '.group.dark2'
// group
selector--group----------hover = '.group:hover'
selector--group--light2--hover = '.group.light2:hover'
selector--group--light---hover = '.group.light:hover'
selector--group--gray----hover = '.group.gray:hover'
selector--group--dark----hover = '.group.dark:hover'
selector--group--dark2---hover = '.group.dark2:hover'
// group
selector--group--small         = '.group.small'
selector--group--medium        = '.group.medium'
selector--group--large         = '.group.large'
// group
selector--group--column        = '.group.column'
selector--group--row           = '.group.row'

// view
view--group                = create-view(light view                view         view                view)
view--group--light2        = create-view(light view--light2        view--light2 view--light2        view)
view--group--light         = create-view(light view--light         view--light  view--light         view)
view--group--gray          = create-view(light view--gray          view--gray   view--gray          view)
view--group--dark          = create-view(light view--dark          view--dark   view--dark          view)
view--group--dark2         = create-view(light view--dark2         view--dark2  view--dark2         view)
// view
view--group----------hover = create-view(null  view----------hover null         view----------hover null)
view--group--light2--hover = create-view(null  view--light2--hover null         view--light2--hover null)
view--group--light---hover = create-view(null  view--light---hover null         view--light---hover null)
view--group--gray----hover = create-view(null  view--gray----hover null         view--gray----hover null)
view--group--dark----hover = create-view(null  view--dark----hover null         view--dark----hover null)
view--group--dark2---hover = create-view(null  view--dark2---hover null         view--dark2---hover null)

// layout
layout--group              = create-layout(null auto auto (4px) (1px) (0px                ))
layout--group--small       = create-layout(null auto auto (4px) (1px) (6px  6px  5px  5px ))
layout--group--medium      = create-layout(null auto auto (4px) (1px) (12px 12px 10px 10px))
layout--group--large       = create-layout(null auto auto (4px) (1px) (24px 24px 20px 20px))

// flex
flex--group--column        = create-flex(0, 1, auto, auto), create-flex2(column, flex-start, stretch)
flex--group--row           = create-flex(0, 1, auto, auto), create-flex2(row,    flex-start, stretch)

// group
.group
    add-skin1 group
    add-skin2 group
// group
.group.light2
    add-skin1 group--light2
.group.light
    add-skin1 group--light
.group.gray
    add-skin1 group--gray
.group.dark
    add-skin1 group--dark
.group.dark2
    add-skin1 group--dark2
// group
.group:hover
    add-skin1 group--hover
.group.light2:hover
    add-skin1 group--light2--hover
.group.light:hover
    add-skin1 group--light--hover
.group.gray:hover
    add-skin1 group--gray--hover
.group.dark:hover
    add-skin1 group--dark--hover
.group.dark2:hover
    add-skin1 group--dark2--hover
// group
.group.small
    add-skin2 group--small
.group.medium
    add-skin2 group--medium
.group.large
    add-skin2 group--large
// group
.group.column
    add-skin3 group--column
.group.row
    add-skin3 group--row
