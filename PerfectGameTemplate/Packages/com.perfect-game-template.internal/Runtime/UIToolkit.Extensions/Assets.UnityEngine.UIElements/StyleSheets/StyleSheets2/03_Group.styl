@import "../Internal/_Theme"

// selector
selector--group                = '.group'
selector--group--light2        = '.group.light2'
selector--group--light         = '.group.light'
selector--group--gray          = '.group.gray'
selector--group--dark          = '.group.dark'
selector--group--dark2         = '.group.dark2'
// selector
selector--group----------hover = '.group:hover'
selector--group--light2--hover = '.group.light2:hover'
selector--group--light---hover = '.group.light:hover'
selector--group--gray----hover = '.group.gray:hover'
selector--group--dark----hover = '.group.dark:hover'
selector--group--dark2---hover = '.group.dark2:hover'
// selector
selector--group--small         = '.group.small'
selector--group--medium        = '.group.medium'
selector--group--large         = '.group.large'
// selector
selector--group--column        = '.group.column'
selector--group--row           = '.group.row'

// view
add-style(group               ) view(view--normal, view----------normal, view----------normal, view----------normal, view--normal)
add-style(group--light2       ) view(view--normal, view--light2--normal, view--light2--normal, view--light2--normal, view--normal)
add-style(group--light        ) view(view--normal, view--light---normal, view--light---normal, view--light---normal, view--normal)
add-style(group--gray         ) view(view--normal, view--gray----normal, view--gray----normal, view--gray----normal, view--normal)
add-style(group--dark         ) view(view--normal, view--dark----normal, view--dark----normal, view--dark----normal, view--normal)
add-style(group--dark2        ) view(view--normal, view--dark2---normal, view--dark2---normal, view--dark2---normal, view--normal)
flush()
// view
add-style(group----------hover) view(null,         view----------hover,  null,                 view----------hover,  null        )
add-style(group--light2--hover) view(null,         view--light2--hover,  null,                 view--light2--hover,  null        )
add-style(group--light---hover) view(null,         view--light---hover,  null,                 view--light---hover,  null        )
add-style(group--gray----hover) view(null,         view--gray----hover,  null,                 view--gray----hover,  null        )
add-style(group--dark----hover) view(null,         view--dark----hover,  null,                 view--dark----hover,  null        )
add-style(group--dark2---hover) view(null,         view--dark2---hover,  null,                 view--dark2---hover,  null        )
flush()

// layout
add-style(group               ) layout(null, auto, auto, (4px), (1px), (0px                ))
add-style(group--small        ) layout(null, auto, auto, (4px), (1px), (6px  6px  5px  5px ))
add-style(group--medium       ) layout(null, auto, auto, (4px), (1px), (12px 12px 10px 10px))
add-style(group--large        ) layout(null, auto, auto, (4px), (1px), (24px 24px 20px 20px))
flush()

// flex
add-style(group--column       ) flex(0, 1, auto, auto) flex2(column, flex-start, stretch)
add-style(group--row          ) flex(0, 1, auto, auto) flex2(row,    flex-start, stretch)
flush()
