@import "../Internal/__Theme"

// view
view--group                = create-view-skin(light, (view                view               ), (view                view))
view--group--light2        = create-view-skin(light, (view--light2        view--light2       ), (view--light2        view))
view--group--light         = create-view-skin(light, (view--light         view--light        ), (view--light         view))
view--group--gray          = create-view-skin(light, (view--gray          view--gray         ), (view--gray          view))
view--group--dark          = create-view-skin(light, (view--dark          view--dark         ), (view--dark          view))
view--group--dark2         = create-view-skin(light, (view--dark2         view--dark2        ), (view--dark2         view))
// view
view--group--hover         = create-view-skin(light, (view--hover         view--hover        ), (view--hover         view))
view--group--light2--hover = create-view-skin(light, (view--light2--hover view--light2--hover), (view--light2--hover view))
view--group--light--hover  = create-view-skin(light, (view--light--hover  view--light--hover ), (view--light--hover  view))
view--group--gray--hover   = create-view-skin(light, (view--gray--hover   view--gray--hover  ), (view--gray--hover   view))
view--group--dark--hover   = create-view-skin(light, (view--dark--hover   view--dark--hover  ), (view--dark--hover   view))
view--group--dark2--hover  = create-view-skin(light, (view--dark2--hover  view--dark2--hover ), (view--dark2--hover  view))

// layout
layout--group              = create-layout-skin(null, auto auto, (4px), (1px), (0px                ))
layout--group--small       = create-layout-skin(null, auto auto, (4px), (1px), (6px  6px  5px  5px ))
layout--group--medium      = create-layout-skin(null, auto auto, (4px), (1px), (12px 12px 10px 10px))
layout--group--large       = create-layout-skin(null, auto auto, (4px), (1px), (24px 24px 20px 20px))

// flex
flex--group--column        = create-flex(0, 1, auto, auto), create-flex2(column, flex-start, stretch)
flex--group--row           = create-flex(0, 1, auto, auto), create-flex2(row,    flex-start, stretch)

// group
.group
    add-skin1 group
    add-skin2 group
// group/view
.group
    &.light2
        add-skin1 group--light2
    &.light
        add-skin1 group--light
    &.gray
        add-skin1 group--gray
    &.dark
        add-skin1 group--dark
    &.dark2
        add-skin1 group--dark2
// group/view
.group:hover
    add-skin1 group--hover
    &.light2
        add-skin1 group--light2--hover
    &.light
        add-skin1 group--light--hover
    &.gray
        add-skin1 group--gray--hover
    &.dark
        add-skin1 group--dark--hover
    &.dark2
        add-skin1 group--dark2--hover
// group/layout
.group
    &.small
        add-skin2 group--small
    &.medium
        add-skin2 group--medium
    &.large
        add-skin2 group--large
// group/flex
.group
    &.column
        add-skin3 group--column
    &.row
        add-skin3 group--row
