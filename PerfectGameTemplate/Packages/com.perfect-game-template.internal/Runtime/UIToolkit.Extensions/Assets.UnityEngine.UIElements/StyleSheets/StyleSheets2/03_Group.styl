@import "../Internal/_Theme"

// selector
selector----------group        = '.group'
selector--light2--group        = '.group.light2'
selector--light---group        = '.group.light'
selector--gray----group        = '.group.gray'
selector--dark----group        = '.group.dark'
selector--dark2---group        = '.group.dark2'
// selector
selector----------group--hover = '.group:hover'
selector--light2--group--hover = '.group.light2:hover'
selector--light---group--hover = '.group.light:hover'
selector--gray----group--hover = '.group.gray:hover'
selector--dark----group--hover = '.group.dark:hover'
selector--dark2---group--hover = '.group.dark2:hover'
// selector
selector--small---group        = '.group.small'
selector--medium--group        = '.group.medium'
selector--large---group        = '.group.large'
// selector
selector--column--group        = '.group.column'
selector--row-----group        = '.group.row'

// view
add-style(        group       ) theme(        view---normal)
add-style(light2--group       ) theme(light2--view---normal)
add-style(light---group       ) theme(light---view---normal)
add-style(gray----group       ) theme(gray----view---normal)
add-style(dark----group       ) theme(dark----view---normal)
add-style(dark2---group       ) theme(dark2---view---normal)
flush()
// view
add-style(        group--hover) theme(        view--hover)
add-style(light2--group--hover) theme(light2--view--hover)
add-style(light---group--hover) theme(light---view--hover)
add-style(gray----group--hover) theme(gray----view--hover)
add-style(dark----group--hover) theme(dark----view--hover)
add-style(dark2---group--hover) theme(dark2---view--hover)
flush()

// layout
add-style(        group       ) layout(null, auto, auto, (4px), (1px), (0px                ))
add-style(small---group       ) layout(null, auto, auto, (4px), (1px), (6px  6px  5px  5px ))
add-style(medium--group       ) layout(null, auto, auto, (4px), (1px), (12px 12px 10px 10px))
add-style(large---group       ) layout(null, auto, auto, (4px), (1px), (24px 24px 20px 20px))
flush()

// flex
add-style(column--group       ) flex(0, 1, auto, auto) flex2(column, flex-start, stretch)
add-style(row-----group       ) flex(0, 1, auto, auto) flex2(row,    flex-start, stretch)
flush()
